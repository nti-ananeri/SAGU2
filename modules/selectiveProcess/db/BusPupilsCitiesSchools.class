/**
 * Class to manipulate the sprInscriptionReport table
 **/
class BusinessSelectiveProcessBusPupilsCitiesSchools extends Business
{

    /**
     * Make a connection to the database
     *
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'selectiveProcess' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * Report of inscriptions for course
     *
     * @param $selectiveProcessId (int): Selective process id
     *
     * @return (array): An array containing the search results
     **/
    public function pupilsByAlphabeticOrder($selectiveProcessId)
    {
        $args = array($selectiveProcessId);

        $sql = 'SELECT A.inscriptionId, 
                       B.personId, 
                       B.name, 
                       E.name, 
                       B.residentialPhone, 
                       C.institutionIdHs, 
                       D.name,
                       B.cityId
                  FROM sprInscription A 
       INNER JOIN ONLY basPhysicalPerson B 
                    ON (A.personId = B.personId) 
        LEFT JOIN ONLY basPhysicalPersonStudent C 
                    ON (A.personId = C.personId) 
        LEFT JOIN ONLY basLegalPerson D 
                    ON (C.institutionIdHs = D.personId) 
             LEFT JOIN basCity E 
                    ON (B.cityId = E.cityId) 
                 WHERE A.selectiveProcessId = ? 
              GROUP BY 1,2,3,4,5,6,7, B.cityId
              ORDER BY 3';

        $db = $this->getDatabase();

        $result = $db->query(SAGU::prepare($sql, $args));

        return $result;
    }

    public function pupilsByCity($selectiveProcessId)
    {
        $args = array($selectiveProcessId);

        $sql = "SELECT A.inscriptionId,
                       B.name,
                       B.cityId,
                       E.name,
                       B.residentialPhone,
                       D.name
                  FROM sprInscription A
        LEFT JOIN ONLY basPhysicalPerson B
                    ON (A.personId = B.personId)
        LEFT JOIN ONLY basPhysicalPersonStudent C
                    ON (A.personId = C.personId)
        LEFT JOIN ONLY basLegalPerson D
                    ON (C.institutionIdHs = D.personId)
             LEFT JOIN basCity E
                    ON (B.cityId = E.cityId)
                 WHERE A.selectiveProcessId = ?
              GROUP BY 1,2,3,4,5,6
              ORDER BY 4,2";

        $db = $this->getDatabase();

        $result = $db->query(SAGU::prepare($sql, $args));

        return $result;
    }

    public function pupilsBySchool($selectiveProcessId, $year = null)
    {
        $args = array($selectiveProcessId);

        $sql = "SELECT A.inscriptionId, 
                       B.personId, 
                       B.name, 
                       E.name, 
                       B.residentialPhone, 
                       C.institutionIdHs, 
                       D.name,
                       B.cityId 
                  FROM sprInscription A 
        LEFT JOIN ONLY basPhysicalPerson B 
                    ON (A.personId = B.personId) 
        LEFT JOIN ONLY basPhysicalPersonStudent C 
                    ON (A.personId = C.personId) 
        LEFT JOIN ONLY basLegalPerson D 
                    ON (C.institutionIdHs = D.personId) 
             LEFT JOIN basCity E 
                    ON (B.cityId = E.cityId) 
                 WHERE A.selectiveProcessId = ? ";

        if ($year != null)
        {
            $args[] = $year;
            $sql .= "AND C.yearHs = ? ";
        }

        $sql .= "GROUP BY 1,2,3,4,5,6,7,8 ORDER BY 7, 4, 3";

        $db = $this->getDatabase();

        $result = $db->query(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Report of inscriptions for sex
     *
     * @param $selectiveProcessId (int): Selective process id
     *
     * @return (array): An array containing the search results
     **/
    public function getInscriptionOptions($inscriptionId)
    {
        $args = array($inscriptionId);

        $sql = "SELECT A.inscriptionOptionId, 
                       A.courseOccurrenceId, 
                       A.optionNumber, 
                       B.courseId, 
                       C.shortName || ' / ' || getturnDescription(B.turnid) 
                  FROM sprInscriptionOption A
             LEFT JOIN sprCourseOccurrence B 
                    ON (A.courseOccurrenceId = B.courseOccurrenceId) 
             LEFT JOIN acdCourse C 
                    ON (B.courseId = C.courseId) 
                 WHERE A.inscriptionId = ? 
              GROUP BY 1,2,3,4,5 
              ORDER BY 3";

        $db = $this->getDatabase();

        $result = $db->query(SAGU::prepare($sql, $args));

        return $result;
    }

    /**
     * Report of inscriptions for city exam
     *
     * @param $selectiveProcessId (int): Selective process id
     *
     * @return (array): An array containing the search results
     **/
    public function inscriptionForCityExam($selectiveProcessId)
    {
       $args = array($selectiveProcessId);

       $sql = ' SELECT A.cityExam,
                       E.name,
                       C.courseId,
                       D.shortName,
                       count(A.inscriptionId)
                  FROM sprInscription A
             LEFT JOIN sprInscriptionOption B
                    ON (A.inscriptionId = B.inscriptionId)
             LEFT JOIN sprCourseOccurrence C
                    ON (B.courseOccurrenceId = C.courseOccurrenceId)
             LEFT JOIN acdCourse D
                    ON (C.courseId = D.courseId)
             LEFT JOIN basCity E
                    ON (E.cityId = A.cityExam)
                 WHERE A.selectiveProcessId = ?
                   AND B.optionNumber = 1
              GROUP BY A.cityExam, E.name, C.courseId, D.shortName
              ORDER BY E.name, D.shortName ';

        $db = $this->getDatabase();

        $result = $db->query(SAGU::prepare($sql, $args));

        return $result;
    }

