/**
 * Class to manipulate the sprLanguageOccurrence table
 **/
class BusinessSelectiveProcessBusLanguageOccurrence extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'selectiveProcess' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param $selectiveProcessId (integer): Primary key of the record to be retrieved
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listLanguageOccurrence($selectiveProcessId)
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT A.languageId,
                       B.description
                  FROM sprLanguageOccurrence A
            INNER JOIN sprLanguage B
                    ON ( A.languageId = B.languageId )
                   AND A.selectiveProcessId = ?
              ORDER BY B.description';

        if ( strlen((string)$selectiveProcessId)>0 )
        {
            $result = $db->query(SAGU::prepare($sql, $selectiveProcessId));
        }

        if ( !$result )
        {
            $result = array();
        }

        //$db->close();
        return $result;
    }

    /**
     * Return a specific record from the database
     *
     * @param $languageId (integer): Primary key of the record to be retrieved
     * @param $selectiveProcessId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getLanguageOccurrence($selectiveProcessId, $languageId)
    {

        $sql = 'SELECT A.selectiveProcessId,
                       C.description,
                       A.languageId,
                       B.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM sprLanguageOccurrence A
             LEFT JOIN sprLanguage B
                    ON (A.languageId         = B.languageId)
             LEFT JOIN sprSelectiveProcess C
                    ON (A.selectiveProcessId = C.selectiveProcessId)
                 WHERE A.selectiveProcessId  = ?
                   AND A.languageId          = ?';

        $args = array( $selectiveProcessId,
                       $languageId );

        $db     = $this->getDatabase();

        $result = $db->query(SAGU::prepare($sql, $args));
        //$db->close();

        $languageOccurrence = new SprLanguageOccurrence();

        list ( $languageOccurrence->selectiveProcessId,
               $languageOccurrence->selectiveProcessDescription,
               $languageOccurrence->languageId,
               $languageOccurrence->languageDescription,
               $languageOccurrence->userName,
               $languageOccurrence->dateTime,
               $languageOccurrence->ipAddress ) = $result[0];

        return $languageOccurrence; 
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchLanguageOccurrence($filters)
    {
        $sql = 'SELECT A.selectiveProcessId,
                       C.description,
                       A.languageId,
                       B.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM sprLanguageOccurrence A
             LEFT JOIN sprLanguage B
                    ON (A.languageId = B.languageId)
             LEFT JOIN sprSelectiveProcess C
                    ON (A.selectiveProcessId     = C.selectiveProcessId) ';

        if ( strlen((string)$filters->selectiveProcessId) > 0 )
        {
            $where .= ' AND A.selectiveProcessId ILIKE ?';
            $args[] = $filters->selectiveProcessId;
        }
        if ( strlen((string)$filters->languageId) > 0 )
        {
            $where .= ' AND A.languageId ILIKE ?';
            $args[] = $filters->languageId;
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY C.description';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertLanguageOccurrence($data)
    {
        $sql = 'INSERT INTO sprLanguageOccurrence
                            (selectiveProcessId,
                             languageId)
                     VALUES (?,?)';

        $args = array( $data->selectiveProcessId,
                       $data->languageId );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateLanguageOccurrence($data)
    {
        $sql = 'UPDATE sprLanguageOccurrence
                   SET selectiveProcessId = ?,
                       languageId         = ?
                 WHERE selectiveProcessId = ?
                   AND languageId         = ?';

        $args = array( $data->selectiveProcessId,
                       $data->languageId,
                       $data->selectiveProcessIdOld,
                       $data->languageIdOld );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $languageId (integer): Primary key of the record to be retrieved
     * @param $selectiveProcessId (integer): Primary key of the record to be retrieved
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteLanguageOccurrence($selectiveProcessId, $languageId)
    {
        $sql = 'DELETE FROM sprLanguageOccurrence
                      WHERE selectiveProcessId = ?
                        AND languageId         = ?';

        $args = array( $selectiveProcessId,
                       $languageId );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

}

