/**
 * Grid used by form to display search results
 **/
class GrdDiverseConsultationSelectiveProcess extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $home   = 'main';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array(
                          new MGridColumn( _M('Inscription id', $module),       'right', true, null, true, null, true ),
                          new MGridColumn( _M('Selective process id', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Course name', $module),           'left', true, null, true, null, true ),
                          new MGridColumn( _M('Turn', $module),         'left', true, null, true, null, true ),
                        );

        $opts = array('function'            => 'update',
                      'inscriptionId'       => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, 'main:register:inscription', null, $opts );


        $url = $MIOLO->getActionURL($module,"$home",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridDiverseConsultationSelectiveProcess' );

        $this->setIsScrollable();
        $this->setTitle(_M('Selective process', $module));

        $this->addActionUpdate( $href_edit );

        $this->eventHandler();

    }

}

?>
