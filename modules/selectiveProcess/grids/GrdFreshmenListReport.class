/**
 * Grid used by form to display search results
 **/
class GrdFreshmenListReport extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:report:freshmenListReport';
        $module = MIOLO::getCurrentModule();

        $columns = array(
                          new MGridColumn( _M('Inscription id', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Person id',      $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Person name',    $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Course',         $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Turn',           $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Is high school', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Is classified',  $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Position',       $module), 'left', true, null, true, null, true )
                        );

        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null, $opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridFreshmenListReport' );

        $this->setIsScrollable();
        $this->eventHandler();

    }

}

