/**
 * Grid used by form to display search results
 **/
class GrdPupilsCitiesSchoolsOp2 extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:candidatesCitiesSchools';

        $columns = array( new MGridColumn( _M('Name',        $module), 'left', false, '20%', true,  null, false ), 
                          new MGridColumn( _M('City', $module), 'left', false, '20%', $filters->optionId == 2 ? false : true,  null, false ),
                          new MGridColumn( _M('Phone',       $module), 'left', false, '10%', true,  null, false ),
                          new MGridColumn( _M('School', $module), 'left', false, '15%', $filters->optionId == 3 ? false : true, null, false ),
                          new MGridColumn( '1 '._M('Option', $module), 'left', false,  null, true,  null, false )
                        );

        for ($i = 2; $i <= $filters->optionsNumber; $i++)
        {
            $columns[] = new MGridColumn( $i . ' ' . _M('Option', $module), 'left', false, null, true, null, false);
        }

        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        
        parent::__construct( $filters->gridData, $columns, $url, 0, 0, 'gridPupilsCitiesSchools' );
        $this->eventHandler();
    }

}

