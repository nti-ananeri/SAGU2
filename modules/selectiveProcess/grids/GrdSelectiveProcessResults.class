/**
 * Grid used by form to display search results
 **/
class GrdSelectiveProcessResults extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');
        $action = MIOLO::getCurrentAction();
        $selectiveProcessId = MIOLO::_request('selectiveProcessId');
        $isClassified = MIOLO::_request('personId');
        $inscriptionId= MIOLO::_request('inscriptionId');

        $columns = array(
                          new MDataGridColumn('courseId', _M('Course id', $module), 'left', true, null, true, null, true ),
                          new MDataGridColumn('shortName', _M('Course name', $module), 'left', true, null, true, null, true ),
                          new MDataGridColumn( null ),
                          new MDataGridColumn('campus', _M('Unit', $module), 'left', true, null, true, null, true ),
                          new MDataGridColumn('isClassified', _M('Classified', $module), 'center', true, null, true, null, true ),
                          new MDataGridColumn('percIsClassified', '%', 'center', true, null, true, null, true ),
                          new MDataGridColumn('surplus', _M('Surplus', $module), 'center', true, null, true, null, true ),
                          new MDataGridColumn('percSurplus', '%', 'center', true, null, true, null, true ),
                          new MDataGridColumn('desclassified', _M('Desclassified', $module), 'center', true, null, true, null, true ),
                          new MDataGridColumn('desclassified', '%', 'center', true, null, true, null, true ),
                          new MDataGridColumn('total', _M('Total', $module), 'center', true, null, true, null, true ),
                          new MDataGridColumn('total', '%', 'center', true, null, true, null, true ),
                        );

        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, null, 0, 'gridSelectiveProcessResults' );

        $this->setIsScrollable();
        $this->eventHandler();

    }

}

