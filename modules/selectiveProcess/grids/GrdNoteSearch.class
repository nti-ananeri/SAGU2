/**
 * Grid used by form to display search results
 **/
class GrdNoteSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $home   = 'main:register:note';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Inscriprion id', $module),       'left', true, null, false, null, true ),
                          new MGridColumn( _M('Exam occurrence id', $module),   'left', true, null, false, null, true ),
                          new MGridColumn( _M('Selective Process id', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Person', $module),            'left', true, null, true, null, true ),
//                           new MGridColumn( _M('Person name', $module),          'left', true, null, true, null, true ),
                          new MgridColumn( _M('Exam description', $module),     'left', true, null, true, null, true ),
                          new MGridColumn( _M('Note', $module),                 'left', true, null, true, null, true )
                        );

        $opts = array('function'           => 'update',
                      'inscriptionId'      => '%0%',
                      'selectiveProcessId' => '%2%',
                      'notes'=>true);

        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridNote' );

        $this->setIsScrollable();

        $this->setRowMethod($this, 'myRowMethod');

        $this->addActionUpdate( $href_edit );

        $this->eventHandler();
    }

    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        if ( strlen((string)$row[0]) > 0 )
        {
            $actions[0]->enabled = true;
        }
        else
        {
            $actions[0]->enabled = false;
        }
    }
}

