/**
 * Grid used by form to display search results
 **/
class GrdStatisticForSpecialNecessity extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO               = MIOLO::getInstance();
        $module              = MIOLO::getCurrentModule();
        $action              = MIOLO::getCurrentAction();
        $selectiveProcessId  = MIOLO::_request('selectiveProcessId');
        $reportOption        = MIOLO::_request('reportOption');

        $returnData = urlencode(serialize(array('selectiveProcessId'=>$selectiveProcessId, 'reportOption'=>$reportOption, 'event'=>'btnGenerate_click')));
        $opts =  array('optionNumber'=>'5', 
                       'selectiveProcessId'=>$selectiveProcessId, 
                       'returnTo'=>$action, 
                       'returnData'=>$returnData, 
                       'specialNecessityId'=>'#0#');
        $href = $MIOLO->getActionURL($module, 'main:report:listInscriptionBySpecialNecessity', null, $opts);

        $columns = array( new MDataGridColumn('necessitySpecialId', _M('Special necessity id', $module), 'left', false, '', false),
                          new MDataGridColumn('necessitySpecial',   _M('Special necessity',    $module), 'left', true,  '', true),
                          new MGridHyperlink(                       _M('Pupils total',         $module), $href,  '',    true),
                        );

        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, null, 0, 'gridStatisticForSpecialNecessity' );
        $this->setTitle( _M('Statistic by special necessity', $module));
        $this->setClose(null);
        $this->setIsScrollable();
        $this->eventHandler();
    }
}

