/**
 * Grid used by form to display search results
 **/
class GrdListInscriptionByCityExamSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:report:listInscriptionByCityExam';
        $module = MIOLO::_request('module');

        $optionReport = unserialize($filters->returnData);

        $columns = array( new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Person id', $module),        'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Person name', $module),      'left', true, null, true, null, true ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Residential phone', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Work phone', $module),        'left', true, null, true, null, true ),
                          new MGridColumn( _M('Cell phone', $module),        'left', true, null, true, null, true ),
                        );
    
            // this foreach is necessary until the getActionURL function is
            // able to handle an object parameter
            unset($opts);
            foreach ( $filters as $k => $v )
            {
                if ($k == 'returnData')
                {
                    $v = urlencode($v);
                }
                $opts[$k] = $v;
            }

        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, 0, 0, 'GrdListInscriptionByCityExamSearch' );

        $this->setIsScrollable();

        $this->eventHandler();
}
}

