/**
 * Grid used by form to display search results
 **/
class GrdReserveRoom extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:process:reserveRoom';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array(
                          new MGridColumn( _M('City exam', $module),         'left', true, null, true, null, true ),
                          new MGridColumn( _M('Room', $module),              'right', true, null, true, null, true ),
                          new MGridColumn( _M('Build', $module),             'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Special necessity', $module), 'left',  true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Language', $module),          'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Is high school', $module),    'left',  true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Amount', $module),            'right',  true, null, true, null, true ),
                        );


        $url = $MIOLO->getActionURL($module,"$home");
        parent::__construct( null, $columns, $url, 0, 0, 'gridReserveRoom' );

        $this->setIsScrollable();

        $this->eventHandler();

    }

}

