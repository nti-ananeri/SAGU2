/**
 * Grid used by form to display search results
 **/
class GrdStatisticForHighSchool extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array(
                        new MDataGridColumn('isHighSchool', _M('Is high school', $module), 'left', true, '', true),
                        new MDataGridColumn('inscriptions', _M('Inscriptions', $module), 'center', true, '', true)
                        );

        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, null, 0, 'gridStatisticForHighSchool' );
        $this->setTitle( _M('Statistic by language', $module));
        $this->setIsScrollable();
        $this->eventHandler();

    }

}

