/**
 * Grid used by form to display search results
 **/
class GrdOtherListingsClassifiedB extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');
        $action = MIOLO::getCurrentAction();
        $selectiveProcessId = MIOLO::_request('selectiveProcessId');
        $reportOption = MIOLO::_request('reportOption');
        $isClassified = MIOLO::_request('isClassified');
        $inscriptionId= MIOLO::_request('inscriptionId');
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array(
                        new MDataGridColumn('inscriptionId', _M('Inscription id', $module),       'left', true, '', true),
                        new MDataGridColumn('name', _M('Candidate', $module),                     'left', true, '', true),
                        new MDataGridColumn('residentialPhone', _M('Residential Phone', $module), 'left', true, '', true),
                        new MDataGridColumn('workPhone', _M('Work Phone', $module),               'left', true, '', true),
                        new MDataGridColumn('cellPhone', _M('Cell Phone', $module),               'left', true, '', true),
                        new MDataGridColumn('firstOption', _M('First option', $module),           'left', true, '', true),
                        new MDataGridColumn('totalPoints', _M('Total points', $module),           'left', true, '', true)
                        );


        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, null, 0, 'gridInscriptionByRoom' );
        $this->setTitle( _M('Inscriptions by room', $module));
        $this->setIsScrollable();
        $this->eventHandler();
    }

}

