/**
 * Grid used by form to display search results
 **/
class GrdPupilsCitiesSchoolsOp1 extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:candidatesCitiesSchools';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Name',   $module), 'left', true, null, true, null, false ), 
                          new MGridColumn( _M('City',   $module), 'left', true, null, true, null, false ),
                          new MGridColumn( _M('Phone',  $module), 'left', true, null, true, null, false ),
	            	  new MGridColumn( _M('School', $module), 'left', true, null, true, null, false )
                        );

        $ii = 1;
        for ($i = 0; $i < $filters->optionsNumber; $i++)
        {
            $ii += $i;
            $columns[] = new MGridColumn( $ii . ' ' . _M('Option', $module), 'left', true, null, true, null, false);
        }

        $opts = array('event' => 'btnGenerate_click');


        $url = $MIOLO->getActionURL( $module, $home, null, $opts );

        parent::__construct( $filters->gridData, $columns, $url, LISTING_NREGS, 0, 'gridPupilsCitiesSchools' );
        $this->setIsScrollable();
        $this->eventHandler();
    }

}

