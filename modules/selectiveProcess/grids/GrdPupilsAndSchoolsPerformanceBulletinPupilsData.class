/**
 * Grid used by form to display search results
 **/
class GrdPupilsAndSchoolsPerformanceBulletinPupilsData extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');
        $action = MIOLO::getCurrentAction();
        $selectiveProcessId = MIOLO::_request('selectiveProcessId');
        $isClassified = MIOLO::_request('personId');
        $inscriptionId= MIOLO::_request('inscriptionId');

        $columns = array(
                         new MDataGridColumn('personId',           _M('Person id',         $module), 'left', true, null, true, null,  true ),
                         new MDataGridColumn('name',               _M('Name',              $module), 'left', true, null, true, null,  true ),
                         new MDataGridColumn('courseOccurrenceId', _M('Course name',       $module), 'left', true, null, true, null,  true ),
                         new MDataGridColumn('unitId',             _M('Unit id',           $module), 'left', true, null, false, null, true ),
                         new MDataGridColumn('courseId',           _M('Course id',         $module), 'left', true, null, false, null, true ),
                         new MDataGridColumn('courseVersion',      _M('Course version',    $module), 'left', true, null, false, null, true ),
                         new MDataGridColumn('residentialphone',   _M('Residential Phone', $module), 'left', true, null, true,  null, true ),
                         new MDataGridColumn('workphone',          _M('Work Phone',        $module), 'left', true, null, true,  null, true ),
                         new MDataGridColumn('cellphone',          _M('Cell Phone',        $module), 'left', true, null, true,  null, true ),
                         new MDataGridColumn('totalPoints',        _M('Total points',      $module), 'left', true, null, true,  null, true ),
                         new MDataGridColumn('isClassified',       _M('Was classified',    $module), 'left', true, null, true,  array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                         new MDataGridColumn('unit',               _M('Unit',              $module), 'left', true, null,  true, null, true ),

                        );

        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, 0, 0, 'gridPupilsAndSchoolsPerformanceBulletinPupilsData' );

        $this->setIsScrollable();
        $this->eventHandler();

    }

}

