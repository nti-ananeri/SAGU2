/**
 * Grid used by form to display search results
 **/
class GrdStatisticForSelectiveProcess extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');

        $columns = array( new MDataGridColumn(null),
                          new MDataGridColumn('selectiveProcessType', _M('Selective process type', $module), 'left',  true, '', true),
                          new MDataGridColumn('inscriptions',         _M('Inscriptions',           $module), 'right', true, '', true)
                        );

        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, null, 0, 'gridStatisticForSelectiveProcess' );
        $this->setTitle(_M('Statistic by type of ingression', $module));
        $this->setClose(null);
        $this->setIsScrollable();
        $this->eventHandler();
    }
}
