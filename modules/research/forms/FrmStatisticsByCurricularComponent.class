/**
 * Form to manipulate a selectiveProcessOccurrence
 **/
class FrmStatisticsByCurricularComponent extends MForm
{
    var $formId;
    /**
     * Class constructor
     **/
    function __construct()
    {
        $MIOLO    = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        parent::__construct(_M('Statistics by curricular component',$module));

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        set_time_limit(0);

        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');
        $event    = MIOLO::_request('event');

        if ( is_null($this->getFormValue('periodId')) || strlen((string)$this->getFormValue('periodId')) == 0 )
        {
            $periodIdValue = CURRENT_PERIOD_ID;
        }
        else
        {
            $periodIdValue = $this->getFormValue('periodId');
        }

        $businessPeriod = $MIOLO->getBusiness('academic','BusPeriod');
        $periodId       = new MSelection('periodId', $periodIdValue, _M('Period','academic'), $businessPeriod->listPeriod(), true );
        $periodId->SetAutoPostback(true);
        $fields[]       = $periodId;

        if ( strlen((string)$periodIdValue)>0 )
        {
            $businessForm = $MIOLO->getBusiness('research','BusForm');
            $formId       = new MSelection('formId', $this->getFormValue('formId'), _M('Form','research'), $businessForm->listForm(), true );
            $formId->SetAutoPostback(true);
            $fields[]     = $formId;
        }

        if ( strlen((string)$this->getFormValue('formId'))>0 )
        {
            $opts[] = new MOption('optPdf', 'pdf', 'pdf', false);
            $opts[] = new MOption('optCsv', 'csv', 'csv', false);

            $radFileTypeLabel = new MText('radFileTypeLabel', _M('File type','academic') . ':');
            $radFileTypeLabel->setWidth(FIELD_CONTAINER_SIZE);
            $radFileTypeLabel->setClass('m-caption m-caption-required');

            $radFileType = new MRadioButtonGroup('radFileType', '', $opts, $this->getFormValue('radOption', $this->radOption->value), '', 'horizontal', '');
            $radFileType->SetAutoPostback(true);
            $radFileType->setShowLabel(false);

            $hctFileType = new MHContainer('hctFileType', array($radFileTypeLabel, $radFileType));
            $hctFileType->setShowLabel(false);
            $fields[]    = $hctFileType;
        }

        $fields[] = new Separator('');

        $this->setFields($fields);
        //$this->setValidators($validators);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        $this->setShowPostButton(false);
        $this->setClose($MIOLO->getActionURL($module, substr($action, 0, strrpos($action, ':'))));

        if ( $this->getFormValue('radFileType') == 'pdf' )
        {
            if ( strlen((string)$this->getFormValue('formId'))>0 )
            {
                $busTotal = $MIOLO->getBusiness('research','BusInstitutionalEvaluation');
                $data     = $busTotal->getStatisticsByCurricularComponent( $this->getFormValue('formId'), $this->getFormValue('periodId'));

                if ( count($data)>0 )
                {
                    $MIOLO->getClass($module, 'RptStatisticsByCurricularComponent');
                    new RptStatisticsByCurricularComponent($data);
                }           
            }
        }
        elseif ( $this->getFormValue('radFileType') == 'csv' )
        {
            if ( strlen((string)$this->getFormValue('formId'))>0 )
            {
                $busTotal = $MIOLO->getBusiness('research','BusInstitutionalEvaluation');
                $data     = $busTotal->getStatisticsByCurricularComponent( $this->getFormValue('formId'), $this->getFormValue('periodId'));

                if ( count($data)>0 )
                {
                    $MIOLO->getClass($module, 'RptStatisticsByCurricularComponentCsv');
                    new RptStatisticsByCurricularComponentCsv($data);
                }           
            }
        }
    }

}

