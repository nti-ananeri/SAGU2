/**
 * Form to search the basCountry table
 */
class FrmQuestionSearch extends MForm
{
    private $module;
    private $home;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;
        
        $this->home = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');
        
        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Question', $this->home, 'question-16x16.png', true);
        }
        //fim favoritos
        
        $fields[] = $toolBar;

        $questionIdS = new MTextField('questionIdS', $this->questionIdS->value, _M('Question Id', $module), FIELD_ID_SIZE);
        $questionIdS->setJsHint(_M('Enter the question Id', $module));
        $fields[]  = $questionIdS;

        $questionDescriptionS = new MTextField('questionDescriptionS', $this->questionDescriptionS->value, _M('Description category', $module), FIELD_DESCRIPTION_SIZE);
        $questionDescriptionS->setJsHint(_M('Enter description of category', $module));
        $fields[] = $questionDescriptionS;

        $isMultiLabelS = new MText('isMultiLabelS', _M('Is multi',$module) . '?');
        $isMultiLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $flds[] = $isMultiLabelS;
       
        $isMultiOptions = SAGU::listYesNo(1);

        $isMultiS = new MRadioButtonGroup('isMultiS', '', $isMultiOptions, $this->getFormValue('isMultiS', $data->isMultiS), null, 'horizontal');
        $isMultiS->setShowLabel(false);
        $flds[] = $isMultiS;

        $hctIsMultiS = new MHContainer('hctIsMultiS', $flds);
        $hctIsMultiS->setShowLabel(false);
        $fields[]  = $hctIsMultiS;
        unset($flds);

        $isTextTypeLabel = new MText('texTypeLabel', _M('Is text',$module) . '?');
        $isTextTypeLabel->setWidth(FIELD_CONTAINER_SIZE);
        $flds[] = $isTextTypeLabel;
       
        $isTextTypeOptions = SAGU::listYesNo(1);
	
        $isTextType = new MRadioButtonGroup('textTypeS', '', $isTextTypeOptions, $this->getFormValue('textTypeS', $data->textTypeS), null, 'horizontal');
        $isTextType->setShowLabel(false);
        $flds[] = $isTextType;
        
        $hctIsTextType = new MHContainer('hctTextType', $flds);
        $hctIsTextType->setShowLabel(false);
        $fields[]  = $hctIsTextType;
        unset($flds); 
 
        
        

        $business = $MIOLO->GetBusiness($module, 'BusForm');
        $fields[] = new MComboBox('formIdS', $this->getFormValue('formIdS', $data->formIdS), _M('Form',$module), $business->listForm());

        $business = $MIOLO->GetBusiness($module, 'BusQuestionCategory');
        $fields[] = new MComboBox('questionCategoryIdS', $this->getFormValue('questionCategoryIdS', $data->questionCategoryIdS), _M('Question category id',$module), $business->listQuestionCategory());

        $this->setFields($fields);

        //trocar esse btnsearch por um que faz o linkbutton
        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);


        // get filters values
        $filters->questionId                 = $this->questionIdS->value;
        $filters->description                = $this->questionDescriptionS->value;
        $filters->isMulti                    = $this->isMultiS->value;
        $filters->formId                     = $this->formIdS->value;
        $filters->questionCategoryId         = $this->questionCategoryIdS->value;
	$filters->textType		     = $this->textTypeS->value;
        
    	$grdResults = $MIOLO->getUI()->getGrid($module,'GrdQuestionSearch', $filters);
        $business   = $this->manager->getBusiness($module,'BusQuestion');
        $data       = $business->searchQuestion($filters);
        $grdResults->setData($data);
        $this->addField($grdResults);
        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.questionIdS.focus();');
        }
        $this->setLabelWIdth(FIELD_LABEL_SIZE);        

    }
}

?>
