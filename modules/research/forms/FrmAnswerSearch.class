/**
 * Form to search the rshAnswer table
 */
class FrmAnswerSearch extends MForm
{
    private $module;
    private $home;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;
        
        $this->home = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');
        
        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Answer', $this->home, 'answer-16x16.png', true);
        }
        //fim favoritos
        
        $fields[] = $toolBar;

        $answerIdS = new MTextField('answerIdS', $this->answerIdS->value, _M('Answer Id', $module), FIELD_ID_SIZE);
        $answerIdS->setJsHint(_M('Enter the answer Id', $module));
        $fields[]  = $answerIdS;

        $personIdLabelS = new MText('personIdLabelS', _M('Person id', $module) . ':');
        $personIdLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $flds[] = $personIdLabelS;

        $personIdS = new MLookupTextField('personIdS', $this->personIdS->value, '', FIELD_LOOKUPFIELD_SIZE, null, null, 'personNameS', 'basic', 'PhysicalPerson', null, null, true);
        $personIdS->setJsHint(_M('Enter the person id',$module));
        $flds[] = $personIdS;

        $personNameS = new MTextField('personNameS', $this->personNameS->value, '', FIELD_DESCRIPTION_SIZE);
        $personNameS->setJsHint(_M('Enter the person name',$module));
        $flds[] = $personNameS;

        $hctPersonS = new MHContainer('hctPersonS', $flds);
        $hctPersonS->setShowLabel(false);
        $fields[] = $hctPersonS;
        unset($flds);
        
        $business = $MIOLO->GetBusiness($module, 'BusQuestion');
        $questionIdS = new MComboBox('questionIdS', $this->getFormValue('questionIdS', $data->questionIdS), _M('Question',$module), $business->listQuestion());
        $fields[] = $questionIdS;

        $this->setFields($fields);

        //trocar esse btnsearch por um que faz o linkbutton
        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);


        // get filters values
        $filters->answerId    = $this->answerIdS->value;
        $filters->personId    = $this->personIdS->value;
        $filters->personName  = $this->personNameS->value;
        $filters->questionId  = $this->questionIdS->value;
        
    	$grdResults = $MIOLO->getUI()->getGrid($module,'GrdAnswerSearch', $filters);
        $business   = $this->manager->getBusiness($module,'BusAnswer');
        $data       = $business->searchAnswer($filters);
        $grdResults->setData($data);
        $this->addField($grdResults);
        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.answerIdS.focus();');
        }
        $this->setLabelWIdth(FIELD_LABEL_SIZE);        

    }
}

