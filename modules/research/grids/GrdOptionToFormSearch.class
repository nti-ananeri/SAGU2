/**
 * Grid used by form to display search results
 **/
class GrdOptionToFormSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:option';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Option id'            , $module),  'center', true, null, false, null, true ),
                          new MGridColumn( _M('Question id'          , $module),  'center', true, null, false, null, true ),
                          new MGridColumn( _M('Question description' , $module),  'left',   true, null, false, null, true ),
                          new MGridColumn( _M('Option description'   , $module),  'left',   true, null, true, null, true )
                        );

        $opts = array('function' => 'update',
                      'optionId' => '%0%'
                      );

        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        $opts = array('function' => 'delete',
                      'optionId' => '%0%',
                      'event'    => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
//         unset($opts);
//         foreach ( $filters as $k => $v )
//         {
//             $opts[$k] = $v;
//         }
        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'GridOptionSearch' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

