/**
 * Grid used by form to display search results
 **/
class GrdStatistics extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();

        $columns = array( 
                          new MGridColumn( _M('Course id', 'academic'),            'right',  true, null, true, null, false ),
                          new MGridColumn( _M('Course version', 'academic'),       'left',   true, null, true, null, false ),
                          new MGridColumn( _M('Course', 'academic'),               'left',   true, null, true, null, false ),
                          new MGridColumn( _M('Turn id', 'academic'),              'right',  true, null, true, null, false ),
                          new MGridColumn( _M('Turn', 'academic'),                 'left',   true, null, true, null, false ),
                          new MGridColumn( _M('Unit id', 'academic'),              'right',  true, null, true, null, false ),
                          new MGridColumn( _M('Unit', 'academic'),                 'left',   true, null, true, null, false ),
                          new MGridColumn( _M('Total of pupils', 'research'),      'center', true, null, true, null, false ),
                          new MGridColumn( _M('Percentual done', 'research'), 'center', true, null, true, null, false ),
                        );


        parent::__construct( null, $columns, null, null, 0, 'GrdStatistics' );

        $this->setIsScrollable();
        $this->eventHandler();

    }

}

