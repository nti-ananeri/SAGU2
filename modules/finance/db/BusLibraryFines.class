/**
 * Class to manipulate the finPolicy table
 **/
class BusinessFinanceBusLibraryFines extends Business
{

    /**
     * Make a connection to gnuteca database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic', 'sagu');
        $module = 'gnuteca';

        return $MIOLO->getDatabase($module);
    }


    /**
     * Fines
     *
     * @param $personId (string): person id
     *
     * @return (boolean): An array with data
     *
     **/
    public function finesFromPerson($personId)
    {
        $module = MIOLO::getCurrentModule();
        $MIOLO  = MIOLO::getInstance();

        $sql = 'SELECT \'Generate invoice\',
                       codigodamulta, 
                       codigodoemprestimo, 
                       TO_CHAR(datahora,\'' . MASK_DATE . '\'),
                       foipaga,
                       ROUND(valor, ' . REAL_ROUND_VALUE . ')
                FROM gtc_multa 
                WHERE codigodapessoa = ? and 
                      foipaga is false and 
                      foiabonada is false and 
                      valor < 1000000';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $personId));
      
        if ( is_array($result) )
        {
            foreach ( $result as $key => $line )
            {
                $result[$key][2] = _M('Fine referring loan', $module) . ' ' . $line[2];
            }
        }
        
        return $result;
    }


}

