/**
 * Class to manipulate the finCollectionType table
 **/
class BusinessFinanceBusCollectionType extends MBusiness
{
    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'finance' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listCollectionType()
    {
      $sql = 'SELECT A.collectionTypeId,
                     A.description
               FROM finCollectionType A
               ORDER BY 1, 2';

      $db = $this->getDatabase();

      $result = $db->query($sql);
      return $result;
    }

    /**
     * Return a specific record from the database
     *
     * @param $collectionTypeId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getCollectionType($collectionTypeId)
    {
        $sql = 'SELECT A.collectionTypeId,
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\')
                  FROM finCollectionType A
                 WHERE A.collectionTypeId = ?';

        $db = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql,$collectionTypeId));
        //$db->close();

        $collectionType = new FinCollectionType();

        list ( $collectionType->collectionTypeId,
               $collectionType->description,
               $collectionType->userName,
               $collectionType->dateTime ) = $result[0];

        return $collectionType; 
    }

    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @last modification: William Prigol Lopes [william@solis.coop.br]
     *                     Make the partial words capable to find with % in the varchar fields
     *
     *
     * @return (array): An array containing the search results
     **/
    public function searchCollectionType($data)
    {
        $sql = 'SELECT A.collectionTypeId,
                       A.description
                  FROM finCollectionType A';

        $where = '';
        unset($args);
        if ( strlen((string)$data->collectionTypeId) > 0 )
        {
            $where .= '    AND   A.collectionTypeId = ?';
            $args[] = $data->collectionTypeId;
        }
        if ( strlen((string)$data->description) > 0 )
        {
            $where .= '    AND   A.description ILIKE ?';
            $args[] = $data->description.'%';
        }

        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where,8) .
                    ' ORDER BY A.description';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql,$args));
//            $db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertCollectionType($data)
    {
        $db = $this->getDatabase();

        $sql = 'INSERT INTO finCollectionType
                            (description)
                     VALUES (?)';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $data->description));

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateCollectionType($data)
    {
        $sql = 'UPDATE finCollectionType
                   SET description = ?
                 WHERE collectionTypeId  = ?';

        $args = array($data->description,
                      $data->collectionTypeId);

        $db = $this->getDatabase();
        $sqls = SAGU::prepare($sql,$args);
        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }
        //$this->checkError($db);
        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $collectionTypeId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteCollectionType($collectionTypeId)
    {
        $sql = 'DELETE FROM finCollectionType
                      WHERE collectionTypeId = ?';

        $args = array($collectionTypeId);

        $db = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql,$args));
        //$this->checkError($db);
        //$db->close();

        return $result;
    }

}

