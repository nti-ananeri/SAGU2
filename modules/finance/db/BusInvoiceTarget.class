        $invoiceTarget = $this->getInvoiceTarget($data->contractId);
        
        if(!is_object($invoiceTarget))
        {
            $sql = 'INSERT INTO finInvoiceTarget
                                (contractId,
                                 isActive)
                         VALUES (?, ?)';

            $db     = $this->getDatabase();

            $args = array($data->contractId,
                          $data->isActive);

            $result = $db->execute(SAGU::prepare($sql, $args));

        }
        else
