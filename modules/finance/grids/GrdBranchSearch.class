/**
 * Grid used by form to display search results
 **/
class GrdBranchSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $home   = MIOLO::getCurrentAction();
        $module = MIOLO::getCurrentModule();

        $columns = array( new MGridColumn( _M('Bank id',                $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Banco',                  $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Branch number',          $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Branch number digit',    $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('City id',                'basic'), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('City',                   'basic'), 'left',  true, null, true, null, true )
                        );

        $opts = array('function'=>'update',
                      'bankId'=>'%0%',
                      'branchNumber'=>'%2%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'bankId'=>'%0%',
                      'branchNumber'=>'%2%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridBranch' );

        $this->setIsScrollable();
        $this->addActionUpdate($href_edit);
        $this->addActionDelete($href_delete);
        $this->eventHandler();

    }

}

?>
