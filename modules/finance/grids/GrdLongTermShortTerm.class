/**
 * Grid used by form to display search results
 **/
class GrdLongTermShortTerm extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( ),
                          new MGridColumn( ),
                          new MGridColumn( _M('Person id',     $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Person name',   $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Emission date', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Maturity date', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Value',         $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Balance',       $module), 'right', true, null, true, null, true )
                        );
        $action_ = 'main';

        $opts = array('function'=>'oldInvoice',
                      'invoiceId'=>'%0%',
                      'event'=>'btnSearch:click');
        $hrefOldInvoice = $MIOLO->getActionURL( $module, $action_, null, $opts );
      
        $opts = array('function'=>'newInvoice',
                      'invoiceId'=>'%1%',
                      'event'=>'btnSearch:click');
        $hrefNewInvoice = $MIOLO->getActionURL( $module, $action_, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
    //    $opts = array('event'=>'submit_button_click');
        
        $url = $MIOLO->getActionURL( $module, "$action", null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridLongTermShortTerm' );
        $this->setIsScrollable();

        $this->addActionText(' [%0%] ', ' [%0%] ', $hrefOldInvoice);


        $this->eventHandler();
    }

    /**
     * Set the new invoice action
     *
     * @param: No parameters needed
     *
     * @return: null
     *
     */
    public function setNewInvoiceAction()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $action_ = 'main';

        $opts = array('function'=>'newInvoice',
                      'invoiceId'=>'%1%',
                      'event'=>'btnSearch:click');
        $hrefNewInvoice = $MIOLO->getActionURL( $module, $action_, null, $opts );
        $this->addActionText(' [%1%] ', ' [%1%] ', $hrefNewInvoice);
    }
}
