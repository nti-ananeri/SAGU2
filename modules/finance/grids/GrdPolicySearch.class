/**
 * Grid used by form to display search results
 **/
class GrdPolicySearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:policy';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Id', $module),                   'right', true, null, true, null, true ),
                          new MGridColumn( _M('Description', $module),                 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Bank operation type', $module),      'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Operation id', $module),                'right', true, null, true, null, true ),
                          new MGridColumn( _M('Operation description', $module),       'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Collection type id', $module),          'right', true, null, false, null, true ),
                          new MGridColumn( _M('Collection type', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Monthly interest', $module),    'right', true, null, true, null, true ),
                          new MGridColumn( _M('Is monthly interest in percent', $module),    'right', true, null, false, array(DB_TRUE => _M('Yes', $module), DB_FALSE => _M('No', $module)), true ),
                          new MGridColumn( _M('Fine', $module),                'right', true, null, true, null, true ),
                          new MGridColumn( _M('Is fine in percent', $module),                'right', true, null, false, array(DB_TRUE => _M('Yes', $module), DB_FALSE => _M('No', $module)), true ),
                          new MGridColumn( _M('Use fine in value', $module),                'right', true, null, false, array(DB_TRUE => _M('Yes', $module), DB_FALSE => _M('No', $module)), true ),
                          new MGridColumn( _M('Days to interest', $module),            'right', true, null, true, null, true ),
                          new MGridColumn( _M('Days to fine', $module),                'right', true, null, true, null, true ),
                          new MGridColumn( _M('Days to discount', $module),            'right', true, null, true, null, true ),
                          new MGridColumn( _M('Days to protest', $module),             'right', true, null, true, null, true ),
                          new MGridColumn( _M('Discount', $module),            'right', true, null, true, null, true ),
                          new MGridColumn( _M('Is discount in percent', $module),            'right', true, null, false, array(DB_TRUE => _M('Yes', $module), DB_FALSE => _M('No', $module)), true ),
                          new MGridColumn( _M('Bank tax value', $module),              'right', true, null, true, null, true ),
                          new MGridColumn( _M('Is extinct', $module), 'right', true, null, true, array(DB_TRUE => _M('Yes', $module), DB_FALSE => _M('No', $module) ), true )
                        );

        $opts = array('function'=>'update',
                      'policyId'=>'%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'policyId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridPolicy' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

?>
