/**
 * Grid used by form to display search results
 **/
class GrdIncomeForecastGeneration extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home    = 'main:process:incomeForecastGenerationCourse';
        $module  = MIOLO::_request('module');
        $columns = array(
                          new MGridColumn( _M('Learning period',              $module), 'right', true, null, true, null, false),
                          new MGridColumn( _M('Enroll summaries to process',  $module), 'right', true, null, true, null, false),
                          new MGridColumn( _M('Course',                       $module), 'left',  true, null, true, null, false),
                          new MGridColumn( _M('Unit',                         $module), 'left',  true, null, true, null, false),
                          new MGridColumn( _M('Turn',                         $module), 'left',  true, null, true, null, false)
			);

        unset($opts);

        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, null, 0, 'gridIncomeForecastGeneration' );
        $this->addActionSelect();
        $this->setIsScrollable(true, '99%');
        $this->eventHandler();
    }
}
