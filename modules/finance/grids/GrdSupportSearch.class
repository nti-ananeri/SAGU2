/**
 * Grid used by form to display search results
 **/
class GrdSupportSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:incentiveType:support';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                          new MGridColumn( _M('Incentive type id', $module),            'right', true, null, true, null, true ),
                          new MGridColumn( _M('Incentive type description', $module),   'left', true, null, true, null, true ),
                          new MGridColumn( _M('Operation id', $module),                 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Operation description', $module),        'left', true, null, true, null, true ),
                          new MGridColumn( _M('Need adjust authorization', $module),    'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Send invoices', $module),                'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Generate credits', $module),             'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Account scheme id', $module),            'left', true, null, true, null, true ),
                          new MGridColumn( _M('Collection operation id', $module),      'left', true, null, true, null, true ),
                          new MGridColumn( _M('Is extinct', $module),                   'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true )                          
                         );

        $opts = array('function'=>'update',
                      'incentiveTypeId'=>'%0%'
                     );
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
       
        $opts = array('function'=>'delete',
                      'incentiveTypeId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        
        $url = $MIOLO->getActionURL( $module, $home, null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridSupport' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

