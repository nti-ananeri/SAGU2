/**
 * Grid used by form to display search results
 **/
class GrdBankAccountContractSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:bank:bankAccountContract';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Bank contract id', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Bank account id', $module), 'right', true, null, false, null, true ),
                          new MGridColumn( _M('Description',$module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Bank account',$module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Account number',$module), 'left', true, null, true, null, true ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Bank', $module), 'left', true, null, true, null, true ),
                          /*new MGridColumn( _M('Bank account id', $module), 'left', true, null, false, null, true ),
                          new MGridColumn( _M('Branch number', $module), 'left', true, null, true, null, true ),
						  new MGridColumn( _M('Account number', $module),'left', true, null, true, null, true ),
                          new MGridColumn( _M('Contract', $module),        'left', true, null, true, null, true ),
                          new MGridColumn( _M('Collection', $module),    'left', true, null, true, null, true ),
                          new MGridColumn( _M('Wallet', $module),        'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Variation', $module),     'left',  true, null, true, null, true )*/

                        );

        $opts = array('function'       => 'update',
                      'bankContractId' => '%0%',
                      'bankAccountId'  => '%1%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'       => 'delete',
                      'bankContractId' => '%0%',
                      'bankAccountId'  => '%1%',
                      'event'          => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridBankAccountContract' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

