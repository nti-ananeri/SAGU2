/**
 * Grid used by form to display search results
 **/
class GrdInvoicesWithModifiedValues extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $home   = MIOLO::getCurrentAction();
        $module = MIOLO::getCurrentModule();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array(
                          new MGridColumn( _M('Person id',   $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Person name', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Invoice id',  $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Value',       $module), 'right', true, null, true, null, true )
                        );

        $url = $MIOLO->getActionURL($module, $home, null, array('event'=>'generate_click'));
        parent::__construct(null, $columns, $url, LISTING_NREGS, 0, 'gridInvoicesWithModifiedValues', null);
        $this->setTitle(_M('Invoices with modified values', $module));
        $this->setIsScrollable();
        $this->eventHandler();
    }
}
