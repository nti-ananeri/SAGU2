/**
 * Grid used by form to display search results
 **/
class GrdIncentiveSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:incentive';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                          new MGridColumn( _M('Incentive id', $module),               'right',true, null, true, null, true ),
                          new MGridColumn( _M('Person id', $module),                  'left', true, null, true, null, true ),
                          new MGridColumn( _M('Person name', $module),                'left', true, null, true, null, true ),
                          new MGridColumn( _M('Supporter id', $module),               'left', true, null, true, null, true ),
                          new MGridColumn( _M('Supporter name', $module),             'left', true, null, true, null, true ),
                          new MGridColumn( _M('Incentive type id', $module),          'left', true, null, true, null, true ),
                          new MGridColumn( _M('Incentive type description', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Start date', $module),                 'left', true, null, true, null, true ),
                          new MGridColumn( _M('End date', $module),                   'left', true, null, true, null, true ),
                          new MGridColumn( _M('Value is percent', $module),           'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Value', $module),                      'left', true, null, true, null, true ),
                          new MGridColumn( _M('Agglutinate', $module),                'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Cost center id', $module),             'left', true, null, true, null, true ),
                          new MGridColumn( _M('Cost center description', $module),    'left', true, null, true, null, true ),
                          new MGridColumn( _M('Cancellation date', $module),          'left', true, null, true, null, true )
                         );

        $opts = array('function'=>'update',
                      'incentiveId'=>'%0%'
                     );
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
       
        $opts = array('function'=>'delete',
                      'incentiveId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        
        $url = $MIOLO->getActionURL( $module, $home, null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridIncentive' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

?>
