/**
 * Grid used by form to display search results
 **/
class GrdPaymentsOutOfDate extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:report:payOffInvoices:paymentsOutOfDate';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( new MGridColumn( _M('Person id',     $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Person name',   $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Invoice id',    $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Emission date', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Maturity date', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Entry date',    $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Days late',     $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Nominal value', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Entry value',   $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Entries',       $module), 'left',  true, null, true, null, true )
                        );

        $url = $MIOLO->getActionURL($module, $home, null, array('event'=>'generate_click'));
        parent::__construct(null, $columns, $url, LISTING_NREGS, 0, 'gridPaymentsOutOfDate', null);
        $this->setTitle(_M('Payments out of date on period of @1 to @2', $module, $filters->beginDate, $filters->endDate));
        $this->setIsScrollable();
        $this->eventHandler();
    }
}
