/**
 * Grid used by form to display search results
 **/
class GrdBankTargetSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:register:bank:bankTarget';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( null ),//_M('Contract id', $module),      'right', true, null, true, null, true ),
                          new MGridColumn( null),  // _M('Bank id', $module),          'right', true, null, true, null, true ),
                          new MGridColumn( _M('Bank description', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Branch', $module),    'right', true, null, true, null, true ),
                          new MGridColumn( _M('Account', $module),     'right', true, null, true, null, true ),
                          new MGridColumn( _M('Person id', $module),        'right', true, null, true, null, true ),
                          new MGridColumn( _M('Person name', $module),      'left', true, null, true, null, true ),
                          new MGridColumn( null ), // _M('Course id', $module),        'right', true, null, true, null, true ),
                          new MGridColumn( _M('Course name', $module),      'left', true, null, true, null, true ),
                          new MGridColumn( null ), // _M('Course version', $module),   'right', true, null, true, null, true ),
                          new MGridColumn( null ), // _M('Turn id', $module),          'right', true, null, true, null, true ),
                          new MGridColumn( null ), //_M('Turn description', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( null ), //_M('Unit id', $module),          'right', true, null, true, null, true ),
                          new MGridColumn( null ), //_M('Unit description', $module), 'left', true, null, true, null, true )
                          new MGridColumn( _M('Is active', $module), 'left', true, null, true,  array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true )
                       );

        $opts = array('function'=>'update',
                      'contractId'=>'%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        $opts = array('function'=>'delete',
                      'contractId'=>'%0%',
                      'event'=>'tbBtnDelete_click' );
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridBankTarget' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

