    {
        //$colSize = ($this->psize-150) / $nCols;
        if ($this->start > 0 )
        {
            $this->addPage();
        }
        $this->start++;
        $this->ln();
        $this->ln();
        $this->setFont(DEFAULT_REPORT_FONT, 'B', 7);    
        //$this->cell(12, $this->lsize, _M('Invoice', 'finance'), 'LTB', NULL, 'C');
        $this->cell(10, $this->lsize, _M('Id', 'basic'), 'LTB', NULL, 'C');
        $this->cell(61, $this->lsize, _M('Person', 'basic'), 'LTB', NULL, 'C');
        $this->cell(17, $this->lsize, _M('Maturity', 'finance'), 'LTB', NULL, 'C');
        $this->cell(12, $this->lsize, _M('Value', 'finance'), 'LTB', NULL, 'C');
        $this->cell(104, $this->lsize, 'Endereço', 'LTB', NULL, 'C');
        $this->cell(55, $this->lsize, _M('Phone', 'basic'), 'LTB', NULL, 'C');
        $this->cell(18, $this->lsize, 'CPF', 'LTBR', NULL, 'C');
        //$this->cell(40, $this->lsize, _M('Responsable', 'basic'), 'LTB', NULL, 'C');
        //$this->cell(18, $this->lsize, 'Resp. CPF', 'LTBR', NULL, 'C');
        $this->ln();
    }
    public function criaReport($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $business = $MIOLO->getBusiness('finance', 'BusMonthlyDefaulter');
        $data2 = $business->searchMonthlyDefaulter($filters);
        for($y = 0; $y < count($data2); $y++)
        {
            $data->pupil[$data2[$y][15]] = array($data2[$y][1], 
                                                $data2[$y][2], 
                                                $data2[$y][3], 
                                                $data2[$y][4], 
                                                $data2[$y][5], 
                                                $data2[$y][6], 
                                                $data2[$y][7],
                                                $data2[$y][8],
                                                $data2[$y][9],
                                                $data2[$y][10],
                                                $data2[$y][11],
                                                $data2[$y][12],
                                                $data2[$y][13],
                                                $data2[$y][14],
                                                $data2[$y][0],
                                                $data2[$y][16]); 

        }
        foreach ($data->pupil as $itemN1 => $value)
        {
            $ret->personId      = $value[14];
            $ret->name          = $value[0];
            $ret->fullAddress   = $value[1] . ' ' . $value[2] . ', ' . $value[3] . ' - '. $value[4]; 
            $ret->cpf           = $value[5];
            $ret->phone         = $value[6] . ' / ' . $value[7] . ' / '  . $value[8] . ' / ' . $value[9];
            $ret->responsable   = $value[10];
            $ret->cpfResp       = $value[11];
            $ret->maturityDate  = $value[12];
            $ret->balance       = $value[13];
            $ret->invoiceId     = $itemN1;
            $ret->incomeSource  = $value[15];
            $nCols = 1;
            $colSize = ($this->psize-150) / $nCols;
            $x++;
            $mod = $x % 45;
            if ($x == 1 || $mod == NULL )
            {
                $this->tableHeader();
                $this->setFont(DEFAULT_REPORT_FONT, NULL, 6);
            }
            //$this->cell(12, $this->lsize, $ret->invoiceId, 'LTB', NULL, 'C');
            $this->cell(10, $this->lsize-1, $ret->personId, 'LTB', NULL, 'C');
            $this->cell(61, $this->lsize-1, $ret->name, 'LTB', NULL, 'L');
            $this->cell(17, $this->lsize-1, $ret->maturityDate, 'LTB', NULL, 'C');
            $this->cell(12, $this->lsize-1, $ret->balance, 'LTB', NULL, 'R');
            $this->cell(104, $this->lsize-1, $ret->fullAddress, 'LTB', NULL, 'L');
            $this->cell(55, $this->lsize-1, $ret->phone, 'LTB', NULL, 'L');
            $this->cell(18, $this->lsize-1, $ret->cpf, 'LTBR', NULL, 'C');
            //$this->cell(40, $this->lsize-1, $ret->responsable, 'LTBR', NULL, 'L');
            //$this->cell(18, $this->lsize-1, $ret->cpfResp, 'LTBR', NULL, 'C');
            $this->ln();
            $total += $ret->balance;
        }
        $this->ln();
        $this->setFont(DEFAULT_REPORT_FONT, 'B', 12);
        $this->cell($this->psize-4, $this->lsize+4, 'TOTAL R$ '. number_format(SAGU::formatNumber($total),2,',', '.'), NULL, NULL, 'R');
    }
}
