<?php
 
/**
 * Class to generate the bank remittance
 */
class RemittanceAutomaticDebit
{
    /**
     * Returns if the specific bank id have remittance class
     *
     * @param: $bankId (identification for bank)
     * 
     * @return: (boolean) True if exists otherwise false
     *
     */
    public function remittanceExists($bankId)
    {
        $MIOLO = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        if (file_exists($MIOLO->getModulePath($module, 'classes/RemittanceAutomaticDebit'.$bankId.'.class')))
        { 
           return true;
        }
        else
        {
            return false;
        }
    }
}
?>
