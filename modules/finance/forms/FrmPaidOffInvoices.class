/**
 * Form to manipulate a message
 **/
class FrmPaidOffInvoices extends MForm
{
    /**
     * Class constructor
     **/
    function __construct()
    {
        $module = MIOLO::getCurrentModule();
        parent::__construct(_M('Paid off invoices', $module));
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        $toolBar = new MToolBar('toolBar', $MIOLO->getActionURL($module, $action));
        $toolBar->disableButton('tbBtnDelete');
        $toolBar->disableButton('tbBtnPrint');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnNew');
        
        $fields[] = $toolBar;
        
        $fldBeginDate = new MCalendarField('beginPaymentDate', $this->getFormValue('beginPaymentDate', $data->beginDate), _M('Begin payment date', $module), FIELD_DATE_SIZE);
        $fldBeginDate->setJsHint(_M('Fill this field with the begin payment date of invoices with payments', $module));
        $fields[] = $fldBeginDate;
        $validators[] = new MRequiredValidator('beginPaymentDate');

        $fldEndDate = new MCalendarField('endPaymentDate', $this->getFormValue('endPaymentDate', $data->endDate), _M('End payment date', $module), FIELD_DATE_SIZE);
        $fldEndDate->setJsHint(_M('Fill this field with the end payment date of invoices with payments', $module));
        $fields[] = $fldEndDate;
        $validators[] = new MRequiredValidator('endPaymentDate');

        $businessOperation = $MIOLO->getBusiness($module, 'BusOperation');
        $businessDefaultOperations = $MIOLO->getBusiness($module, 'BusDefaultOperations');

        $defaultOperations = $businessDefaultOperations->getDefaultOperations();
        $operationId = is_array($this->getFormValue('operationId', $defaultOperations->paymentOperation))
                     ? $this->getFormValue('operationId', $defaultOperations->paymentOperation)
                     : array($this->getFormValue('operationId', $defaultOperations->paymentOperation));
        $fldOperation = new MMultiSelection('operationId', $operationId,  _M('Operation', $module), $businessOperation->listOperation(true, true), true, null, 10);
        $fldOperation->setJsHint(_M('Fill this field with the end date of invoices with payments', $module));
        $fields[] = $fldOperation;
        $validators[] = new MRequiredValidator('operationId');

        $fields[] = new MButton('generate', _M('Generate', $module), 'SUBMIT');
        $fields[] = new Separator('');
        
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        $this->setClose($MIOLO->getActionURL($module, substr($action, 0, strrpos($action, ':'))));
        $this->setFields($fields);
        $this->setValidators($validators);
        $this->setShowPostButton(false);
    }

    /**
     * Event triggered when user chooses Save from the toolbar
     **/
    public function generate_click($sender = NULL)
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();

        $data = $this->getTypesData();
        $business = $MIOLO->getBusiness($module, 'BusPayOffInvoices');

        $grdResults = $MIOLO->getUI()->getGrid($module, 'GrdPaidOffInvoices', $data);
        $grdResults->setData($business->listPaidOffInvoices($data));
        $this->addField(new Separator('<hr>'));
        $this->addField($grdResults);
    }

    /**
     *
     * Method to gather all information from the form fields
     * and put them on a database compatible object
     *
     */
    public function getTypesData()
    {
        $data->beginPaymentDate = $this->beginPaymentDate->value;
        $data->endPaymentDate   = $this->endPaymentDate->value;
        $data->operationId      = $this->operationId->value;
        return $data;
    }
}
