/**
 * Form to search the basIncomeSource table
 */
class FrmIncomeSourceSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'finance';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Income source', $this->home, 'incomeSource-16x16.png', true);
        }
        //fim favoritos
        $fields[] = $toolBar;

        $incomeSourceIdLabelS = new MText('incomeSourceIdLabelS', _M('Id', $module).':');
        $incomeSourceIdLabelS->setWidth(FIELD_LABEL_SIZE);
        $incomeSourceIdS = new MTextField('incomeSourceIdS', $this->incomeSourceIdS->value, '', FIELD_ID_SIZE);
        $incomeSourceIdS->setJsHint(_M('Enter the income source code', $module));
        $validators[] = new MIntegerValidator('incomeSourceIdS');
        $fields[] = new MHContainer('hctIncomeSourceId', array($incomeSourceIdLabelS, $incomeSourceIdS));
        
        $descriptionLabelS = new MText('descriptionLabelS', _M('Description', $module).':');
        $descriptionLabelS->setWidth(FIELD_LABEL_SIZE);
        $descriptionS = new MTextField('descriptionS', $this->incomeSourceNameS->value, '', FIELD_DESCRIPTION_SIZE);
        $descriptionS->setJsHint(_M('Enter the income source description', $module).':');
        $fields[] = new MHContainer('hctIncomeSource', array($descriptionLabelS, $descriptionS));

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);
        $this->setLabelWidth(FIELD_LABEL_SIZE);

        // get filters values
        $filters->incomeSourceId = $this->incomeSourceIdS->value;
        $filters->description    = $this->descriptionS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdIncomeSourceSearch',$filters);
        $business = $this->manager->getBusiness($module,'BusIncomeSource');
        $data = $business->searchIncomeSource($filters);
        $grdResults->setData($data);
        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;
        $this->addField($grdResults);
        
        if ( is_array($validators))
        {   
            $this->setValidators($validators);
        }   

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.incomeSourceIdS.focus();');
        }

    }

}

?>
