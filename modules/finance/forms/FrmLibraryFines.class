/**
 * Form to search the library fines data
 */
class FrmLibraryFines extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = MIOLO::getCurrentModule();
        $module = $this->module;
        $this->home   = $data->home;

        parent::__construct(_M('Library fines',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        // get filters values
        $filters->personId         = MIOLO::_request('personId');
        $filters->learningPeriodId = MIOLO::_request('learningPeriodId');

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdLibraryFines',$filters);
        $business = $this->manager->getBusiness($module,'BusLibraryFines');
        $data = $business->finesFromPerson($filters->personId);
        $grdResults->setData($data);
        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        
        $linkS[] = new MLink('close', _M('Close window', $module), 'javascript:self.close()');
        $div = new mDiv('divlink', $linkS);
        $div->width = '98%';
        $div->textAlign = 'center';
        $fields[] = $div;
        
        $this->addField($fields);
    }

}

