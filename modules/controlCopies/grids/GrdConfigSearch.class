/**
 * Grid used by form to display search results
 **/
class GrdConfigSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:config:config';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( null ),
                          new MGridColumn( _M('Parameter', $module),   'left',  null, null, true, null, true ),
                          new MGridColumn( _M('Value', $module),       'left',  null, null, true, null, true ),
                          new MGridColumn( _M('Description', $module), 'left',  null, null, true, null, true ),
                          new MGridColumn( _M('Type', $module),        'left',  null, null, true, null, true )
                        );

        $opts = array('moduleConfig'=>'%0%',
                      'parameter'=>'%1%',
                      'function'=>'update');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        $opts = array('moduleConfig'=>'%0%',
                      'parameter'=>'%1%',
                      'function'=>'delete',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridConfig' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

