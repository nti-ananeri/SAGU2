/**
 * Grid used by form to display search results
 **/


class GrdPayRollDiscountSearch extends MGrid
{
/**
     * Class constructor
     **/
    function __construct($values)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:payrolldiscount';
        $module = MIOLO::_request('module');


        $columns = array(
new MGridColumn( _M('Pay Disc id',          $module), 'left', true, '7%', true, null, true ),
new MGridColumn( _M('Date',                 $module), 'left', true, '20%', true, null, true ),
new MGridColumn( _M('Branch',               $module), 'left', true, '6%', true, null, true ),
new MGridColumn( _M('Sector id',            $module), 'left', true, '5%', true, null, true ),
new MGridColumn( _M('Sector description',   $module), 'left', true, '14%', true, null, true ),
new MGridColumn( _M('Service id',           $module), 'left', true, '5%', true, null, true ),
new MGridColumn( _M('Service description',  $module), 'left', true,  '10%', true, null, true ),
new MGridColumn( _M('Amount',               $module), 'left', true,  '4%', true, null, true ),
new MGridColumn( _M('Unitary value',        $module), 'right', true, '5%', true, null, true ),
new MGridColumn( _M('Person id',            $module), 'right', true,  '8%', true, null, true ),
new MGridColumn( _M('Op. Sector id',        $module), 'right', true,  '5%', true, null, true ),
new MGridColumn( _M('Operator',             $module), 'right', true,  '13%', true, null, true ),
                        );

        //opts    = functions in URL, %0% column in first position
        //href(s) = get URL, module and option from URL, passeds in opts
        $opts = array('function'=>'update','payRollDiscountId' =>'%0%');  
    
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete', 'payRollDiscountId'=>'%0%', 'event'=> 'tbBtnDelete_click');
    
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );
    
        unset($opts); //destroy the variable opts
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridPayRollDiscount' );
    
        $this->setIsScrollable();
    
        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
    
        $this->eventHandler();
    }

}
?>
