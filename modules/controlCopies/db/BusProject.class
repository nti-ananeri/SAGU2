    public function updateProject($values)
    {
        $sql = 'UPDATE acdproject 
                        SET description = ? 
                        WHERE projectid = ?';
    
        $db     = $this->getDatabase(); 
        $args = array( $values->description,
                       $values->projectId
                     );
        $result = $db->execute(SAGU::prepare($sql, $args));
    
        return $result;
  
    } 

    public function deleteProject($projectId)
    {
        $sql   = 'DELETE FROM acdproject
                        WHERE projectid = ?';
        $args   = array($projectId);

        $db     = $this->getDatabase();
