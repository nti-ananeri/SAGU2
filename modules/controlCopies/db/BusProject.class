class BusinessControlCopiesBusProject extends MBusiness   
{

    public function getDatabase ()
    {
        $MIOLO = MIOLO::getInstance($module = null);
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'controlCopies' : $module;
        
        return $MIOLO->getDatabase($module);
    }

    public function insertProject($values)
    {
        $sql = 'INSERT INTO acdproject (description) VALUES(?)';
        
        $args   = array($values->description);
        $db     = $this->getDatabase();

        $result = $db->execute(SAGU::prepare($sql, $args));
        return $result;
    }    
    
    public function searchProject($values)
    {
        $sql = 'SELECT projectid, 
                       description,
                       username, 
                       TO_CHAR(datetime,\'' . MASK_TIMESTAMP . '\'),
                       ipaddress
                  FROM acdproject';
    
        if (strlen((string)$values->description) > 0 )
        {
            $where .= " AND upper (description) ILIKE upper('".$values->description."%')";
        }
        if (strlen((string)$values->projectId) > 0 )
        {
            $where .= " AND projectId = ? ";
            $args[] = $values->projectId;
        }

        if (strlen((string)$where) > 0)
        {
            $sql   .= ' WHERE ' . substr($where, 4); ;
            $db     = $this->getDatabase(); 
            $result = $db->query(SAGU::prepare($sql, $args));
        }
        return $result;
   }

