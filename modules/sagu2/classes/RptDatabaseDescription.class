/**
 * PDF extension to generate report
 */
class RptDatabaseDescription
{
    /**
     * Method to generate the report
     */
    public function RptDatabaseDescription($data=null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();

        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();
        
        $MIOLO->getClass($module, 'documentation');
        DOCUMENTATION::generateStartPage($pdf, _M('Database description', $module));

        // First page        
        $pdf->addPage('P', 'mm', 'A4');
        $pdf->ln(10);

        if ( count($data) > 0 )
        {
            $modules['acc'] = _M('Accountancy', $module);
            $modules['acd'] = _M('Academic', $module);
            $modules['bas'] = _M('Basic', $module);
            $modules['ccp'] = _M('Control copies', $module);
            $modules['fin'] = _M('Finance', $module);
            $modules['ins'] = _M('Institutional', $module);
            $modules['ptc'] = _M('Protocol', $module);
            $modules['rsh'] = _M('Research', $module);
            $modules['spr'] = _M('Selective process', $module);

            $x = 1;
            foreach ( $data as $row )
            {

                list ( $tableOID,
                       $tableName,
                       $tableDescription,
                       $tableData ) = $row;

                $module_ = substr($tableName, 0, 3);

                //nome do modulo
                if ( $module_ != $module__ )
                {
                    if ( $x++ != 1 )
                    {
                        $pdf->ln(20);
                    }
                    $pdf->setFont(DEFAULT_REPORT_FONT, 'B', 16);
                    $msg = $modules[$module_];
                    //width, heinght, string, border, break, align (a4 210 290)
                    $pdf->cell(190, 10, $msg, 0, 0, 'C');
                    $pdf->ln(10);
                    $module__ = $module_;
                }

                $pdf->ln(2);

                //nome da tabela
                $pdf->setFont(DEFAULT_REPORT_FONT, 'BU', 11);
                $pdf->cell(80, 5, $tableName . ':', 0, 0, 'R');

                $pdf->setFont(DEFAULT_REPORT_FONT, 'I', 11);
                $pdf->multiCell(110, 5, $tableDescription, 0, 'L');

                //imprime os campos de cada tabela
                if ( count($tableData) > 0 )
                {
                    foreach ( $tableData as $row2 )
                    {
                        list ( $fieldName,
                               $fieldDescription ) = $row2;

                        $pdf->setFont(DEFAULT_REPORT_FONT, '', 9);
                        $pdf->cell(80, 4, $fieldName . ': ', 0, 0, 'R');

                        $pdf->setFont(DEFAULT_REPORT_FONT, 'I', 9);
                        $pdf->multiCell(110, 4, $fieldDescription, 0, 'L');
                    }
                }
            }
        }
        //Close and generate the document        
        $pdf->close();
        $pdf->output();
    }
}

