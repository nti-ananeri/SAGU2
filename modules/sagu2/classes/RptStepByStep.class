/**
 * PDF extension to generate report
 */
class RptStepByStep
{
    /**
     * Method to generate the report
     */
    public function RptStepByStep($data=null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();

        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();

        $MIOLO->getClass($module, 'documentation');
        DOCUMENTATION::generateStartPage($pdf, _M('Step by step', $module));

        // First page
        $pdf->addPage('P', 'mm', 'A4');
        $pdf->ln(10);

        if ( strlen((string)$data) > 0 )
        {
            $pdf->setFont(DEFAULT_REPORT_FONT, '', 12);
            $pdf->multiCell(190, 5, $data, 0, 'L');
        }
        //Close and generate the document        
        $pdf->close();
        $pdf->output();
    }
}

