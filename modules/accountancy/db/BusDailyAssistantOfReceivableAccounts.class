/**
 * Class to manipulate the accDailyAssistantOfReceivableAccounts table
 **/
class BusinessAccountancyBusDailyAssistantOfReceivableAccounts extends MBusiness
{

    public $db;

    /**
     * Class constructor
     **/
    public function BusinessAccountancyBusDailyAssistantOfReceivableAccounts()
    {
        $this->db = $this->getDatabase();
    }

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO  = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'accountancy' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function getDailyAssistantOfReceivableAccounts($data)
    {
        $sql = 'SELECT substr(A.accountSchemeId,6,8),
                       substr(A.accountSchemeId,1,3),
                       substr(A.accountSchemeId,4,2),
                       A.courseId,
                       substr((SELECT name FROM acdCourse WHERE courseId = A.courseId),0,29),
                       A.personId,
                       (SELECT name FROM ONLY basPerson WHERE personId = A.personId),
                       D.operationId,
                       \'L: \' || C.description,
                       C.operationTypeId,
                       TO_CHAR(D.entryDate,\'' . MASK_DATE . '\'),
                       round(D.value,' . REAL_ROUND_VALUE . '),
                       A.invoiceId
                FROM ONLY finReceivableInvoice A
                    INNER JOIN finEntry D
                        USING(invoiceId)
                    INNER JOIN finOperation C
                        ON (D.operationId = C.operationId) ' ;
                        
        if ( strlen((string)$data->beginDate) > 0 )
        {
            $where .= ' AND D.entryDate >= TO_DATE(?,?)';
            $args[] = $data->beginDate;
            $args[] = MASK_DATE;
        }

        if ( strlen((string)$data->endDate) > 0 )
        {
            $where .= ' AND D.entryDate <= TO_DATE(?,?)';
            $args[] = $data->endDate;
            $args[] = MASK_DATE;
        }
        
        if ( strlen((string)$data->beginAccountScheme) > 0 )
        {
            $where .= ' AND A.accountSchemeId >= ?';
            $args[] = $data->beginAccountScheme;
        }

        if ( strlen((string)$data->endAccountScheme) > 0 )
        {
            $where .= ' AND A.accountSchemeId <= ?';
            $args[] = $data->endAccountScheme;
        }

        if ( $where != '' )
        {
            $where = SAGU::prepare($where, $args);
            $sql .= ' WHERE ' . substr($where,4) . ' ';
        }

        unset($where, $args);
        
        $sql .= 'UNION ALL
                 (SELECT substr(A.accountSchemeId,6,8),
                         substr(A.accountSchemeId,1,3),
                         substr(A.accountSchemeId,4,2),
                         B.courseId,
                         substr((SELECT name FROM acdCourse WHERE courseId = B.courseId),0,29),
                         B.personId,
                         (SELECT name FROM ONLY basPerson WHERE personId = B.personId),
                         C.operationId,
                         \'P: \' || C.description,
                         C.operationTypeId,
                         TO_CHAR(A.recordDate,\'' . MASK_DATE . '\'),
                         round(A.value,' . REAL_ROUND_VALUE . '),
                         A.incomeForecastId
                  FROM finIncomeForecast A
                    INNER JOIN
                        (SELECT contractId, personId, courseId, courseVersion, unitId FROM acdContract) as B
                        USING(contractId)
                    INNER JOIN finOperation C
                        USING (operationId) ';
        
        if ( strlen((string)$data->beginDate) > 0 )
        {
            $where .= ' AND A.recordDate >= TO_DATE(?,?)';
            $args[] = $data->beginDate;
            $args[] = MASK_DATE;
        }

        if ( strlen((string)$data->endDate) > 0 )
        {
            $where .= ' AND A.recordDate <= TO_DATE(?,?)';
            $args[] = $data->endDate;
            $args[] = MASK_DATE;
        }
        
        if ( strlen((string)$data->beginAccountScheme) > 0 )
        {
            $where .= ' AND A.accountSchemeId >= ?';
            $args[] = $data->beginAccountScheme;
        }

        if ( strlen((string)$data->endAccountScheme) > 0 )
        {
            $where .= ' AND A.accountSchemeId <= ?';
            $args[] = $data->endAccountScheme;
        }

        if ( $where != '' )
        {
            $where = SAGU::prepare($where, $args);
            $sql .= 'WHERE ' . substr($where,4) . ') ORDER BY 2, 3, 1, 11, 7';
            $sql = 'DECLARE data CURSOR FOR ' . $sql;

            $db      = $this->getDatabase();
            $db->execute($sql);
        }

    }
    
    /*
     * Move and get data from cursor
     *
     */
    public function fetchData($number)
    {
        $sql = 'FETCH ' . $number . ' FROM data';
        $db      = $this->getDatabase();
        $result = $db->query($sql);
        
        return $result;
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function getAccountSchemeDescription($accountSchemeId)
    {
        $sql = 'SELECT description
                FROM accAccountScheme';

        if ( strlen((string)$accountSchemeId) > 0 )
        {
            $where .= ' AND accountSchemeId = ?';
            $args[] = $accountSchemeId;
        }

        if ( $where != '' )
        {
            $sql .= ' WHERE ' . substr($where,5);

            $db      = $this->getDatabase();
            $result  = $db->query(SAGU::prepare($sql,$args));
        }
        return $result[0][0];

    }


    /**
     * Get the name of the default company
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function getDefaultCompanyName()
    {
        $sql   = 'SELECT name
                  FROM basCompanyConf';

        $where = ' WHERE companyId = ' . DEFAULT_COMPANY_CONF ;

        $sql   .= $where;
        $db     = $this->getDatabase();
        $result = $db->query($sql, null);

        return $result[0][0];
    }

    public function beginTransaction()
    {
        $db = $this->getDatabase();
        $db->execute('BEGIN TRANSACTION');
    }

    public function commit()
    {
        $db = $this->getDatabase();
        $db->execute('COMMIT');
    }

}
?>
