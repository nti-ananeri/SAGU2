/**
 * Grid used by form to display search results
 **/
class GrdDefineAccountingProjects extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:process:accounting:defineAccountingProjects';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                          new MGridColumn( _M('Operation id', $module),      'center', true, null, true, null, true ),
                          new MGridColumn( _M('Operation type id', $module), 'center', true, null, true, null, true ),
                          new MGridColumn( _M('Description', $module),       'left' ,  true, null, true, null, true )
                          );

        $url = $MIOLO->getActionURL( $module, $home, null, $opts );
        parent::__construct( null, $columns, $url, 250, 0, 'gridDefineAccountingProjects' );
        
        $opts = array('operationId'=>'%0%');

        $hrefEntry          = $MIOLO->getActionURL( $module, "main:process:accounting:entryIntegration",          null, $opts );
        $hrefIncomeForecast = $MIOLO->getActionURL( $module, "main:process:accounting:incomeForecastIntegration", null, $opts );

        $this->addActionIcon(_M('Define account project for entries', $module),          'entry.png',          $hrefEntry);
        $this->addActionIcon(_M('Define account project for income forecasts', $module), 'incomeForecast.png', $hrefIncomeForecast);


        $this->eventHandler();

    }

}

