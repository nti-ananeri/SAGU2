/**
 * Grid used by form to display search results
 **/
class GrdDefineAccountingLimits extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:process:defineAccountingLimits';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                          new MGridColumn( _M('Accounting limit id', $module),'center', true, null, true, null, true ),
                          new MGridColumn( _M('Date', $module),               'center', true, null, true, null, true ),
                          new MGridColumn( _M('User', $module),               'left',   true, null, true, null, true )
                          );
       
        $opts = array('function'=>'delete',
                      'accountingLimitId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        
        $url = $MIOLO->getActionURL( $module, $home, null, $opts );
        parent::__construct( null, $columns, $url, 15, 0, 'gridDefineAccountingLimits' );

        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

