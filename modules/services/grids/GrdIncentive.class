/**
 * Grid used by form to display search results
 **/
class GrdIncentive extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();
//        $this->setClose(false);
        $columns = array( new MGridColumn( null ),
                          new MGridColumn( _M('Person id',         'finance'), 'right',  true, null, true, null, false),
                          new MGridColumn( _M('Name',              'finance'), 'left',   true, null, true, null, false),
                          new MGridColumn( _M('Start date',        'finance'), 'center', true, null, true, null, false),
                          new MGridColumn( _M('Cancellation',      'finance'), 'center', true, null, true, null, false),
                          new MGridColumn( _M('End date',          'finance'), 'center', true, null, true, null, false),
                          new MGridColumn( _M('Incentive value',   'finance'), 'center', true, null, true, null, false),
                          new MGridColumn( _M('Is in percentual?', 'finance'), 'center', true, null, true, array( DB_TRUE => _M('Yes', 'finance'), DB_FALSE => _M('No', 'finance') ), false),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Total incentive',   'finance'), 'right',  true, null, true, null, false)
                        );

        $url = $MIOLO->getActionURL('services', $action, null, $opts);
        parent::__construct(null, $columns, $url, 0, 0, 'gridIncentive');
    }
}
