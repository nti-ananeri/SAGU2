/**
 * Grid used by form to display search results
 **/
class GrdProfessorCurricularComponentsSupervisedTraining extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:professor:curricularComponentsNew';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false         
         */
        $columns = array( 

                          new MGridColumn( _M('Group id', 'services'),          'left', true, null, false,  null, false),
                          new MGridColumn( _M('Professor id', 'academic'),      'left', true, null, false, null, false),
                          new MGridColumn( _M('Curricular component', 'services'), 'left', true, null, true,  null, false),
                          new MGridColumn( _M('Course', 'services'),            'left', true, null, true,  null, false),
                          new MGridColumn( _M('Turn id', 'services'),           'left', true, null, false, null, false),
                          new MGridColumn( _M('Turn', 'services'),              'left', true, null, true,  null, false),
                          new MGridColumn( _M('Unit id', 'services'),           'left', true, null, false, null, false),
                          new MGridColumn( _M('Unit', 'services'),              'left', true, null, true,  null, false),
                          new MGridColumn( _M('Is it closed', 'academic'),      'left', true, null, false, null, false),
                          new MGridColumn( _M('Class', 'academic'),             'left', true, null, true,  null, false),
                          new MGridColumn( _M('Class name', 'academic'),        'left', true, null, false,  null, false),
                          new MGridColumn( _M('Has substitutive', 'academic' ), 'left', true, null, false,  null, false),
                          new MGridColumn( _M('Room', 'academic'),              'center', true, null, true,   null, false)
                        );

        $opts = array('periodId'    => $filters->periodId,
                      'groupId'     => '%0%',
                      'professorId' => $filters->professorId );
        $gradesTyping       = $MIOLO->getActionURL( 'services', substr($home, 0, strrpos($home,':')+1) . 'gradesTypingNew',  null, $opts );
        $supervisedTraining = $MIOLO->getActionURL( 'services', substr($home, 0, strrpos($home,':')+1) . 'supervisedTrainingNew',     null, $opts );
        $close              = $MIOLO->getActionURL( 'services', substr($home, 0, strrpos($home,':')+1) . 'closeSemester', null, $opts );

        $url = $MIOLO->getActionURL('services', $home, null, array('periodId' => $filters->periodId));
        parent::__construct( null, $columns, $url, 0, 0, 'grdResults' );

        $this->setLinkType('hyperlink');
        $this->addActionIcon( _M('Set supervised training', 'academic'),    array('supervisedTraining-on.png', 'supervisedTraining-off.png'),    $supervisedTraining );
        $this->addActionIcon( _M('Grades typing', 'services'),              array('gradesTyping-on.png', 'gradesTyping-off.png'), $gradesTyping );
        $this->addActionIcon( _M('Close curricular component', 'services'), array('lock-on.png', 'lock-off.png'), $close );
        $this->setRowMethod('GrdProfessorCurricularComponentsSupervisedTraining', 'myRowMethod');
        $this->eventHandler();

    }

   /**
    * Function to handle the before each row creation
    */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $action = MIOLO::getCurrentAction();

        if ( $row[8] == DB_TRUE )
        {
            $actions[0]->disable();
            //$actions[1]->disable();
            //$actions[1]->grid->actions[1]->value = 'gradesTyping-off.png';
            $actions[2]->disable();
        }
        else
        {
            $actions[0]->enable();
            $actions[1]->enable();
            $actions[1]->grid->actions[1]->value = 'gradesTyping-on.png';
            $actions[2]->enable();
        }

    }

}

