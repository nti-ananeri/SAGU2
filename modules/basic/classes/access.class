class access
{
    /**
     * Insert a handler access into basAccess table
     *
     * @param: $label (string): label string
     *         $handler (string): current miolo path
     *         $image (string): image name
     */
    public function insert($label, $handler, $image, $isBookmark=false)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        $login              = $MIOLO->getLogin();
        $data               = new basAccess();
        $data->login        = $login->id;
        $data->moduleAccess = $module;
        $data->label        = $label;
        $data->image        = $image;
        $data->handler      = $handler;
        $data->isBookmark   = $isBookmark;

        $business = $MIOLO->getBusiness('basic','BusAccess');
        $business->insertAccess($data);
    }
}
