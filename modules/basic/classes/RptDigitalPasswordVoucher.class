/**
 * PDF extension to generate report
 */
class RptDigitalPasswordVoucher
{
    
	public function RptDigitalPasswordVoucher($data = null)
	{
         
		$MIOLO       = MIOLO::getInstance();
		$module      = 'academic';
		$pdf = new PDF();
		$pdf->addPage('P', 'mm', 'A4');
		$pdf->ln();
		$business = $MIOLO->getBusiness('basic','BusCompany');
		$rdata = $business->getCompany(DEFAULT_COMPANY_CONF);
		$pdf->setFont(DEFAULT_REPORT_FONT, 'B', 10);
		$pdf->Image(SAGUFile::getPhotoPath($rdata->personId), 10, 8, 14, NULL, PHOTO_FORMAT);
		$pdf->MultiCell(190, 8,$rdata->name. ' - '.$rdata->acronym,'','C');
		$pdf->MultiCell(190, 8,'Comprovante de Assinatura Digital','','C');
		$pdf->ln(8);
		$pdf->ln(8);
		$pdf->setFont(DEFAULT_REPORT_FONT, '', 10);
		$pdf->MultiCell(190, 8,'        Comprovamos que '.$data->name.', matrícula '.$data->personId.' esteve presente nesta Instituição de Ensino Superior, no dia '.date('d/m/Y').', juntamente com seu FIADOR, perante o colaborador '.trim($MIOLO->getLogin()->id).' e realizou o cadastro de sua SENHA PARA ASSINATURA DE CONTRATO DIGITAL ON-LINE, em conformidade com o CONTRATO DE PRESTAÇÃO DE SERVIÇOS firmado entre a '.$rdata->acronym.' e o presente aluno.','','J');
		$pdf->ln(8);
        $pdf->MultiCell(190, 8,'        Esta SENHA PARA ASSINATURA DE CONTRATO DIGITAL ON-LINE valerá para a renovação do contrato até que seja expressamente revogada a pedido de qualquer uma das partes, através da solicitação de seu cancelamento. A mesma permite que o aluno e/ou seu fiador possam renovar o contrato de prestação de serviços junto a esta IES digitalmente, através da rede mundial de computadores - a internet - nos termos especificados no contrato previamente acordado e assinado por ambas as partes.','','J');
        $pdf->ln(8);
        $pdf->MultiCell(190, 8,'        A senha é pessoal, intransferível e de inteira responsabilidade dos respectivos detentores da mesma, os quais atestam, com suas assinaturas abaixo, conhecer o teor do contrato e das cláusulas regulamentadoras do processo de uso das senhas de assinatura digital para renovação de contratos e rematrícula.','','J');
        $pdf->ln(8);
        $pdf->MultiCell(190, 5,'_____________________________________                _____________________________________','','C');
		$pdf->MultiCell(190, 5,'                                            FIADOR(A)                                                                    DISCENTE','','J');
		$pdf->ln(5);      
		$pdf->MultiCell(190, 5,'_____________________________________','','C');
		$pdf->MultiCell(190, 5,'COLABORADOR/'.$rdata->acronym,'','C');
		$pdf->ln(8);      
 		$pdf->MultiCell(190, 8,'São Luís (MA), '.strftime("%A, %d de %B de %Y, às %H:%M:%S"),'','C');        		
		$pdf->close();
		$pdf->output();
	}
}

