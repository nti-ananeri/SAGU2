/**
 * Class to manipulate the basEmployeeType table
 **/
class BusinessBasicBusEmployeeType extends Business
{
    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'basic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listEmployeeType()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT employeeTypeId,
                       description
                  FROM basEmployeeType
              ORDER BY description';
        $ret = $db->query($sql);
        //$db->close();
        return $ret;
    }

    /**
     * Return a specific record from the database
     *
     * @param $legalPersonTypeId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getEmployeeType($employeeTypeId)
    {
        $sql = 'SELECT employeeTypeId,
                       description,
                       userName,
                       TO_CHAR(dateTime,\'' . MASK_TIMESTAMP . '\'),
                       ipAddress
                  FROM basEmployeeType
                 WHERE employeeTypeId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $employeeTypeId));
        //$db->close();

        $employeeType = new basEmployeeType();
        list ( $employeeType->employeeTypeId,
               $employeeType->description,
               $employeeType->userName,
               $employeeType->dateTime,
               $employeeType->ipAddress ) = $result[0];

        return $employeeType; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchEmployeeType($filters)
    {
        $sql= 'SELECT employeeTypeId,
                      description
                 FROM basEmployeeType ';

        if ( strlen((string)$filters->employeeTypeId) > 0 )
        {
            $where .= ' AND employeeTypeId = ? ';
            $args[] = $filters->employeeTypeId;
        }
        if ( strlen((string)$filters->description) > 0 )
        {
            $where .= ' AND TO_ASCII(description) ILIKE TO_ASCII(?) ';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY description';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertEmployeeType($data)
    {
        $sql = 'INSERT INTO basEmployeeType
                            (description)
                     VALUES (?)';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $data->description));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function updateEmployeeType($data)
    {
        $sql = 'UPDATE basEmployeeType
                   SET description       = ?
                 WHERE employeeTypeId    = ?';

        $args = array( $data->description,
                       $data->employeeTypeId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $legalPersonTypeId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function deleteEmployeeType($employeeTypeId)
    {
        $sql = 'DELETE FROM basEmployeeType
                      WHERE employeeTypeId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $employeeTypeId));
        //$db->close();

        return $result;
    }

}

