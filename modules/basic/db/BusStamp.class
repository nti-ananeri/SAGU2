/**
 * Class to manipulate the basStamp table
 **/
class BusinessBasicBusStamp extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'academic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listStamp()
    {
        $sql = '         SELECT A.stampId,
                                B.name || CASE WHEN A.functionDescription IS NULL THEN \'\' ELSE \' - \' || A.functionDescription END
                           FROM basStamp A
                 LEFT JOIN ONLY basPerson B
                          USING (personId)
                       ORDER BY 2 ';

        $db = $this->getDatabase();

        $result = $db->query($sql);
        // $db->close();
        return $result;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $stampId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getStamp($stampId)
    {
        $sql = 'SELECT A.stampId,
                       A.personId,
                       B.name AS personName,
                       A.functionDescription,
                       A.register,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM basStamp A
        LEFT JOIN ONLY basPerson B
                    ON (B.personId = A.personId)
                 WHERE A.stampId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $stampId));
        //$db->close();

        $stamp = new BasStamp();

        list ( $stamp->stampId,
               $stamp->personId,
               $stamp->personName,
               $stamp->functionDescription,
               $stamp->register,
               $stamp->userName,
               $stamp->dateTime,
               $stamp->ipAddress ) = $result[0];

        return $stamp; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchStamp($filters)
    {
        $sql = 'SELECT A.stampId,
                       A.personId,
                       B.name AS personName,
                       A.functionDescription,
                       A.register,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM basStamp A
        LEFT JOIN ONLY basPerson B
                    ON (B.personId = A.personId)';

        if ( strlen((string)$filters->stampId) > 0 )
        {
            $where .= ' AND A.stampId = ?';
            $args[] = $filters->stampId;
        }
        if ( strlen((string)$filters->personId) > 0 )
        {
            $where .= ' AND A.personId = ?';
            $args[] = $filters->personId;
        }
        if ( strlen((string)$filters->personName) > 0 )
        {
            $where .= ' AND TO_ASCII(B.name) ILIKE TO_ASCII(?)';
            $args[] = $filters->personName . '%';
        }
        if ( strlen((string)$filters->register) > 0 )
        {
            $where .= ' AND A.register ILIKE ?';
            $args[] = $filters->register . '%';
        }
        if ( strlen((string)$filters->functionDescription) > 0 )
        {
            $where .= ' AND TO_ASCII(A.functionDescription) ILIKE TO_ASCII(?)';
            $args[] = $filters->functionDescription . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY B.name';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertStamp($data)
    {
        $sql = 'INSERT INTO basStamp
                            (personId,
                             functionDescription,
                             register)
                     VALUES (?,?,?)';

        $args = array( 
                       $data->personId,
                       $data->functionDescription,
                       $data->register
                     );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateStamp($data)
    {
        $sql = 'UPDATE basStamp
                   SET personId            = ?,
                       functionDescription = ?,
                       register            = ?
                 WHERE stampId = ?';

        $args = array( 
                       $data->personId,
                       $data->functionDescription,
                       $data->register,
                       $data->stampId
                     );
                       
        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $stampId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteStamp($stampId)
    {
        $sql = 'DELETE FROM basStamp
                      WHERE stampId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $stampId));
        //$db->close();

        return $result;
    }

}

?>
