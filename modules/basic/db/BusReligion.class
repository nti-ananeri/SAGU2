/**
 * Class to manipulate the basMaritalStatus table
 **/
class BusinessBasicBusReligion extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'basic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listReligion()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT religionId,
                       description
                  FROM basReligion
              ORDER BY description';
        $ret = $db->query($sql);
        //$db->close();
        return $ret;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $maritalStatusId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getReligion($religionId)
    {
        $sql = 'SELECT religionId,
                       description,
                       userName,
                       TO_CHAR(dateTime,\'' . MASK_TIMESTAMP . '\'),
                       ipAddress
                  FROM basReligion
                 WHERE religionId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $religionId));
        //$db->close();

        $religion = new basReligion();
        list ( $religion->religionId,
               $religion->description,
               $religion->userName,
               $religion->dateTime,
               $religion->ipAddress ) = $result[0];

        return $religion; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchReligion($filters)
    {
        $sql= 'SELECT religionId,
                      description
                 FROM basreligion ';

        if ( strlen((string)$filters->religionId) > 0 )
        {
            $where .= ' AND religionId = ? ';
            $args[] = $filters->religionId;
        }
        if ( strlen((string)$filters->description) > 0 )
        {
            $where .= ' AND TO_ASCII(description) ILIKE TO_ASCII(?) ';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY description';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertReligion($data)
    {
        $sql = 'INSERT INTO basReligion
                            (description)
                     VALUES (?)';

        $db     = $this->getDatabase();
        $args   = array ( $data->description );
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function updateReligion($data)
    {
        $sql = 'UPDATE basReligion
                   SET description = ?
                 WHERE religionId  = ?';

        $args = array( $data->description,
                       $data->religionId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $maritalStatusId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function deleteReligion($religionId)
    {
        $sql = 'DELETE FROM basReligion
                      WHERE religionId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $religionId));
        //$db->close();

        return $result;
    }

}

