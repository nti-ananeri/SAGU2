/**
 * Class to manipulate the basProductGroup table
 **/
class BusinessBasicBusProductGroup extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'basic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all table registers
     *
     * @return (array): An array containing the listing results
     **/
    public function listProductGroup()
    {
        $sql = 'SELECT A.productGroupId,
                       A.name
                  FROM basProductGroup A 
              ORDER BY A.name';
        $db   = $this->getDatabase();
        $result = $db->query($sql);
        return $result;

    }

    /**
     * Return a specific record from the database
     *
     * @param $bossId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getProductGroup($productGroupId)
    {
        $sql = 'SELECT A.productGroupId,
                       A.name,
                       A.description,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM basProductGroup A
                 WHERE A.productGroupId = ?';

        $args = array( $productGroupId );

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $args));

        $productGroup = new basProductGroup();
        list ( $productGroup->productGroupId,
               $productGroup->name,
               $productGroup->description,
               $productGroup->userName,
               $productGroup->dateTime,
               $productGroup->ipAddress ) = $result[0];

        return $productGroup; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchProductGroup($filters)
    {
        $sql = 'SELECT A.productGroupId,
                       A.name,
                       A.description
                  FROM basProductGroup A ';

        if ( strlen((string)$filters->name) > 0 )
        {
            $where .= ' AND TO_ASCII(A.name) ILIKE TO_ASCII(?) ';
            $args[] = $filters->name . '%';
        }

        if ( strlen((string)$filters->productGroupId) > 0 )
        {
            $where .= ' AND A.productGroupId = ? ';
            $args[] = $filters->productGroupId;
        }

        if ( strlen((string)$filters->description) > 0 )
        {
            $where .= ' AND TO_ASCII(A.description) ILIKE TO_ASCII(?) ';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY A.productGroupId';
            $db   = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }
        return $result;

    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertProductGroup($data)
    {
        $sql = 'INSERT INTO basProductGroup
                            (name,
                             description)
                     VALUES (?,?)';

        $args = array( $data->name,
                       $data->description );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateProductGroup($data)
    {
        $sql = 'UPDATE basProductGroup
                   SET name           = ?,
                       description    = ?
                 WHERE productGroupId = ?';

        $args = array( $data->name,
                       $data->description,
                       $data->productGroupId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $bossId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteProductGroup($productGroupId)
    {

        $sql = 'DELETE FROM basProductGroup
                      WHERE productGroupId = ?';

        $args = array( $productGroupId );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

}

