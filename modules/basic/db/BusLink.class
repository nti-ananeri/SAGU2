/**
 * Class to manipulate the basLink table
 **/
class BusinessBasicBusLink extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'basic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listLink()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT linkId,
                       description
                  FROM basLink
              ORDER BY description';
        $ret = $db->query($sql);
        //$db->close();
        return $ret;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $linkId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getLink($linkId)
    {
        $sql = 'SELECT linkId,
                       description,
                       userName,
                       TO_CHAR(dateTime,\'' . MASK_TIMESTAMP . '\'),
                       ipAddress
                  FROM basLink
                 WHERE linkId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $linkId));
        //$db->close();

        $link = new basLink();
        list ( $link->linkId,
               $link->description,
               $link->userName,
               $link->dateTime,
               $link->ipAddress ) = $result[0];

        return $link; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchLink($filters)
    {
        $sql= 'SELECT linkId,
                      description
                 FROM basLink ';

        if ( strlen((string)$filters->linkId) > 0 )
        {
            $where .= ' AND linkId = ? ';
            $args[] = $filters->linkId;
        }
        if ( strlen((string)$filters->description) > 0 )
        {
            $where .= ' AND TO_ASCII(description) ILIKE TO_ASCII(?) ';
            $args[] = $filters->description . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY description';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertLink($data)
    {
        $sql = 'INSERT INTO basLink
                            (description)
                     VALUES (?)';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $data->description));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function updateLink($data)
    {
        $sql = 'UPDATE basLink
                   SET description = ?
                 WHERE linkId      = ?';

        $args = array( $data->description,
                       $data->linkId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $linkId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function deleteLink($linkId)
    {
        $sql = 'DELETE FROM basLink
                      WHERE linkId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $linkId));
        //$db->close();

        return $result;
    }

}

