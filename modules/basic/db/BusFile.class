/**
 * Class to manipulate the basFile table
 **/
class BusinessBasicBusFile extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'basic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listFile()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT fileId,
                       fileName
                  FROM basFile   
              ORDER BY fileName';
        $ret = $db->query($sql);
        //$db->close();
        return $ret;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $fileId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getFile($fileId)
    {
        $sql = 'SELECT fileId,
                       fileName,
                       userName,
                       TO_CHAR(dateTime,\'' . MASK_TIMESTAMP . '\'),
                       ipAddress
                  FROM basFile
                 WHERE fileId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $fileId));
        //$db->close();

        $file = new basFile();
        list ( $file->fileId,
               $file->fileName,
               $file->userName,
               $file->dateTime,
               $file->ipAddress ) = $result[0];

        return $file; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchFile($filters)
    {
        $sql= 'SELECT fileId,
                      fileName
                 FROM basFile ';

        if ( strlen((string)$filters->fileId) > 0 )
        {
            $where .= ' AND fileId = ? ';
            $args[] = $filters->fileId;
        }
        if ( strlen((string)$filters->fileName) > 0 )
        {
            $where .= ' AND fileName ILIKE ? ';
            $args[] = $filters->fileName . '%';
        }
        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY fileName';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertFile($data)
    {
        $db  = $this->getDatabase();

        $sql = 'SELECT NEXTVAL(\'seq_fileid\')';
        $ret = $db->query(SAGU::prepare($sql,null));
        if ( strlen((string)$ret[0][0]) > 0  )
        {
            $data->fileId = $ret[0][0];
    
            $sql = 'INSERT INTO basFile
                                (fileId,
                                fileName)
                        VALUES (?,?)';
    
            $args = array( 
                        $data->fileId,
                        $data->fileName
                        );
    
            $result = $db->execute(SAGU::prepare($sql, $args, false));
        }
        if ( $result )
        {
            return $data;
        }
        return false;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateFile($data)
    {
        $sql = 'UPDATE basFile
                   SET fileName = ?
                 WHERE fileId   = ?';

        $args = array( $data->fileName,
                       $data->fileId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args, false);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $fileId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteFile($fileId)
    {
        $sql = 'DELETE FROM basFile
                      WHERE fileId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $fileId));
        //$db->close();

        return $result;
    }

}

