/**
 * Class to manipulate the basWeekDay table
 **/
class BusinessBasicBusWeekDay extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'basic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listWeekDay()
    {
        $db  = $this->getDatabase();
        $sql = 'SELECT weekDayId,
                       description
                  FROM basWeekDay   
              ORDER BY weekDayId';
        $ret = $db->query($sql);
        //$db->close();
        return $ret;
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $weekDayId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getWeekDay($weekDayId)
    {
        $sql = 'SELECT weekDayId,
                       description,
                       shortDescription,
                       userName,
                       TO_CHAR(dateTime,\'' . MASK_TIMESTAMP . '\'),
                       ipAddress
                  FROM basWeekDay
                 WHERE weekDayId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $weekDayId));
        //$db->close();

        $weekDay = new basWeekDay();
        list ( $weekDay->weekDayId,
               $weekDay->description,
               $weekDay->shortDescription,
               $weekDay->userName,
               $weekDay->dateTime,
               $weekDay->ipAddress ) = $result[0];

        return $weekDay; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchWeekDay($filters)
    {
        $sql= 'SELECT weekDayId,
                      description,
                      shortDescription
                 FROM basWeekDay ';

        if ( strlen((string)$filters->weekDayId) > 0 )
        {
            $where .= ' AND weekDayId = ? ';
            $args[] = $filters->weekDayId;
        }
        if ( strlen((string)$filters->description) > 0 )
        {
            $where .= ' AND TO_ASCII(description) ILIKE TO_ASCII(?) ';
            $args[] = $filters->description . '%';
        }
        if ( strlen((string)$filters->shortDescription) > 0 )
        {
            $where .= ' AND TO_ASCII(shortDescription) ILIKE TO_ASCII(?) ';
            $args[] = $filters->shortDescription . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . ' ORDER BY weekDayId';
            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertWeekDay($data)
    {
        $sql = 'INSERT INTO basWeekDay
                            (weekDayId,
                             description,
                             shortDescription)
                     VALUES (?,?,?)';

        

        $args = array( $data->weekDayId,
                       $data->description,
                       $data->shortDescription );

        $db     = $this->getDatabase();

        $result = $db->execute(SAGU::prepare($sql, $args));


        //$db->close();

        return $result;

    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function updateWeekDay($data)
    {
        $sql = 'UPDATE basWeekDay
                   SET description      = ?,
                       shortDescription = ?
                 WHERE weekDayId        = ?';

        $args = array( $data->description,
                       $data->shortDescription,
                       $data->weekDayId );

        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $weekDayId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
   public function deleteWeekDay($weekDayId)
    {
        $sql = 'DELETE FROM basWeekDay
                      WHERE weekDayId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $weekDayId));
        //$db->close();

        return $result;
    }

}

