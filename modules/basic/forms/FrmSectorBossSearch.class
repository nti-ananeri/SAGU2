/**
 * Form to search the basSectorBoss table
 */
class FrmSectorBossSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'basic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Sector responsible', $this->home, 'sectorBoss-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $sectorLabel = new MText('sectorLabel', _M('Sector',$module).':');
        $sectorLabel->setWidth(FIELD_CONTAINER_SIZE);

        $sectorIdS = new MLookupTextField('sectorIdS', $this->sectorIdS->value, '', FIELD_LOOKUPFIELD_SIZE, null, null, 'sectorDescriptionS', 'basic', 'Sector', null, null, true);
        $sectorIdS->setJsHint(_M('Enter the sector code',$module));
        $validators[] = new MIntegerValidator('sectorIdS');

        $sectorDescriptionS = new MTextField('sectorDescriptionS', $this->sectorDescriptionS->value, '', FIELD_DESCRIPTION_SIZE);
        //$sectorDescriptionS->setReadOnly(true);
        $sectorDescriptionS->setJsHint(_M('Sector description',$module));

        $hctSetor = new MHContainer('hctSetor', array($sectorLabel, $sectorIdS, $sectorDescriptionS));
        $hctSetor->setShowLabel(true);
        $fields[]   = $hctSetor;

        $bossLabel = new MText('bossLabel', _M('Responsible',$module) . ':');
        $bossLabel->setWidth(FIELD_CONTAINER_SIZE);

        $bossIdS   = new MLookupTextField('bossIdS', $this->bossIdS->value, '', FIELD_LOOKUPFIELD_SIZE, null, null, 'bossNameS', 'basic', 'PhysicalPersonEmployeeAndProfessor', null, null, true);
        $bossIdS->setJsHint(_M('Enter the sector responsible code',$module));
        $validators[] = new MIntegerValidator('bossIdS');
        
        $bossNameS = new MTextField('bossNameS', $this->bossNameS->value, '', FIELD_DESCRIPTION_SIZE);
        //$bossNameS->setReadOnly(true);
        $bossNameS->setJsHint(_M('Responsible name',$module));

        $hctBoss = new MHContainer('hctBoss', array($bossLabel, $bossIdS, $bossNameS));
        $hctBoss->setShowLabel(true);
        $fields[]   = $hctBoss;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);

        // get filters values
        $filters->sectorId          = $this->sectorIdS->value;
        $filters->sectorDescription = $this->sectorDescriptionS->value;
        $filters->bossId            = $this->bossIdS->value;
        $filters->bossName          = $this->bossNameS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdSectorBossSearch',$filters);
        $business   = $this->manager->getBusiness($module,'BusSectorBoss');
        $data       = $business->searchSectorBoss($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        
        if ( isset($validators) )
        {
            $this->setValidators($validators);
        }


        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.sectorIdS.focus();');
        }

    }

}

?>
