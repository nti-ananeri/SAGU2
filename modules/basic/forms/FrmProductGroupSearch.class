/**
 * Form to search the basProductGroup table
 */
class FrmProductGroupSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'basic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Product group', $this->home, 'productGroup-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        //product group id
        $productGroupIdLabelS = new MText('productGroupIdLabelS', _M('Code',$module).':');
        $productGroupIdLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $productGroupIdS      = new MTextField('productGroupIdS', $this->productGroupIdS->value, '', FIELD_ID_SIZE);
        $productGroupIdS->setJsHint(_M('Enter the product group id',$module));
        $hctProductGroup      = new MHContainer('hctProductGroup', array($productGroupIdLabelS, $productGroupIdS));
        $hctProductGroup->setShowLabel(true);
        $fields[]             = $hctProductGroup;

        //name
        $productGroupNameLabelS = new MText('productGroupNameLabelS', _M('Name',$module).':');
        $productGroupNameLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $productGroupNameS      = new MTextField('productGroupNameS', $this->productGroupNameS->value, '', FIELD_DESCRIPTION_SIZE);
        $productGroupNameS->setJsHint(_M('Enter the product group name',$module));
        $hctProductGroupName    = new MHContainer('hctProductGroupName', array($productGroupNameLabelS, $productGroupNameS));
        $hctProductGroupName->setShowLabel(true);
        $fields[]               = $hctProductGroupName;

        //description
        $productGroupDescriptionLabelS = new MText('productGroupDescriptionLabelS', _M('Description',$module).':');
        $productGroupDescriptionLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $productGroupDescriptionS      = new MTextField('productGroupDescriptionS', $this->productGroupDescriptionS->value, '', FIELD_DESCRIPTION_SIZE);
        $productGroupDescriptionS->setJsHint(_M('Enter the product group description',$module));
        $hctProductGroupDescription    = new MHContainer('hctProductGroupDescription', array($productGroupDescriptionLabelS, $productGroupDescriptionS));
        $hctProductGroupDescription->setShowLabel(true);
        $fields[]                      = $hctProductGroupDescription;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);

        // get filters values
        $filters->productGroupId = $this->productGroupIdS->value;
        $filters->name           = $this->productGroupNameS->value;
        $filters->description    = $this->productGroupDescriptionS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdProductGroupSearch',$filters);
        $business   = $this->manager->getBusiness($module,'BusProductGroup');
        $data       = $business->searchProductGroup($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        
        if ( isset($validators) )
        {
            $this->setValidators($validators);
        }

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.productGroupIdS.focus();');
        }

    }

}

