/**
 * Form to search the basProduct table
 */
class FrmProductSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'basic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Product group', $this->home, 'product-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        //product id
        $productIdLabelS = new MText('productIdLabelS', _M('Code',$module).':');
        $productIdLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $productIdS      = new MTextField('productIdS', $this->productIdS->value, '', FIELD_ID_SIZE);
        $productIdS->setJsHint(_M('Enter the product id',$module));
        $hctProduct      = new MHContainer('hctProduct', array($productIdLabelS, $productIdS));
        $hctProduct->setShowLabel(true);
        $fields[]        = $hctProduct;

        //name
        $productNameLabelS = new MText('productNameLabelS', _M('Name',$module).':');
        $productNameLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $productNameS      = new MTextField('productNameS', $this->productNameS->value, '', FIELD_DESCRIPTION_SIZE);
        $productNameS->setJsHint(_M('Enter the product name',$module));
        $hctProductName    = new MHContainer('hctProductName', array($productNameLabelS, $productNameS));
        $hctProductName->setShowLabel(true);
        $fields[]          = $hctProductName;

        //description
        $productDescriptionLabelS = new MText('productDescriptionLabelS', _M('Description',$module).':');
        $productDescriptionLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $productDescriptionS      = new MTextField('productDescriptionS', $this->productDescriptionS->value, '', FIELD_DESCRIPTION_SIZE);
        $productDescriptionS->setJsHint(_M('Enter the product description',$module));
        $hctProductDescription    = new MHContainer('hctProductDescription', array($productDescriptionLabelS, $productDescriptionS));
        $hctProductDescription->setShowLabel(true);
        $fields[]                 = $hctProductDescription;

        //product group id
        $productGroupIdLabelS = new MText('productGroupIdLabelS', _M('Product group',$module).':');
        $productGroupIdLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $busGroupProduct      = $MIOLO->GetBusiness($module, 'BusProductGroup');
        $productGroupIdS      = new Mselection('productGroupIdS', $this->productGroupIdS->value, '', $busGroupProduct->listProductGroup(), true);
        $productGroupIdS->setJsHint(_M('Enter the product group id',$module));
        $hctProductGroup      = new MHContainer('hctProductGroup', array($productGroupIdLabelS, $productGroupIdS));
        $hctProductGroup->setShowLabel(true);
        $fields[]             = $hctProductGroup;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);

        // get filters values
        $filters->productId      = $this->productIdS->value;
        $filters->name           = $this->productNameS->value;
        $filters->description    = $this->productDescriptionS->value;
        $filters->productGroupId = $this->productGroupIdS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdProductSearch',$filters);
        $business   = $this->manager->getBusiness($module,'BusProduct');
        $data       = $business->searchProduct($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        
        if ( isset($validators) )
        {
            $this->setValidators($validators);
        }

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.productIdS.focus();');
        }

    }

}

?>
