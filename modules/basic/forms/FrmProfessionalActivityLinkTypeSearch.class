/**
 * Form to search the basProfessionalActivityLinkType table
 */
class FrmProfessionalActivityLinkTypeSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'basic';
        $module = MIOLO::getCurrentModule();

        $this->home   = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar', $MIOLO->getActionURL($module, $action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Professional activity link type', $this->home, 'professionalActivityLinkType-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;
        
        $professionalActivityLinkTypeIdS = new MTextField('professionalActivityLinkTypeIdS', $this->professionalActivityLinkTypeIdS->value, _M('Id', $module), FIELD_ID_SIZE);
        $professionalActivityLinkTypeIdS->setJsHint(_M('Enter the professional activity link type code', $module));
        $fields[] = $professionalActivityLinkTypeIdS;
        $validators[] = new MIntegerValidator('professionalActivityLinkTypeIdS');
        
        $professionalActivityLinkTypeDescriptionS = new MTextField('professionalActivityLinkTypeDescriptionS', $this->professionalActivityLinkTypeDescriptionS->value, _M('Description', $module), FIELD_DESCRIPTION_SIZE);
        $professionalActivityLinkTypeDescriptionS->setJsHint(_M('Enter the professional activity link type description', $module));
        $fields[] = $professionalActivityLinkTypeDescriptionS;

        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);

        // get filters values
        $filters->professionalActivityLinkTypeId = $this->professionalActivityLinkTypeIdS->value;
        $filters->description                    = $this->professionalActivityLinkTypeDescriptionS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module, 'GrdProfessionalActivityLinkTypeSearch', $filters);
        $business = $this->manager->getBusiness($module, 'BusProfessionalActivityLinkType');
        $data = $business->searchProfessionalActivityLinkType($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setValidators($validators);
        $this->setLabelWidth(FIELD_LABEL_SIZE);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.professionalActivityDescriptionS.focus();');
        }

    }

}

