/**
 * Form to search the basCity table
 */
class FrmEmailList extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {

        $this->module = 'basic';
        $module       = $this->module;
        $this->home   = $data->home;

        parent::__construct(_M('E-Mail list',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());
        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO   = MIOLO::getInstance();
        $module  = MIOLO::getCurrentModule();
        $action  = MIOLO::getCurrentAction();
        $session = $MIOLO->session;

        $emails = $session->IsRegistered('emails') ? unserialize($session->GetValue('emails')) : null;

        $grdEmailList = $MIOLO->getUI()->getGrid($module, 'GrdEmailList');
        $grdEmailList->setData($emails);
        $this->addField($grdEmailList);

        $fields[] = new MSeparator('<hr>');
        $fields[] = new MDiv('closeDiv', new MButton('close', _M('Close window', $module), 'javascript:window.close()'), null, 'align="center"');

        $this->addField($fields);
        $this->setLabelWidth(FIELD_LABEL_SIZE);

    }

}

