/**
 * Form to search the basNeighborhood table
 */
class FrmNeighborhoodSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Neighborhood', $this->home, 'neighborhood-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $fields[]  = new MHiddenField('neighborhoodIdS', $neighborhoodIdS);


        //$neighborhoodIdS = new MTextField( 'neighborhoodIdS', $this->neighborhoodIdS->value, _M('Code',$module), 10 );
        //$neighborhoodIdS->setJsHint( _M('Enter the neighborhood code',$module) );
        //$fields[] = $neighborhoodIdS;

        $neighborhoodNameS = new MTextField( 'neighborhoodNameS', $this->neighborhoodNameS->value, _M('Description',$module), FIELD_DESCRIPTION_SIZE);
        $neighborhoodNameS->setJsHint( _M('Enter the neighborhood name',$module) );
        $fields[] = $neighborhoodNameS;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);

        // get filters values
        $filters->neighborhoodId   = $this->neighborhoodIdS->value;
        $filters->name             = $this->neighborhoodNameS->value;
        //$filters->nationality      = $this->nationality->value;
        unset($this->neighborhoodIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdNeighborhoodSearch',$filters);
        $business = $this->manager->getBusiness($module,'BusNeighborhood');
        $data = $business->searchNeighborhood($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.neighborhoodIdS.focus();');
        }
    }
}

