/**
 * Form to manipulate a holiday
 **/
class FrmHolidaySearch extends MForm
{

    /**
     * Class constructor
     **/
    function __construct()
    {

        $module = MIOLO::getCurrentModule();

        parent::__construct(_M('Search', $module));

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO    = MIOLO::getInstance();
        $module   = MIOLO::getCurrentModule();
        $action   = MIOLO::getCurrentAction();
        $function = MIOLO::_request('function');

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));

        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');
        $toolBar->disableButton('tbBtnSave');
        $fields[] = $toolBar;

        $holidayDateLabel = new MText('holidayDateLabel',_M('Holiday',$module));
        $holidayDateLabel->setWidth(FIELD_CONTAINER_SIZE);
        //$holidayDateLabel->setClass('m-caption m-caption-required');

        $holidayDateS    = new MCalendarField('holidayDateS', $this->getFormValue('holidayDateS',$data->holidayDateS),'', FIELD_DATE_SIZE);
        $holidayDateS->setJsHint(_M('Enter the holiday date',$module));
        
        $validators[] = new MDateDMYValidator('holidayDateS','',false);
        
        $hctHolidayDate = new MHContainer('hctHolidayDate',array($holidayDateLabel,$holidayDateS));
        $hctHolidayDate->setShowLabel(false);
        $fields[] = $hctHolidayDate;


        $data->description = $this->getFormValue('descriptionS', $data->description);
        
        $descriptionLabel = new MText('holidayDateLabel',_M('Description',$module));
        $descriptionLabel->setWidth(FIELD_CONTAINER_SIZE);
       // $descriptionLabel->setClass('m-caption m-caption-required');
        
        $descriptionS        = new MTextField('descriptionS', $data->description,'', FIELD_DESCRIPTION_SIZE);
        $hctDescription = new MHContainer('hctDescription',array($descriptionLabel, $descriptionS));
        $fields[] = $hctDescription;

        $cityLabel = new MText('cityLabel', _M('City',$module) . ':');
        $cityLabel->setWidth(FIELD_CONTAINER_SIZE);
        //$cityLabel->setClass('m-caption m-caption-required');

        $cityIdS = new MLookupTextField('cityIdS', $this->getFormValue('cityIdS',$data->cityId), '', FIELD_LOOKUPFIELD_SIZE, null, null, 'cityName,limbo,stateName,limbo,countryName,limbo', $module, 'City', null, null, true);
        $cityIdS->setJsHint(_M('Enter the city code',$module));
 
        $cityName = new MTextField('cityName', $this->getFormValue('cityName',$data->cityName), '', FIELD_DESCRIPTION_SIZE);
        $cityName->setJsHint(_M('City name',$module));
        $cityName->setReadOnly(true);

        $hctCity = new MHContainer('hctCity', array($cityLabel, $cityIdS, $cityName));
        $hctCity->setShowLabel(true);
        $fields[]  = $hctCity;

       // $validators[]    = new MRequiredValidator('description');

        $fields[] = new MButton('btnSearch',_M('Search',$module));
 
        $fields[] = new Separator('');

        $this->setFields($fields);
        $this->setValidators($validators);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        $this->setShowPostButton(false);
        $this->setClose($MIOLO->getActionURL($module,substr($action,0,strrpos($action,':'))));

        // get filters values
        $filters->holidayDate   = $this->holidayDateS->value;
        $filters->description      = $this->descriptionS->value;
        $filters->cityId      = $this->cityIdS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdHolidaySearch',$filters);
        $business = $this->manager->getBusiness($module,'BusHoliday');
        $data = $business->searchHoliday($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        $this->page->onLoad('document.' . $this->name . '.holidayDateS.focus();');

    }

}

?>
