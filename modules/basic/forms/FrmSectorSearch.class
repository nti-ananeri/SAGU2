/**
 * Form to search the basSector table
 */
class FrmSectorSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'basic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Sector', $this->home, 'sector-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

//         $sectorIdS = new MTextField('sectorIdS', $this->sectorIdS->value, _M('Code',$module), 10);
//         $sectorIdS->setJsHint(_M('Enter the sector code',$module));
//         $fields[] = $sectorIdS;

        $fields[]  = new MHiddenField('sectorIdS', $sectorIdS);

        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Description',$module), FIELD_DESCRIPTION_SIZE);
        $descriptionS->setJsHint(_M('Enter the sector description',$module));
        $fields[] = $descriptionS;

        $emailS = new MTextField('emailS', $this->emailS->value, _M('E-mail',$module), 40);
        $emailS->setJsHint(_M('Enter the sector e-mail',$module));
        $fields[] = $emailS;

        $isCoordinatorsSectorLabelS = new MText('isCoordinatorsSectorLabelS', _M('Is it the course coordinator sector',$module) . '?');
        $isCoordinatorsSectorLabelS->setWidth(FIELD_LABEL_SIZE);

        $isCoordinatorsSectorS = new MRadioButtonGroup('isCoordinatorsSectorS', '', SAGU::listTrueFalseIndifferent(1), null, null, 'horizontal');
        $isCoordinatorsSectorS->SetShowLabel(false);

        $hctIsCoordinatorsSectorS = new MHContainer('hctIsCoordinatorsSectorS', array($isCoordinatorsSectorLabelS, $isCoordinatorsSectorS));
        $fields[]  = $hctIsCoordinatorsSectorS;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);

        // get filters values
        $filters->sectorId             = $this->sectorIdS->value;
        $filters->description          = $this->descriptionS->value;
        $filters->email                = $this->emailS->value;
        $filters->isCoordinatorsSector = $this->isCoordinatorsSectorS->value;

        unset($this->sectorIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdSectorSearch',$filters);
        $business = $this->manager->getBusiness($module,'BusSector');
        $data = $business->searchSector($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);
        
        if ( isset($validators) )
        {
            $this->setValidators($validators);
        }


        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.descriptionS.focus();');
        }

    }

}

?>
