<?php

class GrdPhysicalPersonPhones extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home = 'main:person:phones';
        $module = 'basic';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( new MGridColumn( _M('Person id', $module),    'right', true, null, true, null, true ),
                          new MGridColumn( _M('Name', $module),         'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Residential phone', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Work phone', $module),     'left',  true, null, true, null, true),
                          new MGridColumn( _M('Cell', $module),      'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Message Phone', $module),      'left',  true, null, true, null, true )
                        );

        $opts = array( 'function'       => 'update',
                       'personId'       => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridPhysicalPersonPhones' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );

        $this->eventHandler();

    }

}

?>
