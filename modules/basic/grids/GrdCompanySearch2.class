/**
 * Grid used by form to display search results
 **/
class GrdCompanySearch2 extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');

        $columns = array( 
                          new MGridColumn( _M('Code', 'basic'),     'right', true, null, true, null, false ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Name', 'basic'),     'left',  true, null, true, null, false ),
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('City', 'basic'),     'left',  true, null, true, null, false ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Location', 'basic'), 'left',  true, null, true, null, false ),
                        );

        parent::__construct( null, $columns, null, 0, 0, 'gridCompanySearch2' );

        $this->setIsScrollable();
        $this->eventHandler();

    }

}

