$MIOLO->trace('file:' . $_SERVER['SCRIPT_NAME']);
$MIOLO->checkAccess($module, ACD_ACCESS, true, true);

$home = 'main:register:interchange:interchange';
$navbar->addOption(_M('Interchange', $module), $module, $home);

$MIOLO->getClass('basic', 'access');
access::insert('Interchange', $home, 'interchange-16x16.png');
$data->home = $home;

$function = MIOLO::_request('function');

$ui = $MIOLO->getUI();
if ( (strlen($function) == 0) || ($function == 'search') )
{
    $frmInterchangeSearch = $ui->getForm($module,'FrmInterchangeSearch', $data);
    $frmInterchangeSearch->setClose($MIOLO->getActionURL($module,substr($home, 0, strrpos($home, ':'))));

    $content = $frmInterchangeSearch;
}
else
{
    switch ( $function )
    {
        case 'insert':
            $MIOLO->checkAccess($module, ACD_INSERT, true, true);
        break;
        case 'update':
            if (strlen(MIOLO::_request('event')) > 0)
            {
                $MIOLO->checkAccess($module, ACD_UPDATE, true, true);
            }
            else
            {
                $MIOLO->checkAccess($module, ACD_ACCESS, true, true);
            }
        break;
        case 'delete':
            $MIOLO->checkAccess($module, ACD_DELETE, true, true);
        break;
    }
          
    $frmInterchange = $ui->getForm( $module, 'FrmInterchange' );

    $content = $frmInterchange;
}

$theme->clearContent($content);
$theme->insertContent($content);

