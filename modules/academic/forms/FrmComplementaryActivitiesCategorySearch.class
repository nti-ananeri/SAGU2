/**
 * Form to search the basComplementaryActivitiesCategory table
 */
class FrmComplementaryActivitiesCategorySearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;

        $this->home   = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Complementary activity category', $this->home, 'complementaryActivitiesCategory-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        //$complementaryActivitiesCategoryIdS = new MTextField('complementaryActivitiesCategoryIdS', $this->complementaryActivitiesCategoryIdS->value, _M('Complementary activity category id', $module), 10);
        //$complementaryActivitiesCategoryIdS->setJsHint(_M('Enter the state contract code', $module));
        //$fields[]          = $complementaryActivitiesCategoryIdS;

        $fields[]  = new MHiddenField('complementaryActivitiesCategoryIdS', $this->getFormValue('complementaryActivitiesCategoryIdS', $complementaryActivitiesCategoryIdS));

        $complementaryActivitiesCategoryDescriptionS = new MTextField('complementaryActivitiesCategoryDescriptionS', $this->complementaryActivitiesCategoryDescriptionS->value, _M('Description', $module), FIELD_DESCRIPTION_SIZE);
        $complementaryActivitiesCategoryDescriptionS->setJsHint(_M('Enter the complementary activity category description', $module));
        $fields[]                   = $complementaryActivitiesCategoryDescriptionS;

        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);

        // get filters values
        $filters->complementaryActivitiesCategoryId = $this->complementaryActivitiesCategoryIdS->value;
        $filters->description      = $this->complementaryActivitiesCategoryDescriptionS->value;
//        $filters->needsReason      = $this->complementaryActivitiesCategoryNeedsReasonS->value;

        unset($this->complementaryActivitiesCategoryIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module, 'GrdComplementaryActivitiesCategorySearch', $filters);
        $business = $this->manager->getBusiness($module, 'BusComplementaryActivitiesCategory');
        $data = $business->searchComplementaryActivitiesCategory($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.countryIdS.focus();');
        }
        
        $this->setLabelWidth(FIELD_LABEL_SIZE);
    }

}

?>
