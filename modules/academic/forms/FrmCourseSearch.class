/**
 * Form to search the basCountry table
 */
class FrmCourseSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;

        $this->home   = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Course', $this->home, 'course-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $courseIdS = new MTextField('courseIdS', $this->courseIdS->value, _M('Course id', $module), FIELD_ID_SIZE);
        $courseIdS->setJsHint(_M('Enter the course code', $module));
        $fields[]  = $courseIdS;

        $business = $MIOLO->getBusiness($module, 'BusFormationLevel');
        $formationLevelIdS = new MComboBox('formationLevelIdS', $this->formationLevelIdS->value, _M('Formation level id', $module), $business->listFormationLevel());
        $formationLevelIdS->setJsHint(_M('Enter the formation level code', $module));
        $fields[] = $formationLevelIdS;

//        $courseNameS = new MTextField('courseNameS', $this->courseNameS->value, _M('Name', $module), 40);
        $courseNameS = new MTextField('courseNameS', $this->courseNameS->value, _M('Name', $module), FIELD_DESCRIPTION_SIZE);
        $courseNameS->setJsHint(_M('Enter the course name', $module));
        $fields[] = $courseNameS;

        $courseShortNameS = new MTextField('courseShortNameS', $this->courseShortNameS->value, _M('Short name', $module), 20);
        $courseShortNameS->setJsHint(_M('Enter the course short name', $module));
        $fields[] = $courseShortNameS;
        $business = $MIOLO->getBusiness($module, 'BusCenter');
        $courseCenterIdS = new MComboBox('courseCenterIdS', $this->courseCenterIdS->value, _M('Course center id', $module), $business->listCenter());
	
        $courseCenterIdS->setJsHint(_M('Enter the course center code', $module));
        $fields[] = $courseCenterIdS;

        //trocar esse btnsearch por um que faz o linkbutton
        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);

        // get filters values
        $filters->courseId         = $this->courseIdS->value;
        $filters->name             = $this->courseNameS->value;
        $filters->shortName        = $this->courseShortNameS->value;
        $filters->centerId         = $this->courseCenterIdS->value;
        $filters->formationLevelId = $this->formationLevelIdS->value;
        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdCourseSearch', $filters);
        $business   = $this->manager->getBusiness($module,'BusCourse');
        $data       = $business->searchCourse($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->page->onLoad('document.' . $this->name . '.courseIdS.focus();');
        $this->setLabelWidth(FIELD_LABEL_SIZE);
    }
}

