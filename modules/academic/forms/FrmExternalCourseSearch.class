/**
 * Form to search the acdExternalCourse table
 */
class FrmExternalCourseSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'academic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('External course', $this->home, 'externalCourse-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $limbo = new MHiddenField('limbo', '');
        $fields[] = $limbo;

        //$externalCourseIdS = new MTextField('externalCourseIdS', $this->externalCourseIdS->value, _M('External course id',$module), 10);
        //$externalCourseIdS->setJsHint(_M('Enter the external course id',$module));
        //$fields[] = $externalCourseIdS;
        $fields[]  = new MHiddenField('externalCourseIdS', $this->getFormValue('externalCourseIdS', $externalCourseIdS));

        $externalCourseNameS = new MTextField('externalCourseNameS', $this->externalCourseNameS->value, _M('Name',$module), FIELD_DESCRIPTION_SIZE);
        $externalCourseNameS->setJsHint(_M('Enter the external course name',$module));
        $fields[] = $externalCourseNameS;

        $externalCourseShortNameS = new MTextField('externalCourseShortNameS', $this->externalCourseShortNameS->value, _M('Short name',$module), 30);
        $externalCourseShortNameS->setJsHint(_M('Enter the external course short name',$module));
        $fields[] = $externalCourseShortNameS;

        /*
         * MLookupTextField class constructor prototype:
         *
         * function __construct($name = '', $value     = '',       $label   = '', $size         = 10,
         *                      $hint = '', $validator = null,     $related = '', $module       = '',
         *                      $item = '', $event     = 'filler', $filter  = '', $autocomplete = false)
         */
        $knowledgeAreaLabel = new MText('knowledgeAreaLabel', _M('Knowledge area',$module) . ':');
        $knowledgeAreaLabel->setWidth(FIELD_CONTAINER_SIZE);

        $knowledgeAreaIdS = new MLookupTextField('knowledgeAreaIdS', $this->knowledgeAreaIdS->value, '', FIELD_LOOKUPFIELD_SIZE, null, null, 'knowledgeAreaNameS', $module, 'KnowledgeArea', null, null, true);
        $knowledgeAreaIdS->setJsHint(_M('Knowledge area id',$module));
        $validators[] = new MIntegerValidator('knowledgeAreaIdS', '', 'optional');

        $knowledgeAreaNameS = new MTextField('knowledgeAreaNameS', $this->knowledgeAreaNameS->value, '', FIELD_DESCRIPTION_SIZE);
        $knowledgeAreaNameS->setJsHint(_M('Enter the knowledge area name',$module));

        $hctKnowledgeArea  = new MHContainer('hctKnowledgeArea', array($knowledgeAreaLabel, $knowledgeAreaIdS, $knowledgeAreaNameS));
        $hctKnowledgeArea->setShowLabel(true);
        $fields[] = $hctKnowledgeArea;


        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);
        $this->setValidators($validators);

        // get filters values
        $filters->externalCourseId  = $this->externalCourseIdS->value;
        $filters->name              = $this->externalCourseNameS->value;
        $filters->shortName         = $this->externalCourseShortNameS->value;
        $filters->knowledgeAreaId   = $this->knowledgeAreaIdS->value;
        $filters->knowledgeAreaName = $this->knowledgeAreaNameS->value;

        unset($this->externalCourseIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdExternalCourseSearch',$filters);
        $business = $MIOLO->getBusiness($module,'BusExternalCourse');
        $data = $business->searchExternalCourse($filters);
        $grdResults->setData($data);
        $this->addField($grdResults);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.externalCourseIdS.focus();');
        }
        $this->setLabelWidth(FIELD_LABEL_SIZE);

    }

}

?>
