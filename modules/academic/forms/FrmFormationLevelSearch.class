/**
 * Form to search the basCountry table
 */
class FrmFormationLevelSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;

        $this->home   = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Formation level', $this->home, 'formationLevel-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        //$formationLevelIdS = new MTextField('formationLevelIdS', $this->formationLevelIdS->value, _M('Code', $module), 10);
        //$formationLevelIdS->setJsHint(_M('Enter the formation level code', $module));
        //$fields[] = $formationLevelIdS;

        $fields[]  = new MHiddenField('formationLevelIdS', $this->getFormValue('formationLevelIdS', $formationLevelId));

        $formationLevelDescriptionS = new MTextField('formationLevelDescriptionS', $this->formationLevelDescriptionS->value, _M('Description', $module), FIELD_DESCRIPTION_SIZE);
        $formationLevelDescriptionS->setJsHint(_M('Enter the formation level description', $module));
        $fields[] = $formationLevelDescriptionS;

        $formationLevelShortDescriptionS = new MTextField('formationLevelShortDescriptionS', $this->formationLevelShortDescriptionS->value, _M('Short description', $module), 3);
        $formationLevelShortDescriptionS->setJsHint(_M('Enter the formation level short description', $module));
        $fields[] = $formationLevelShortDescriptionS;

        $formationLevelAcademicDegreeS = new MTextField('formationLevelAcademicDegreeS', $this->formationLevelAcademicDegreeS->value, _M('Academic degree', $module), 20);
        $formationLevelAcademicDegreeS->setJsHint(_M('Enter the formation level academic degree', $module));
        $fields[] = $formationLevelAcademicDegreeS;

        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);
        $this->setLabelWidth(FIELD_LABEL_SIZE);

        // get filters values
        $filters->formationLevelId = $this->formationLevelIdS->value;
        $filters->description      = $this->formationLevelDescriptionS->value;
        $filters->shortDescription = $this->formationLevelShortDescriptionS->value;
        $filters->academicDegree   = $this->formationLevelAcademicDegreeS->value;

        unset($this->formationLevelIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdFormationLevelSearch', $filters);
        $business = $this->manager->getBusiness($module,'BusFormationLevel');
        $data = $business->searchFormationLevel($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.countryIdS.focus();');
        }
        $this->setLabelWidth(FIELD_LABEL_SIZE);
    }

}

?>
