/**
 * Form to search the acdReason table
 */
class FrmReasonSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'academic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Reason', $this->home, 'reason-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $limbo = new MHiddenField('limbo', '');
        $fields[] = $limbo;

//         $reasonIdS = new MTextField('reasonIdS', $this->reasonIdS->value, _M('Reason id',$module), 10);
//         $reasonIdS->setJsHint(_M('Enter the reason code',$module));
//         $fields[] = $reasonIdS;

        $fields[]  = new MHiddenField('reasonIdS', $this->getFormValue('reasonIdS', $reasonIdS));

        $descriptionS = new MTextField('descriptionS', $this->descriptionS->value, _M('Description',$module), FIELD_DESCRIPTION_SIZE);
        $descriptionS->setJsHint(_M('Enter the description',$module));
        $fields[] = $descriptionS;

        /*
         * MLookupTextField class constructor prototype:
         *
         * function __construct($name = '', $value     = '',       $label   = '', $size         = 10,
         *                      $hint = '', $validator = null,     $related = '', $module       = '',
         *                      $item = '', $event     = 'filler', $filter  = '', $autocomplete = false)
         */
        $stateContractLabelS = new MText('stateContractLabelS', _M('State contract', $module) . ':');
        $stateContractLabelS->setWidth(FIELD_CONTAINER_SIZE);
        $flds[] = $stateContractLabelS;
        
        $stateContractIdS = new MLookupTextField('stateContractIdS', $this->stateContractIdS->value, _M('State contract id',$module), FIELD_LOOKUPFIELD_SIZE, null, null, 'stateContractDescriptionS', $module, 'StateContract', null, null, true);
        $flds[] = $stateContractIdS;
        $validators[] = new MIntegerValidator('stateContractIdS', '', 'optional');

        $stateContractDescriptionS = new MTextField('stateContractDescriptionS', $this->stateContractDescriptionS->value, _M('Contract state description',$module), FIELD_DESCRIPTION_SIZE);
        $stateContractDescriptionS->setJsHint(_M('Enter the contract state description',$module));
        $flds[] = $stateContractDescriptionS;
        
        $hctStateContractS = new MHContainer('hctStateContract', $flds);
        $hctStateContractS->setShowLabel(false);
        $fields[] = $hctStateContractS;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);
        $this->setValidators($validators);

        // get filters values
        $filters->reasonId                  = $this->reasonIdS->value;
        $filters->description               = $this->descriptionS->value;
        $filters->stateContractId          = $this->stateContractIdS->value;
        $filters->stateContractDescription = $this->stateContractDescriptionS->value;

        unset($this->reasonIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdReasonSearch',$filters);
        $business = $MIOLO->getBusiness($module,'BusReason');
        $data = $business->searchReason($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.reasonIdS.focus();');
        }
        $this->setLabelWidth(FIELD_LABEL_SIZE);

    }

}

?>
