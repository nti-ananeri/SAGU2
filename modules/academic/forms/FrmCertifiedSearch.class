/**
 * Form to search the scdCertified table
 */
class FrmCertifiedSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $this->module = $module;

        $this->home   = $data->home;

        parent::__construct(_M('Search', $module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);
        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Certified', $this->home, 'certified-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $fields[]  = new MHiddenField('certifiedIdS', $this->getFormValue('certifiedIdS', $certifiedIdS));

        $personLabel = new MText('personLabel', _M('Person',$module) . ':');
        $personLabel->setWidth(FIELD_CONTAINER_SIZE);

        $personIdS = new MLookupTextField('personIdS', $this->getFormValue('personIdS', $data->personIdS), '', FIELD_LOOKUPFIELD_SIZE, null, null, 'personNameS', 'basic', 'PhysicalPerson', null, null, true);
        $personIdS->setJsHint(_M('Person id',$module));
        $validators[] = new MIntegerValidator('personIdS', '', 'optional');

        $personNameS = new MTextField('personNameS', $personNameS, '', FIELD_DESCRIPTION_SIZE);
        $personNameS->setReadOnly(true);
        $personNameS->setJsHint(_M('Person name',$module));

        $hctPerson = new MHContainer('hctPerson', array($personLabel, $personIdS, $personNameS));
        $hctPerson->setShowLabel(true);
        $fields[]  = $hctPerson;

        $certifiedTypeLabel = new MText('certifiedTypeLabel', _M('Certified type',$module) . ':');
        $certifiedTypeLabel->setWidth(FIELD_CONTAINER_SIZE);

        $certifiedTypeIdS = new MLookupTextField('certifiedTypeIdS', $this->getFormValue('certifiedTypeIdS', $data->certifiedTypeIdS), '', FIELD_LOOKUPFIELD_SIZE, null, null, 'certifiedTypeDescriptionS', $module, 'CertifiedType', null, null, true);
        $certifiedTypeIdS->setJsHint(_M('Certified type',$module));
        $validators[] = new MIntegerValidator('certifiedTypeIdS', '', 'optional');

        $certifiedTypeDescriptionS = new MTextField('certifiedTypeDescriptionS', $certifiedTypeDescriptionS, '', FIELD_DESCRIPTION_SIZE);
        $certifiedTypeDescriptionS->setReadOnly(true);
        $certifiedTypeDescriptionS->setJsHint(_M('Description',$module));

        $hctCertifiedType = new MHContainer('hctCertifiedType', array($certifiedTypeLabel, $certifiedTypeIdS, $certifiedTypeDescriptionS));
        $hctCertifiedType->setShowLabel(true);
        $fields[]  = $hctCertifiedType;

        $fields[] = new MButton('btnSearch', _M('Search', $module));

        $this->setFields($fields);
        if ( $validators )
        {
            $this->setValidators($validators);
        }

        // get filters values
        //$filters->certifiedId     = $this->certifiedIdS->value;
        $filters->certifiedTypeId = $this->certifiedTypeIdS->value;
        //$filters->dateIssue       = $this->dateIssueS->value;
        $filters->personId        = $this->personIdS->value;

        unset($this->certifiedIdS->value);

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdCertifiedSearch', $filters);
        $business   = $this->manager->getBusiness($module,'BusCertified');
        $data       = $business->searchCertified($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);
        $this->setLabelWidth(FIELD_LABEL_SIZE);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.personIdS.focus();');
        }
    }
}

?>
