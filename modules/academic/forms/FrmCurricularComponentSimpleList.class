/**
 * Form to manipulate a classification
 **/
class FrmCurricularComponentSimpleList extends MForm
{

    /**
     * Class constructor
     **/
    function __construct()
    {

        $module = MIOLO::getCurrentModule();

        parent::__construct(_M('Enroll list', $module));

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();
    }

    /**
     * Default method to define fields
     **/
    public function createFields()
    {
        $MIOLO                       = MIOLO::getInstance();
        $module                      = MIOLO::getCurrentModule();
        $action                      = MIOLO::getCurrentAction();
        $function                    = MIOLO::_request('function');
        
        $data->contractId = strlen((string)MIOLO::_request('contractId'))>0 ? MIOLO::_request('contractId') : MIOLO::_request('contractId', 'GET');
        $data->periodId = strlen((string)MIOLO::_request('periodId'))>0 ? MIOLO::_request('periodId') : MIOLO::_request('periodId', 'GET');

        if ((strlen((string)$data->contractId)>0) && (strlen((string)$data->periodId)>0))
        {
            $grdCurricularComponent = $MIOLO->getUI()->getGrid('academic', 'GrdCurricularComponentSimpleList');
            $businessCurricularComponent = $MIOLO->getBusiness('academic', 'BusCurricularComponent');
            $dataCurricularComponent     = $businessCurricularComponent->getCurricularComponentSimpleList($data);
            $grdCurricularComponent->setData($dataCurricularComponent);            
            $fields[] = $grdCurricularComponent;
            $fields[] = new MSeparator('');
            $div = new MDiv('divClose', new MLink('closeWindow', _M('Close window', $module), 'javascript:window.close()'), null, 'align="center"');
            $div->width='100%';
            $fields[] = $div;
            $fields[] = new MSeparator('');
            
            $this->setFields($fields);
            $this->setShowPostButton(false);
            $this->setClose('javascript:self.close()');
        }
        else
        {
            $MIOLO->Information(_M('No sufficient information to get the curricular component', $module), 'javascript:self.close()');
        }
    }
}

