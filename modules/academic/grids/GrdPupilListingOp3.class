/**
 * Grid used by form to display search results
 **/
class GrdPupilListingOp3 extends MGrid
{
    var $totalFooter;
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:pupilListing';

        $returnPath = urlencode($home);
        $returnData = urlencode(serialize(array('filter' => MIOLO::_request('filter'), 'reportOption' => MIOLO::_request('reportOption'))));

        $url_pupils = $MIOLO->getActionURL($module, 'main:report:listcoursepupils', null, array('courseId'=>'#0#', 'unitId'=>'#5#', 'courseVersion'=>'#1#', 'turnId'=>'#3#', 'returnPath' => $returnPath, 'returnData' => $returnData));
        
        $columns = array( new MGridColumn( _M('Code', $module),   'right', true, null, true, null, false ), 
                          new MGridColumn(_M('Course version', $module), 'left', true, null, true, null, false),
                          new MGridHyperlink( _M('Course', $module), $url_pupils, null, true, null, false ),
                          new MGridColumn(null),
                          new MGridColumn(_M('Turn', $module),   'left',  true, null, true, null, false),
                          new MGridColumn(null),
                          new MGridColumn( _M('Unit', $module), 'left', true, null, true, null, false),
                          new MGridColumn( _M('Quantity', $module), 'center', true, null, true, null, false)
                          );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( $filters, $columns, $url, 0/*LISTING_NREGS*/, 0, 'gridCourse' );

//        $this->setIsScrollable();
        $this->setRowMethod($this, 'myRowMethod');
        $this->setFooter('<b>' . _M('Total of pupils', $module) . ':</b>&nbsp;');
        $this->eventHandler();
    }

    public function myRowMethod($i, $row, $actions, $columns )
    {
        $this->totalFooter += $row[7];
    }

    function generateFooter( )
    {
        $MIOLO  = MIOLO::getInstance( );
        $module = $MIOLO->getCurrentModule( );

        $controls = array( new mText( '', $this->totalFooter));
        $controls = array_merge( parent::generateFooter(), $controls);
        return $controls;
    }

}

