/**
 * Grid used by form to display search results
 **/
class GrdPupilSituationPenalty extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $home   = 'main:pupilSituation';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Penalty id', $module),        'center', true, null, true, null, true ),
                          new MGridColumn( _M('Loan', $module),              'center', true, null, true, null, true ),
                          new MGridColumn( _M('Penalty date', $module),      'center', true, null, true, null, true ),
                          new MGridColumn( _M('It was paid', $module) . '?', 'center', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Value', $module),             'center', true, null, true, null, true )
                        );

        $opts = array('personId'=>MIOLO::_request('personId'));

        if (count($filters) > 0)
        {
            foreach ( $filters as $k => $v )
            {
                $opts[$k] = $v;
            }
        }

        $url = $MIOLO->getActionURL($module, $home, null, $opts);

        parent::__construct( null, $columns, $url, 0, 0, 'gridPupilSituationPenalty' );

        $this->setIsScrollable();

        $this->eventHandler();

    }

}
