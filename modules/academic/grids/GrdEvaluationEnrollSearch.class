/**
 * Grid used by form to display search results
 **/
class GrdEvaluationEnrollSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:evaluationEnroll';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Evaluation id',  $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Description',    $module),  'left', true, null, true, null, true ),
                          new MGridColumn( _M('Enroll id',      $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Grade',          $module),  'left', true, null, true, null, true ),
                          new MGridColumn( _M('Concept',        $module),  'left', true, null, true, null, true ),
                          new MGridColumn( _M('Descritive',     $module),  'left', true, null, true, null, true ),
                          new MGridColumn( _M('Is it absent',      $module),  'left', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Schedule professor id', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Professor id',   $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Professor name', $module),  'left', true, null, true, null, true )
                        );

        $opts = array('function'            =>'update',
                        'evaluationId'        =>'%0%',
                        'enrollId'            =>'%2%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'            =>'delete',
                        'evaluationId'        =>'%0%',
                        'enrollId'            =>'%2%',
                        'event'               =>'tbBtnDelete_click' );
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridEvaluationEnroll' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

