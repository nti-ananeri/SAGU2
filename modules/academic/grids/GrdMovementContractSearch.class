/**
 * Grid used by form to display search results
 **/
class GrdMovementContractSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:contract:movementContract';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Contract id', $module),              'right',  true, null, true, null, true ),
                          new MGridColumn( _M('State contract id', $module),                 'right', true, null, true, null, true ),
                          new MGridColumn( _M('State description', $module),        'left', true, null, true, null, true ),
                          new MGridColumn( _M('Reason id', $module),                'right', true, null, true, null, true ),
                          new MGridColumn( _M('Reason description', $module),       'left', true, null, true, null, true ),
                          new MGridColumn( _M('State date', $module),               'left', true, null, true, null, true ),
                          new MGridColumn( _M('Last period', $module),              'right', true, null, true, null, true ),
                          new MGridColumn( _M('Last period description', $module),  'left', true, null, true, null, true )
                        );

        $opts = array('function'=>'update',
                      'contractId'=>'%0%',
                      'stateContractId'=>'%1%',
                      'stateTime'=>'%5%' );
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'contractId'=>'%0%',
                      'stateContractId'=>'%1%',
                      'stateTime'=>'%5%',
                      'event'=>'tbBtnDelete_click' );
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridMovementContract' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );

        if ( $MIOLO->checkAccess($module, ACD_ADMIN, false, true) )
        {
            $this->addActionDelete( $href_delete );
        }

        $this->eventHandler();
    }
}
?>
