/**
 * Grid used by form to display search results
 **/
class GrdEnrollSummarySearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:enrollSummary';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Enroll summary id', $module),   'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Contract id', $module),         'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Person name', $module),         'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Learning period id', $module),  'right',  true, null, true, null, true ),
                          new MGridColumn( _M('Description', $module),         'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Record date', $module),         'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Operation id', $module),        'center', true, null, true, null, true ),
                          new MGridColumn( _M('Description', $module),         'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Multiplier', $module),          'center', true, null, true, null, true ),
                          new MGridColumn( _M('Is it value', $module),            'center', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( _M('Parcels number', $module),      'center', true, null, true, null, true ),
                          new MGridColumn( _M('Is it processed', $module),        'center', true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true )
                          );


        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        if ( count($filters) > 0 )
        {
            unset($opts);
            foreach ( $filters as $k => $v )
            {
                $opts[$k] = $v;
            }
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridEnrollSummary' );

        $this->setIsScrollable();

        $this->eventHandler();

    }

}

