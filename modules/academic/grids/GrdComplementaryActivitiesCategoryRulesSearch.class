/**
 * Grid used by form to display search results
 **/
class GrdComplementaryActivitiesCategoryRulesSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:complementaryActivities:complementaryActivitiesCategoryRules';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array(
                          new MGridColumn( null ),
                          new MGridColumn( null ),
                          new MGridColumn( _M('Category id', $module),    'left', true, null, true, null, true ),
                          new MGridColumn( _M('Description', $module),    'right', true, null, true, null, true ),
                          new MGridColumn( _M('Course', $module),  'right', true, null, true, null, true ),
                          new MGridColumn( _M('Curricular component', $module),  'right', true, null, true, null, true ),
                          new MGridColumn( _M('Minimum hours', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Maximum hours', $module),        'right', true, null, true, null, true )
                        );

        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridComplementaryActivitiesCategoryRulesSearch' );

        //$this->setRowMethod('GrdComplementaryActivitiesCategoryRulesSearch', 'myRowMethod');


        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);

        if ( isSet($filters) )
        {
            foreach ( $filters as $k => $v )
            {
                $opts[$k] = $v;
            }
        }

        $opts = array('function'=>'update',
                      'complementaryActivitiesCategoryRulesId'=>'%0%'
                     );
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'complementaryActivitiesCategoryRulesId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );


        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->setLinkType('hyperlink');

        $this->eventHandler();
    }

