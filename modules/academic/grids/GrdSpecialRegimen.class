/**
 * Grid used by form to display search results
 **/
class GrdSpecialRegimen extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                          new MGridColumn( _M('Code', $module),                 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Curricular component', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Credits', $module),              'left', true, null, true, null, true ),
                          new MGridColumn( _M('Hours number', $module),         'left', true, null, true, null, true ),
                          new MGridColumn( _M('Offered curricular component id', $module),             'left', true, null, true, null, true )
                        );

        parent::__construct( null, $columns, $url, 0, 0, 'gridSpecialRegimen' );

        $this->setIsScrollable();

        $this->eventHandler();

    }

}

