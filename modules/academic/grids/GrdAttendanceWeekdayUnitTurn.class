class myMGridActionIcon extends MGridActionIcon
{
    var $onclick;
    
    function generate( )
    {
        $control = parent::generate( );
        
        if ( $this->enabled  )
        {
            $control->addAttribute('onclick', $this->onclick);
            if ( ! $this->href )
            {
                $control->location = '';
            }
        }
        return $control;
    }
}

