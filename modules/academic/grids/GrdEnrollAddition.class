/**
 * Grid used by form to display search results
 **/
class GrdEnrollAddition extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        
        $module = MIOLO::_request('module');
//        $function = MIOLO::_request('function');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        
        $columns = array(
                         new MGridColumn( _M('Offered', $module), 'left', true, null, true, null),
                         new MGridColumn( _M('Curriculum id', $module), 'left', true, null, false, null),
                         new MGridColumn( _M('Curricular component id', $module), 'right', true, null, true, null),
                         new MGridColumn( _M('Curricular component', $module), 'left',  true, null, true, null),
                         new MGridColumn( _M('Schedule', $module), 'left', true, null, true, null), 
                         new MGridColumn( _M('Turn', $module), 'left', true, null, true, null), 
                         new MGridColumn( _M('Class', $module), 'left', true, null, true, null), 
                         new MGridColumn( _M('Professor', $module), 'left', true, null, true, null)
                        );
      
        $url = $MIOLO->getActionURL($module,$action);
        parent::__construct( null, $columns, $url, 0, 0, 'GrdEnrollAddition' );
        
        $addAction = $MIOLO->getActionURL($module, $action, null, array('curriculumid'=>'#1#', 'groupid'=>'#0#', 'event'=>'addition'));

        $this->addActionText('add', _M('Add', $module), $addAction);
        //$this->setIsScrollable();
        $this->setFiltered(false);
        $this->eventHandler();

    }

}

?>
