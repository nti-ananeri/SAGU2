/**
 * Grid used by form to display search results
 **/
class GrdExamsActsAndConferenceListByCurricularComponent extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::_request('module');
        $action = MIOLO::getCurrentAction();
        $selectiveProccessId = MIOLO::_request('selectiveProccessId');
        $reportOption = MIOLO::_request('reportOption');
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $href = $MIOLO->getActionURL($module, '', null, array('placeRoomId'=>'#2#', 'build'=>'#4#', 'room'=>'#3#', 'selectiveProccessId'=>$selectiveProccessId, 'reportOption'=>$reportOption, 'event'=>'tbBtnPrint_click'));
        
        $columns = array(
                        new MDataGridColumn('cityExam', _M('Exam city', $module),        'right', true, '', false),
                        new MDataGridColumn('cityName', _M('City name', $module),        'left',  true, '', true),
                        new MDataGridColumn('placeRoomId', _M('Place room id', $module), 'right', true, '', false),
                        new MGridHyperlink(_M('Room', $module), $href, '', true ),
                        new MDataGridColumn('build', _M('Build', $module),               'left',  true, '', true),
                        new MDataGridColumn('count', _M('Inscriptions', $module),        'right', true, '', true),
                        new MDataGridColumn('vacant', _M('Vacant', $module),             'right', true, '', true),
                        );

        foreach ( $columns as $k => $v )
        {
            $v = 'ata';
        }

        $opts = array('function' => 'update');
        $href_edit = $MIOLO->getActionURL($module, '', null, array('placeRoomId'=>'#2#', 'build'=>'#4#', 'room'=>'#3#', 'selectiveProccessId'=>$selectiveProccessId, 'count'=>'#5#', 'reportOption'=>$reportOption, 'event'=>'tbBtnPrint_click'));

        unset($opts);
        /*foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }*/

        $url = $MIOLO->getActionURL($module,'', null, array('placeRoomId'=>'#2#', 'build'=>'#4#', 'room'=>'#3#', 'selectiveProccessId'=>$selectiveProccessId, 'reportOption'=>$reportOption, 'event'=>'tbBtnPrint_click'));
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridAnswerSheet' );

        $this->setIsScrollable();
//        $this->addActionUpdate( $href_edit );
        $this->addActionText('act', _M('Act', $module), $href_edit);
        $this->eventHandler();

        $url = $MIOLO->getCurrentURL();
        parent::__construct( null, $columns, $url, null, 0, 'gridInscriptionByRoom' );
        $this->setTitle( _M('Inscriptions by room', $module));
        $this->setIsScrollable();
        $this->eventHandler();
    }

}

