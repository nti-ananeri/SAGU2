/**
 * Grid used by form to display search results
 **/
class GrdJourneyAidCertified extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:document:certified';
        $module = MIOLO::_request('module');

        $grdTextField = new MTextField('grdTextField', null, '', 3);
    //    $flds[]              = $functionDescription; 

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridColumn( _M('Id', $module),                   'center', true, 
                          null, true, null, true ),
                          new MGridColumn(null),
                          new MGridColumn( _M('Curricular component', $module), 'left', true, 
                          null, true, null, true ),
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridColumn(null),
                          new MGridControl($grdTextField, _M('Presences in ', $module) . $filters->month, 'center', true)
                        );


        $url = $MIOLO->getActionURL($module,"$home:search");

        
 
        parent::__construct( null, $columns, $url, 0, 0, 'journeyAidCertified' );

        $this->setIsScrollable();
        $this->eventHandler();

    }

}

