/**
 * Grid used by form to display search results
 **/
class GrdComplementaryActivitiesSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:complementaryActivities:complementaryActivitiesRegister';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array(
                          new MGridColumn( null ), 
                          new MGridColumn( _M('Description', $module),    'left', true, null, true, null, false ),
                          new MGridColumn( _M('Total hours', $module),    'right', true, null, true, null, false ),
                          new MGridColumn( _M('Credits total', $module),  'right', true, null, true, null, false ),
                          new MGridColumn( _M('Note', $module), 'left', true, null, true, null, false ),
                          new MGridColumn( _M('Concept', $module),        'right', true, null, true, null, false ),
                          new MGridColumn( _M('Period', $module),      'right', true, null, true, null, false ),
                          new MGridColumn( _M('Complementary activity category id', $module), 'right', true, null, false, null, false),
                          new MGridColumn( _M('Complementary activity category', $module), 'left', true, null, true, null, false ),
                          new MGridColumn( _M('Contract id', $module), 'right', true, null, false, null, false)
                        );

        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( null, $columns, $url, 0, 0, 'gridComplementaryActivitiesSearch');

        $this->setRowMethod('GrdComplementaryActivitiesSearch', 'myRowMethod');


        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);

        if ( isSet($filters) )
        {
            foreach ( $filters as $k => $v )
            {
                $opts[$k] = $v;
            }
        }

        $opts = array('function'=>'update',
                      'complementaryActivitiesId'=>'%0%'
                     );
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'                  => 'delete',
                      'complementaryActivitiesId' => '%0%',
                      'contractId'                => '%9%',
                      'event'                     => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );


        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
        $this->setTitle(_M('Complementary activities', $module));

        $this->setLinkType('hyperlink');

        $this->eventHandler();
    }

    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();

        if ( $row[0] == '' )
        {
            $actions[0]->enabled = false;
            $actions[1]->enabled = false;
        }
        else
        {
            $actions[0]->enabled = true;
            $actions[1]->enabled = true;
        }
    }
}

