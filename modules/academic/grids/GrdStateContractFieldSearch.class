/**
 * Grid used by form to display search results
 **/
class GrdStateContractFieldSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:config:stateContractField';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          //new MGridColumn( _M('State contract field id',          $module), 'right', true, null, true, null, true ),
                          new MGridColumn( NULL ),
                          new MGridColumn( _M('State contract id',                $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('State contract description',       $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('State contract field description', $module), 'left',  true, null, true, null, true ),
                          //new MGridColumn( _M('Rows',                             $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( NULL ),
                          //new MGridColumn( _M('Columns',                          $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( NULL ),
                          //new MGridColumn( _M('Is lookup',                        $module), 'left',  true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                          new MGridColumn( NULL ),
                          //new MGridColumn( _M('Auto complete query',              $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( NULL ),
                          //new MGridColumn( _M('Lookup query',                     $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( NULL ),
                          //new MGridColumn( _M('Field validator',                  $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( NULL ),
                          new MGridColumn( _M('Is it required',                      $module), 'left',  true, null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true ),
                        );

        $opts = array('function'=>'update',
                      'stateContractFieldId'=>'%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'stateContractFieldId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridStateContractField' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

?>
