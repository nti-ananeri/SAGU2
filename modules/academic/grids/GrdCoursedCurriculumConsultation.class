/**
 * Grid used by form to display search results
 **/
class GrdCoursedCurriculumConsultation extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO          = MIOLO::getInstance();
        $module         = $MIOLO->getCurrentModule();
        $home           = $MIOLO->getCurrentAction();
   
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
             
        $url_pupils = $MIOLO->getActionURL($module, $home, null, array('curriculumId'=>'#0#',
                                                                       'event'=>'listPupils'));

        $columns = array ( new MGridColumn( _M('Curriculum Id', $module), 'right', true, null, false, null, true ),
                           new MGridColumn(_M('Curricular component id', $module), 'right', true, null, true, null, true),
                           //new MGridColumn( _M('Curricular component version', $module), 'right', true, null, true, null, true ),
                           new MGridColumn( _M('Curricular component', $module), 'left', false, null, true, null, true ),
                           new MGridColumn( _M('Semester', $module), 'right', true, null, true, null, true ),
                           new MGridColumn( _M('Pupils total', $module), 'right', true, null, true, null, true )
                         );

        $url = $MIOLO->getActionURL( $module, $home );
        
        parent::__construct( $filters, $columns, $url, 0/*LISTING_NREGS*/, 0, 'gridCoursedCurriculumConsultation' );

        
        $this->addActionIcon(_M('List pupils', $module), 'select.png', $url_pupils);
        
        $this->eventHandler();
        
    }
}


