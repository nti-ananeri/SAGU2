/**
 * Grid used by form to display search results
 **/
class GrdGroupEnrolledPeople extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();

        $groupId = MIOLO::_request('groupId');

        $home   = 'main:process:group:groupEnrolledPeople';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn(null),
                          new MGridColumn( _M('Course',      $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Person id',   $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Person name', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('E-mail',      $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Residential Phone', $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Work Phone',  $module), 'right', true, null, true, null, true ),
                          new MGridColumn( _M('Cell Phone',  $module), 'right', true, null, true, null, true ),
                        );

        $url = $MIOLO->getActionURL($module, $home, null, array('groupId' => $groupId));
        parent::__construct( null, $columns, $url, 0 /*LISTING_NREGS*/, 0, 'gridGroupEnrolledPeople' );

        $this->setIsScrollable();

        $this->eventHandler();

    }
}

