/**
 * Grid used by form to display search results
 **/
class GrdExamDateSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:examDate';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Learning period id', $module), 'right', true, null, true,  null, true ),
                          new MGridColumn( _M('Course id', $module) . ' / ' . _M('version', $module),          'right', true, null, true,  null, true ),
                          new MGridColumn( _M('Course name', $module),        'left',  true, null, true,  null, true ),
                          new MGridColumn( _M('Unit id', $module),            'right', true, null, false, null, true ),
                          new MGridColumn( _M('Unit', $module),               'left',  true, null, true,  null, true ),
                          new MGridColumn( _M('Turn id', $module),            'right', true, null, false, null, true ),
                          new MGridColumn( _M('Turn', $module),               'left',  true, null, true,  null, true ),
                          new MGridColumn( _M('Week day id', $module),         'right', true, null, false, null, true ),
                          new MGridColumn( _M('Week day', $module),            'left',  true, null, true,  null, true ),
                          new MGridColumn( _M('Exam date', $module),          'left',  true, null, true,  null, true )
                        );

        $opts = array('function'=>'update',
                      'learningPeriodId'=>'%0%',
                      'weekDayId'=>'%7%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'learningPeriodId'=>'%0%',
                      'weekDayId'=>'%7%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL( $module, $home, null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridExamDate' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

?>
