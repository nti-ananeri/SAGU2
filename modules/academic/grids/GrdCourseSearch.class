/**
 * Grid used by form to display search results
 **/
class GrdCourseSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:course:course';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Code', $module),                        'right', true, null, true, null, true ),
                          new MGridColumn( _M('Name', $module),                        'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Formation level', $module),             'right', true, null, true, null, true ),
                          new MGridColumn( _M('Formation level description', $module), 'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Short name', $module),                  'left',  true, null, true, null, true ),
			              new MGridColumn( _M('Acronym', $module),                     'left', true, null, true, null, true ),
		  	              new MGridColumn( _M('Center', $module),                      'right', true, null, true, null, true ),
		  	              new MGridColumn( _M('Center name', $module),                 'left', true, null, true, null, true ),
			              new MGridColumn( _M('Begin date', $module),                  'left', true, null, true, null, true ),
                          new MGridColumn( _M('Inep', $module),                        'right',  false, null, true, null, true )
                        );

        $opts = array('function' => 'update',
                      'courseId' => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function' => 'delete',
                      'courseId' => '%0%',
                      'event'    => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridCourse' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

?>
