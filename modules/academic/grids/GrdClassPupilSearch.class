/**
 * Grid used by form to display search results
 **/
class GrdClassPupilSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:class:classPupil';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false         
         */
        $columns = array( 

                          new MGridColumn( _M('Class id',           $module), 'left',   true,  null, true,  null, true),
                          new MGridColumn( _M('Class name',         $module), 'left',   true,  null, true,  null, true),
                          new MGridColumn( _M('Contract id',        $module), 'center', true,  null, true,  null, true),
                          new MGridColumn( _M('Course id',          $module) . ' / ' . _M('version', $module), 'right', true,  null, true,  null, true),
                          new MGridColumn( _M('Course',             $module), 'left',   true,  null, true,  null, true),
                          new MGridColumn( _M('Person Id',          $module), 'right',  true,  null, true,  null, true),
                          new MGridColumn( _M('Name',               $module), 'left',   true,  null, true,  null, true),
                          new MGridColumn( _M('Class initial date', $module), 'center', true,  null, true,  null, true),                          
                          new MGridColumn( _M('Begin date',         $module), 'center', true,  null, true,  null, true),
                          new MGridColumn( _M('End date',           $module), 'center', true,  null, true,  null, true)
                        );

        $opts = array('function'   => 'update',
                      'classId'    => '%0%',
                      'contractId' => '%2%',
                      'beginDate'  => '%8%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        $opts = array('function'   => 'delete',
                      'classId'    => '%0%',
                      'contractId' => '%2%',
                      'beginDate'  => '%8%',
                      'event'                          => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridClassPupil' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
        $this->setIsScrollable();

        $this->eventHandler();

    }

}

