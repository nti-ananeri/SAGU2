/**
 * Grid used by form to display search results
 **/
class GrdPupilListingOp1 extends MGrid
{
    var $totalFooter;

    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:pupilListing';

        $returnPath = urlencode($home);

        $returnData = urlencode(serialize(array('filter' => MIOLO::_request('filter'), 'reportOption' => MIOLO::_request('reportOption'))));

        $url_age    = $MIOLO->getActionURL($module, 'main:report:listenrolledbyage', null, array('periodId'=>'#0#', 'courseId'=>'#1#', 'unitId'=>'#6#', 'courseVersion'=>'#2#', 'turnId'=>'#4#', 'returnPath' => $returnPath, 'returnData' => $returnData));

        $url_pupil  = $MIOLO->getActionURL($module, 'main:report:listcourseenrolledpupils', null, array('periodId'=>'#0#', 'courseId'=>'#1#', 'unitId'=>'#6#', 'courseVersion'=>'#2#', 'turnId'=>'#4#', 'returnPath' => $returnPath, 'returnData' => $returnData));

        $url_enrollFromCurricularComponent = $MIOLO->getActionURL($module, 'main:report:listEnrollFromCurricularComponent', null, array('periodId'=>'#0#', 'courseId'=>'#1#', 'courseUnitId'=>'#6#', 'courseVersion'=>'#2#', 'courseTurnId'=>'#4#'));


        $columns = array( new MGridColumn(null),
                          new MGridHyperlink( _M('Code', $module), $url_enrollFromCurricularComponent, null, true, null, false),
                          new MGridColumn(_M('Course version', $module), 'left', true, null, true, null, false),
                          new MGridHyperlink( _M('Course', $module), $url_pupil, null, true, null, false ),
                          new MGridColumn(null),
                          new MGridColumn(_M('Turn', $module),   'left',  true, null, true, null, false),
                          new MGridColumn(null),
                          new MGridColumn( _M('Unit', $module),   'left',  true, null, true, null, false ),
                          new MGridHyperlink( _M('Age', $module), $url_age, null, true, null, false),
	            		  new MGridColumn( _M('Quantity', $module), 'center',  true, null, true, null, false )
                        );

        $url = $MIOLO->getActionURL( $module, $home );

        parent::__construct( $filters, $columns, $url, 0/*LISTING_NREGS*/, 0, 'gridCourse' );

        //$this->setIsScrollable();
        //$this->addActionUpdate( $href_edit );
        //$this->addActionDelete( $href_delete );
        $this->setRowMethod($this, 'myRowMethod');
        $this->setFooter('<b>' . _M('Total of pupils', $module) . ':</b>&nbsp;');
        $this->eventHandler();
    }

    public function myRowMethod($i, $row, $actions, $columns )
    {
        $this->totalFooter += $row[9];
    }

    function generateFooter( )
    {
        $MIOLO  = MIOLO::getInstance( );
        $module = $MIOLO->getCurrentModule( );

        $controls = array( new mText( '', $this->totalFooter));
        $controls = array_merge( parent::generateFooter(), $controls);
        return $controls;
    }

}

