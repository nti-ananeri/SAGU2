class myMGridActionIcon extends MGridActionIcon
{
    var $onclick;
    
    function generate( )
    {
        $control = parent::generate( );
        
        if ( $this->enabled  )
        {
            $control->addAttribute('onclick', $this->onclick);
            if ( ! $this->href )
            {
                $control->location = '';
            }
        }
        return $control;
    }
}


/**
 * Grid used by form to display search results
 **/
class GrdExaminationFrequence extends MGrid
{
    var $url_group;
    var $url_group2;
    var $url_group3;
    var $url_group4;
    var $formData;
    
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO          = MIOLO::getInstance();
        $module         = 'academic';
        $home           = 'main:document:examinationFrequence';
        $this->formData = $filters;

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array ( 
                           new MGridColumn( _M('Period', $module), 'right',   true, null, true, null, true ),
                           new MGridColumn( _M('Class', $module), 'left',   true, null, true, null, true ),
                           new MGridColumn( _M('Turn', $module), 'C',   true, null, true, null, true ),
                           new MGridColumn( NULL ),
                           new MGridColumn( _M('Professor', $module), 'left',   true, null, true, null, true ),
                           new MGridColumn( NULL ),
                           new MGridColumn( _M('Curricular component', $module), 'left',   true, null, true, null, true )
                         );


        $url_group = $MIOLO->getActionURL($module, $home, null, array('event'=>'tbBtnPrint_click','optionId'=>'1', 'function'=>'print','periodId'=>'#0#', 'classId'=>'#1#', 'professorId'=>'#3#', 'curricularComponentId'=>'#5#', 'courseId'=>MForm::getFormValue('courseId')));
        $url_group2 = $MIOLO->getActionURL($module, $home, null, array('event'=>'tbBtnPrint_click','optionId'=>'2', 'function'=>'print','periodId'=>'#0#', 'classId'=>'#1#', 'professorId'=>'#3#', 'curricularComponentId'=>'#5#', 'courseId'=>MForm::getFormValue('courseId')));
        $url = $MIOLO->getActionURL( $module, $home );
        parent::__construct( null, $columns, $url, 0/*LISTING_NREGS*/, 0, 'gridExaminationFrequence' );

        $this->addActionIcon(_M('Examination frequence', $module), 'select.png', $url_group);
        $this->addActionIcon(_M('Daily class', $module), 'select.png', $url_group2);
        //$this->addActionIcon(_M('Lessons content', $module), 'select.png', $url_group3);
        //$this->actions[] = new myMGridActionIcon( $this, 'select.png', $url_group4, _M('Final result act', $module));
        
        $this->setRowMethod( $this, 'myRowMethod');
        $this->linktype = 'hyperlink';
        
        $this->eventHandler();
        
    }
    
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        
        $opts['emissionDate'] = $this->formData->emissionDate;
        $opts['printMode']    = $this->formData->printMode;
        $opts['groupId']      = $columns[0]->control[$i]->value;
        $opts['event']        = 'finalResultAct';
        $fAction              = $MIOLO->getActionURL($module, $action, null, $opts);

        $actions[3]->onclick = 'finalResultActForm( event , \'' . $fAction . '\')';
        $actions[3]->href = 'javascript:void(0)';
    }
}


