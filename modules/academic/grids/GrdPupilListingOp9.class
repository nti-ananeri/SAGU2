/**
 * Grid used by form to display search results
 **/
class GrdPupilListingOp9 extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:report:pupilListing';

        $columns = array( new MGridColumn(_M('Offered curricular component id', $module),   'right', true, null, true, null, false ),
                          new MGridColumn(_M('Curricular component id', $module), 'right', true, null, true, null, false), 
                          new MGridColumn(_M('Curricular component', $module),   'left',  false, null, true, null, false ),
                          new MGridColumn(_M('Schedule', $module) . '(s)', 'left', false, null, true, null, false),
                          new MGridColumn(_M('Professor', $module) . '(s)', 'left', false, null, true, null, false),
                          new MGridColumn(_M('Enrolled', $module), 'right', true, null, true, null, false),
                          new MGridColumn(_M('Approved', $module), 'right',  true, null, true, null, false ),
	            		  new MGridColumn(_M('Disapproved', $module), 'right',  true, null, true, null, false ),
	            		  new MGridColumn(_M('Desisting', $module), 'right', true, null, true, null, false),
	            		  new MGridColumn(_M('Cancelled', $module), 'right', true, null, true, null, false)
                        );

        $url = $MIOLO->getActionURL( $module, $home, null, $opts );

        parent::__construct( $filters, $columns, $url, 0/*LISTING_NREGS*/, 0, 'gridPupilListingOp9' );

        //$this->setIsScrollable();
        $this->eventHandler();
    }

}

