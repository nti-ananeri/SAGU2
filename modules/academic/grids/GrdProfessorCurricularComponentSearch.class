/**
 * Grid used by form to display search results
 **/
class GrdProfessorCurricularComponentSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:curricularComponent:professorCurricularComponent';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 

                          new MGridColumn( _M('Professor curricular component id', $module), 'right',  true,  null, false, null, true),
                          new MGridColumn( _M('Professor id', $module),                      'right',  true,  null, true,  null, true),
                          new MGridColumn( _M('Professor name', $module),                    'left',   true,  null, true,  null, true),
                          new MGridColumn( _M('Curricular component id', $module) . ' / ' . _M('version', $module),           'right',  true,  null, true,  null, true),
                          new MGridColumn( _M('Curricular component name', $module),         'left',   false, null, true,  null, true),
                        );

        $opts = array('function'                       => 'update',
                      'professorCurricularComponentId' => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );

        $opts = array('function'                       => 'delete',
                      'professorCurricularComponentId' => '%0%',
                      'event'                          => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridProfessorCurricularComponent' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );
        $this->setIsScrollable();

        $this->eventHandler();

    }

}

