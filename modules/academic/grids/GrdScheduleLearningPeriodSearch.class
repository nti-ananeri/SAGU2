/**
 * Grid used by form to display search results
 **/
class GrdScheduleLearningPeriodSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = $MIOLO->getCurrentModule();
        $home   = 'main:register:scheduleLearningPeriod';

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                         new MGridColumn(null),
                         new MGridColumn( _M('Learning period id', $module),        'right', true, null, false, null, true ),
                         new MGridColumn( _M('Description', $module),       'c', true, null, true, null, true ),
                         new MGridColumn( _M('Turn', $module),       'center', true, null, true, null, true ),
                         new MGridColumn( _M('Begin date', $module),         'left', true, null, true, null, true ),
                         new MGridColumn( _M('Begin hour', $module),         'left', true, null, true, null, true ),
                         new MGridColumn( _M('End date', $module),  'left', true, null, true, null, true ),
                         new MGridColumn( _M('End hour', $module),  'left', true, null, true, null, true ),
                         new MGridColumn( _M('minimum number lessons', $module),       'left', true, null, true, null, true ),
                         new MGridColumn( _M('Number hours lessons', $module),       'left', true, null, true, null, true ),
                        );

        $opts = array('function'=>'update',
                      'scheduleLearningPeriodId'=>'%0%'
                     );
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'=>'delete',
                      'scheduleLearningPeriodId'=>'%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL( $module, "$home:search", null, $opts );
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridScheduleLearningPeriod' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

