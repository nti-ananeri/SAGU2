/**
 * Grid used by form to display search results
 **/
class GrdDegreeSearch extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:register:degree';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */

        $columns = array( 
                          new MGridColumn( _M('Degree id', $module),      'left', true, null, true, null, true ),
                          new MGridColumn( _M('Period id', $module),      'left', true, null, true, null, true ),
                          new MGridColumn( _M('Course name', $module),    'left', true, null, true, null, true ),
                          new MGridColumn( _M('Course version', $module), 'left', true, null, true, null, true ),
                          new MGridColumn( _M('Unit', $module),           'left', true, null, true, null, true ),
                          new MGridColumn( _M('Turn', $module),           'left', true, null, true, null, true ),
                          new MGridColumn( _M('Description', $module),    'left',  false, null, true, null, true ),
                          new MGridColumn( _M('Final date', $module),     'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Limit date', $module),     'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Degree number', $module),  'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Weight', $module),         'left',  true, null, true, null, true ),
                          new MGridColumn( _M('Concept', $module),        'left',  true, null, true, array( DB_TRUE => _M('Yes', $module), DB_FALSE => _M('No', $module) ), true )
                        );

        $opts = array('function' => 'update',
                      'degreeId' => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function' => 'delete',
                      'degreeId' => '%0%',
                      'event'    => 'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );

        // this foreach is necessary until the getActionURL function is
        // able to handle an object parameter
        unset($opts);
        foreach ( $filters as $k => $v )
        {
            $opts[$k] = $v;
        }
        $url = $MIOLO->getActionURL($module,"$home:search",null,$opts);
        parent::__construct( null, $columns, $url, LISTING_NREGS, 0, 'gridDegree' );

        $this->setIsScrollable();

        $this->addActionUpdate( $href_edit );
        $this->addActionDelete( $href_delete );

        $this->eventHandler();

    }

}

