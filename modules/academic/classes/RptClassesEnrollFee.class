<?php

/**
 * Default defines 
 * To report identification
 */
define('REPORT_ID', 'AC012'); 
define('FPDF_FONTPATH', $MIOLO->getModulePath('basic', '/classes/fpdf/font/'));

$MIOLO = MIOLO::getInstance();
$module = MIOLO::getCurrentModule();
$MIOLO->Uses('classes/fpdf/fpdf.php', 'basic');

/**
 * Create header and footer information
 */
class PDF extends FPDF
{
    var $type = 0;
    /**
     * Defines the footer for this report
     */
    public function Footer()
    {
        $module = MIOLO::getCurrentModule();
        $this->setY(-15);
        $pn = $this->PageNo().'/{nb}';
        $this->cell(190, 1, '', 'B', 1);
        $this->ln();
        
        $this->setFont(DEFAULT_REPORT_FONT, '', 8);
               
        $this->setFont(DEFAULT_REPORT_FONT, 'I', 8);
        $this->cell(50, 4, $text, 0, 0);
        $this->cell(140, 4, _M('REPORT @1 ', $module, REPORT_ID).' '._M('Page @1', $module, $pn), 0, 0, 'R');
        $this->ln();
    }

    /**
     * Defines the header for this report
     */
    public function Header()
    {
        $module = MIOLO::getCurrentModule();
        $MIOLO  = MIOLO::getInstance();
        
        $busCompany  = $MIOLO->getBusiness('basic', 'BusCompany');
        $company     = $busCompany->getCompany(DEFAULT_COMPANY_CONF);     //get company data
        
        $this->setFont(DEFAULT_REPORT_FONT, 'B', 12);
        $this->Image(SAGUFile::getPhotoPath($company->personId),10, 10, 25, PHOTO_FORMAT);
        $this->setY(20);
    }
}


/**
 * PDF extension to generate report
 */
class RptClassesEnrollFee
{
    /**
     * Method to generate the report
     */
    public function RptClassesEnrollFee($data = null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();
        
        $business    = $MIOLO->getBusiness($module, 'BusClass');
        $reportData  = $business->getClasPupilEnrollFeeStatus($data->periodId);
        
        $pdf = new PDF();
        $pdf->aliasNbPages();

        if ( count($reportData) > 0 )
        {
            $count = 0;
            foreach ( $reportData as $row )
            {
                list ( $classId,
                       $className,
                       $contractId,
                       $personId,
                       $personName,
                       $courseId,
                       $courseName,
                       $courseVersion,
                       $turnId,
                       $turnDescription,
                       $unitId,
                       $unitDescription,
                       $isOpen ) = $row;

                //header
                if ( $classId != $oldClassId || $r >= 46 )
                {
                    //totalizadores
                    if ( $count != 0 && $classId != $oldClassId )
                    {
                        $pdf->setFont(DEFAULT_REPORT_FONT, 'BI', 11);
                        $pdf->cell(110,5, '', 0, 0, 'L');
                        $pdf->cell(80,5, _M('Total', $module) . ': ' . $count, 0, 0, 'L');
                        $acum += $count;
                        $count = 0;
                    }

                    $pdf->addPage('P', 'mm', 'A4');
                    $pdf->setY(20);
                    $pdf->setFont(DEFAULT_REPORT_FONT, 'B', 12);
                    $pdf->cell(190,5, _M('Class', $module) . ': ' . $className, 0, 0, 'C');
                    $pdf->ln();
                    $pdf->cell(190,5, _M('Period', $module) . ': ' . $data->periodId, 0, 0, 'C');
                    $pdf->ln();
                    $pdf->setY(40);
                    $pdf->cell(110,5, _M('Person', $module), 0, 0, 'C');
                    $pdf->cell(80,5, _M('Course', $module), 0, 0, 'C');
                    $pdf->ln();
                    $oldClassId = $classId;
                    $r = 0;
                }

                //imprime os dados
                if ( $isOpen == 'f' )
                {
                    $count++;
                    $pdf->setFont(DEFAULT_REPORT_FONT, '', 10);
                    $pdf->cell(110,5, $personId . ' - ' . $personName, 0, 0, 'L');
                    $pdf->cell(80,5, $courseId . '/' . $courseVersion . ' - ' . $courseName . ' - ' . $turnDescription . ' - ' . $unitDescription, 0, 0, 'L');
                    $pdf->ln();
                    $r++;
                }
            }

            //totais da última página
            $pdf->setFont(DEFAULT_REPORT_FONT, 'BI', 11);
            $pdf->cell(110,5, '', 0, 0, 'L');
            $pdf->cell(80,5, _M('Total', $module) . ': ' . $count, 0, 0, 'L');
            $acum += $count;
            $count = 0;

            //página totalizadora
            $pdf->addPage('P', 'mm', 'A4');
            $pdf->setY(20);
            $pdf->setFont(DEFAULT_REPORT_FONT, 'B', 12);
            $pdf->cell(190,5, _M('Period', $module) . ': ' . $data->periodId, 0, 0, 'C');
            $pdf->ln();
            $pdf->setY(40);
            $pdf->setFont(DEFAULT_REPORT_FONT, 'BI', 11);
            $pdf->cell(110,5, '', 0, 0, 'L');
            $pdf->cell(80,5, _M('Total', $module) . ': ' . $acum, 0, 0, 'L');
        }

        $pdf->close();
        $pdf->output();
    }
}

?>
