/**
 * PDF extension to generate report
 */
class RptFinalResultAct
{
    var $listSpace;    
    
    public function RptFinalResultAct($data = null)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = 'academic';
            
        $business    = $MIOLO->getBusiness($module, 'BusAttendance');
               
        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();
        //$pdf->personName = $rdata->name;
        // First page
        $pdf->setTopMargin(1);
        
        if (count($data->groupId) > 0)
        {
            foreach ($data->groupId as $group)
            {
                $this->listSpace = 100;
                
                $pdf->addPage('P', 'mm', 'A4');
                
                if (count($group) > 1)
                {
                    list ( $groupId,
                            $name,
                            $weekDayId,
                            $unitId,
                            $turnId,
                            $scheduleId
                            ) = $group;
                }
                else
                {
                    $groupId = $group[0];
                }
                        
                $reportData                    = $business->getGroupData($groupId);
                $reportData->periodId          = $data->periodId; 
                $reportData->emissionDate      = $data->emissionDate;
                $reportData->learningDays      = $data->learningDays;
                $reportData->finalVerification = $data->finalVerification;
                $reportData->courseId          = $data->courseId;      
				$reportData->groupId           = $data->groupId;    
				$reportData->courseVersion     = $data->courseVersion;     
                
                $reportData->pupils = $business->listGroupEnrolledPupils($groupId);
                        
                $pdf->finalResultActHeader($reportData);
                        
                $pdf->finalResultActSubHeader($reportData);

                $pdf->finalResultActColumns();
              
				$businessFinalNote = $MIOLO->getBusiness($module, 'BusEnroll');

				$businessGroupEnroll = $MIOLO->getBusiness($module, 'BusAttendance');
				$groupEnroll         = $businessGroupEnroll->listGroupEnrolledPupils($reportData->groupId[0][0]);

                //Pupils listing
                if (count($reportData->pupils) > 0)
                {
				    $count = 1;
                    foreach ($reportData->pupils as $pupil)
                    {
                        list ($enrollId,
                              $personId,
                              $personName,
                              $courseId,
                              $statusId,
                              $dateCancellation) = $pupil;

 									
       				    $finalNote = $businessFinalNote->getEnroll($enrollId);
			
                        if ($this->listSpace < 5)
                        {
                            $pdf->finalResultActFooter();
                            $pdf->addPage('P', 'mm', 'A4');
                            $pdf->finalResultActHeader($reportData);
                            $pdf->finalResultActColumns();
                            $this->listSpace = 125;
                        }

                        if ( ($statusId == ENROLL_STATUS_CANCELLED) ||
                             ($statusId == ENROLL_STATUS_DESISTING) )
                        {
                            $dateCancellation = 'C';
                            $pdf->finalResultActPupilLine('*', $personId, $personName, $courseId, $finalNote, $dateCancellation, $reportData);    
                        }                        
						elseif ( ($statusId == ENROLL_STATUS_APPROVED) || 
							     ($statusId == ENROLL_STATUS_EXCUSED) )
						{
							$dateCancellation = 'A';
                           	$pdf->finalResultActPupilLine($count, $personId, $personName, $courseId, $finalNote, $dateCancellation, $reportData);
							$count++;
						}
                           
						elseif ( ($statusId == ENROLL_STATUS_DISAPPROVED) ||
							     ($statusId == ENROLL_STATUS_DISAPPROVED_FOR_LACKS) ||
                                 ($statusId == ENROLL_STATUS_ENROLLED) )
						{
								$dateCancellation = 'N/A';
                            	$pdf->finalResultActPupilLine($count, $personId, $personName, $courseId, $finalNote, $dateCancellation, $reportData);
							$count++;
						}
                        
						else
                        {
                            $pdf->finalResultActPupilLine($count, $personId, $personName, $courseId, $finalNote, null, $reportData);
                            $count++;
                        }
                         
							$this->listSpace = $this->listSpace - 5;
                    }
                }
                $pdf->finalResultActSubFooter();
                $pdf->finalResultActFooter();
            }
        }
        $pdf->close();
        $pdf->output();
    }
}
    
