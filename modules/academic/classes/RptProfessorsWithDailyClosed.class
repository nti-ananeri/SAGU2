<?php

/**
 * Default defines 
 * To report identification
 */
define('REPORT_ID', 'AC011'); 
define('FPDF_FONTPATH', $MIOLO->getModulePath('basic', '/classes/fpdf/font/'));

$MIOLO = MIOLO::getInstance();
$module = MIOLO::getCurrentModule();
$MIOLO->Uses('classes/fpdf/fpdf.php', 'basic');

/**
 * Create header and footer information
 */
class PDF extends FPDF
{
    var $type = 0;

    /**
     * Defines the footer for this report
     */
    public function Footer()
    {
    }

    /**
     * Defines the header for this report
     */
    public function Header()
    {
        $module = MIOLO::getCurrentModule();
        $MIOLO  = MIOLO::getInstance();

        $busCompany  = $MIOLO->getBusiness('basic', 'BusCompany');
        $company     = $busCompany->getCompany(DEFAULT_COMPANY_CONF); //get company data

        $this->Image(SAGUFile::getPhotoPath($company->personId), 10, 10, 20, PHOTO_FORMAT);

        $this->setFont(DEFAULT_REPORT_FONT, 'B', 14);
        $this->cell(0, 15, $company->name, 0, 0, 'C');
        $this->ln();

        $this->setY(45);
    }
}


/**
 * PDF extension to generate report
 */
class RptProfessorsWithDailyClosed
{
    /**
     * Method to generate the report
     */
    public function RptProfessorsWithDailyClosed($periodId, $isClosed)
    {
        $MIOLO       = MIOLO::getInstance();
        $module      = MIOLO::getCurrentModule();

        // Generating PDF file
        $pdf = new PDF();
        $pdf->aliasNbPages();

        $pdf->addPage('P', 'mm', 'A4');
        //faz parte do cabeçalho da página
        $pdf->setY(20);
        $pdf->setFont(DEFAULT_REPORT_FONT, 'I', 12);
        if ( $isClosed == 'f' )
        {
            $pdf->cell(0, 15, _M('Report of professors with daily not closed', $module), 0, 0, 'C');
        }
        else
        {
            $pdf->cell(0, 15, _M('Report of professors with daily closed', $module), 0, 0, 'C');
        }
        $pdf->setY(45);


        $busGroup = $MIOLO->getBusiness($module, 'BusGroup');
        $result   = $busGroup->getProfessorsWithDailyClosed($periodId, $isClosed);

        if ( count($result)>0 )
        {
            foreach ( $result as $row )
            {
                list ( $professorId,
                       $professorName,
                       $curricularComponentId,
                       $curricularComponentVersion,
                       $curricularComponent,
                       $email ) = $row;

                $pdf->setFont(DEFAULT_REPORT_FONT, 'B', 12);
                $pdf->cell(40, 0, _M('Professor', $module) . ':', 0, 0, 'R');

                $pdf->setFont(DEFAULT_REPORT_FONT, '', 10);
                $pdf->cell(150, 0, $professorId . ' - ' . $professorName . ' (' . $email . ')', 0, 0, 'L');

                $pdf->ln(5);

                $pdf->setFont(DEFAULT_REPORT_FONT, 'B', 12);
                $pdf->cell(40, 0, _M('Curricular component', $module) . ':', 0, 0, 'R');

                $pdf->setFont(DEFAULT_REPORT_FONT, '', 10);
                $pdf->cell(150, 0, $curricularComponentId . '/' . $curricularComponentVersion . ' - ' . $curricularComponent, 0, 0, 'L');

                $pdf->ln(10);
                
                if ( $pdf->getY() > 280 )
                {
                    $pdf->addPage('P', 'mm', 'A4');
                    //faz parte do cabeçalho da página
                    $pdf->setY(20);
                    $pdf->setFont(DEFAULT_REPORT_FONT, 'I', 12);
                    if ( $isClosed == 'f' )
                    {
                        $pdf->cell(0, 15, _M('Report of professors with daily not closed', $module), 0, 0, 'C');
                    }
                    else
                    {
                        $pdf->cell(0, 15, _M('Report of professors with daily closed', $module), 0, 0, 'C');
                    }
                    $pdf->setY(45);
                }
            }
        }

        //Close and generate the document        
        $pdf->close();
        $pdf->output();
    }
}

?>
