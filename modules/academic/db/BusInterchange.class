               $interchange->originCountryName,
//                $interchange->originCountryName,
               $interchange->originInstitutionId,
               $interchange->originInstitutionName,
//                $interchange->originInstitutionName,
               $interchange->destinationCountryId,
               $interchange->destinationCountryName,
//                $interchange->destinationCountryName,
               $interchange->destinationInstitutionId,
