class BusinessAcademicBusCurriculumType extends Business
{

    /**
     * Creates a connection with the specified database. 
     * If no database is specified, assume the current module name.
     *
     * @author Jamiel Spezia [jamiel@solis.coop.br]
     *
     * @param $dbname (string): Specifies the database name to which we want to connect.
     *
     * @return (object): A database object.
     *
     */
    function getDatabase($dbname=null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic', 'sagu');
        $module = is_null($module) ? 'academic' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    function listCurriculumType()
    {
        $sql = 'SELECT A.curriculumTypeId,
                       A.description,
                       A.shortDescription
                  FROM acdCurriculumType A';

        $db     = $this->getDatabase();
        $result = $db->query($sql);
        //$db->close();

        return $result;

    }

    /**
     * Obtain the specified curriculumType id data.
     *
     * @author Jamiel Spezia [jamiel@solis.coop.br]
     *
     * @param $curriculumTypeId (int): Identifier of the curriculum type to be retrieved.
     *
     * @return If the specified courseId exists, returns an object (curriculumType) containing its data. 
     * Otherwise, returns null.
     *
     */
    function getCurriculumType($curriculumTypeId)
    {

        $select = 'SELECT A.description,
                          A.shortDescription,
                          A.userName,
                          TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                          A.ipAddress
                     FROM acdCurriculumType A
                    WHERE A.curriculumTypeId = ? ';

        $db     = $this->getDatabase();

        $result = $db->query(SAGU::prepare($select, $curriculumTypeId));

        //$db->Close();

        $curricular = new acdCurriculumType();

        list ( $curricular->curriculumTypeDescription,
               $curricular->shortDescription,
               $curricular->userName,
               $curricular->dateTime,
               $curricular->ipAddress ) = $result[0];

        return $curricular; 
    }

    /**
     * Search for curriculumType.
     *
     * @author Jamiel Spezia [jamiel@solis.coop.br]
     *
     * @param $data Object containing data to filter the listing.
     *
     * @return An array containing the search results.
     *
     */
    function searchCurriculumType($data=null)
    {

        $select = 'SELECT A.curriculumTypeId,
                          A.description,
                          A.shortDescription
                     FROM acdCurriculumType A ';

        $where  = '';
        unset($args);
        if ( strlen((string)$data->curriculumTypeId) > 0 )
        {
            $where .= '    AND   A.curriculumTypeId = ?';
            $args[] = $data->curriculumTypeId;
        }
        if ( strlen((string)$data->description) > 0 )
        {
            $where .= '    AND   TO_ASCII(A.description) ILIKE TO_ASCII(?)';
            $args[] = $data->description . '%';
        }
        if ( strlen((string)$data->shortDescription) > 0 )
        {
            $where .= '    AND   TO_ASCII(A.shortDescription) ILIKE TO_ASCII(?)';
            $args[] = $data->shortDescription.'%';
        }

        if ( $where != '' )
        {
            $select .= '    WHERE ' . substr($where,8) .
                       ' ORDER BY A.description';

            $db      = $this->getDatabase();
            $result  = $db->query(SAGU::prepare($select,$args));
            //$db->Close();
        }

        return $result;
    }

    /**
     * Insert a new acdCurriculumType.
     *
     * @author Jamiel Spezia [jamiel@solis.coop.br]
     *
     * @param $data (object): Object (curricular) containing the data to be inserted.
     *
     * @return On success, the course id of the inserted record. Otherwise, returns null.
     *
     */
    function insertCurriculumType($data)
    {
        $db = $this->getDatabase();

        $insert = 'INSERT INTO acdCurriculumType
                                ( description,
                                  shortDescription )
                                VALUES (?,?)';

        $args = array(  $data->description,
                        $data->shortDescription);

        $result = $db->execute(SAGU::prepare($insert, $args));
        //$db->Close();
        return $result;
    }

    /**
     * Update the specified curriculumType data.
     *
     * @author Jamiel Spezia [jamiel@solis.coop.br]
     *
     * @param $data (object): Data identifying the course and its new data.
     *
     * @return On succeed, returns true. Otherwise, false.
     *
     */
    function updateCurriculumType($data)
    {
        $update = 'UPDATE acdCurriculumType
                      SET description       = ?,
                          shortDescription  = ?
                    WHERE curriculumTypeId  = ?';

        $db     = $this->getDatabase();

        $args   = array($data->description,
                        $data->shortDescription,
                        $data->curriculumTypeId
                       );

        $sqls = SAGU::prepare($update, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->Close();

        return $result;
    }

    /**
     * Delete the specified curriculumType.
     *
     * @author Jamiel Spezia [jamiel@solis.coop.br]
     *
     * @param $curriculumTypeId (int): Identifier of the curriculumTypeId to be retrieved.
     *
     * @return On succeed, returns true. Otherwise, false.
     *
     */
    function deleteCurriculumType($curriculumTypeId)
    {
        $delete = 'DELETE FROM acdCurriculumType
                    WHERE curriculumTypeId = ? ';


        $db     = $this->getDatabase();

        $result = $db->Execute(SAGU::prepare($delete,$curriculumTypeId));

        //$db->Close();

        return $result;
    }

}

