/**
 * Form to search the trdInvoiceSeries table
 */
class FrmInvoiceSeriesSearch extends MForm
{
    private $home;
    private $module;

    /**
     * Class constructor
     */
    function __construct($data)
    {
        $this->module = 'basic';
        $module = $this->module;

        $this->home   = $data->home;

        parent::__construct(_M('Search',$module));

        // hide the 'Submit' button
        $this->setShowPostButton(false);

        $this->setHelp(get_class($this), MIOLO::getCurrentModule(), MIOLO::getCurrentAction());

        $this->eventHandler();

    }

    /**
     *  Default method to define fields
     */
    public function createFields()
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        $toolBar = new MToolBar('toolBar',$MIOLO->getActionURL($module,$action));
//        $toolBar->disableButton('tbBtnSearch');
        $toolBar->disableButton('tbBtnSave');
        $toolBar->disableButton('tbBtnDelete');
//        $toolBar->disableButton('tbBtnPrint');

        //favoritos
        $enabledImage  = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-20x20.png');
        $disabledImage = $MIOLO->getUI()->GetImageTheme($MIOLO->theme->id, 'bookmark-disabled-20x20.png');
        $url           = $MIOLO->getActionURL($module, $this->home, null, array('function' => 'search', 'event' => 'bookmark'));
        $toolBar->addButton('tbBtnBookmark', _M('Add to bookmarks', 'basic'), $url, null, true, $enabledImage, $disabledImage);

        if ( MIOLO::_request('event') == 'bookmark' )
        {
            $MIOLO->getClass('basic', 'access');
            access::insert('Invoice series', $this->home, 'invoiceseries-16x16.png', true);
        }
        //fim favoritos

        $fields[] = $toolBar;

        $invoiceSeriesIdS = new MTextField('invoiceSeriesIdS', $this->invoiceSeriesIdS->value, _M('Invoice series id',$module), FIELD_ID_SIZE);
        $invoiceSeriesIdS->setJsHint(_M('Enter the invoice series id',$module));
        $fields[] = $invoiceSeriesIdS;

        $invoiceSeriesDescriptionS = new MTextField('invoiceSeriesDescriptionS', $this->invoiceSeriesDescriptionS->value, _M('Description',$module), FIELD_DESCRIPTION_SIZE);
        $invoiceSeriesDescriptionS->setJsHint(_M('Enter the invoice series description',$module));
        $fields[] = $invoiceSeriesDescriptionS;

        $fields[] = new MButton('btnSearch',_M('Search',$module));

        $this->setFields($fields);

        // get filters values
        $filters->invoiceSeriesId    = $this->invoiceSeriesIdS->value;
        $filters->description        = $this->invoiceSeriesDescriptionS->value;

        $grdResults = $MIOLO->getUI()->getGrid($module,'GrdInvoiceSeriesSearch',$filters);
        $business = $this->manager->getBusiness($module,'BusInvoiceSeries');
        $data = $business->searchInvoiceSeries($filters);
        $grdResults->setData($data);

        //###GRID///is_array($data) ? $grdResults->SetScrollHeight(GRID_SCROLL_HEIGHT) : false;

        $this->addField($grdResults);

        if ( $this->isSubmitted() )
        {
            $this->page->onLoad('document.' . $this->name . '.invoiceSeriesIdS.focus();');
        }
        $this->setLabelWidth(FIELD_LABEL_SIZE);
    }

}

?>
