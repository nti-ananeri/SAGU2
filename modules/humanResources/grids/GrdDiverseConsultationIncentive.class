/**
 * Grid used by form to display search results
 **/
class GrdDiverseConsultationIncentive extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        
        $columns = array( 
                          new MGridColumn( _M('Contract id',             $module), 'right',  true,  null, true, null, true),
                          new MGridColumn( _M('Start date',              $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('End date',                $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Value',                   $module), 'right',  true,  null, true, null, true),
                          new MGridColumn( _M('Value is percent',        $module), 'center', true,  null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true),
                          new MGridColumn( _M('Agglutinate',             $module), 'center', true,  null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true),
                          new MGridColumn( _M('Cost center id',          $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Cost center description', $module), 'left',   false, null, true, null, true),
                          new MGridColumn( _M('Incentive type',          $module), 'left',   false, null, true, null, true)
                         );

        
        $url = $MIOLO->getActionURL($module, $action, null, $opts);
        parent::__construct(null, $columns, $url, 0, 0, 'gridDiverseConsultationIncentive');
        $this->setRowMethod('GrdDiverseConsultationIncentive', 'myRowMethod');

        $this->setIsScrollable();
        $this->eventHandler();
    }
   
    /*
     * Event to execute for each row of grid
     */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();
    }
}
