/**
 * Grid used by form to display search results
 **/
class GrdDiverseConsultationPerson extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct($filters)
    {
        $MIOLO  = MIOLO::getInstance();
        $module = MIOLO::getCurrentModule();
        $action = MIOLO::getCurrentAction();
        $home   = 'main:register:wageData';
        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        
        $columns = array( 
                          new MGridColumn( _M('Employee id',    $module), 'right',  true,  null, true, null, true),
                          new MGridColumn( _M('Employee type',  $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Sector',         $module), 'left',   false, null, true, null, true),
                          new MGridColumn( _M('Begin date',     $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('End date',       $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Bank',           $module), 'left',   false, null, true, null, true),
                          new MGridColumn( _M('Branch',         $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Account number', $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Account type',   $module), 'center', false, null, true, SAGU::listAccountTypes(), true),
                          new MGridColumn( _M('Weekly hours',   $module), 'center', true,  null, true, null, true),
                          new MGridColumn( _M('Value hour',     $module), 'center', true,  null, true, array( DB_TRUE => _M('Yes',$module), DB_FALSE => _M('No',$module) ), true),
                          new MGridColumn( _M('Salary',         $module), 'center', true,  null, true, null, true),
                         );

        $opts = array('function'   => 'update',
                      'location'   => 'diverseConsultation',
                      'employeeId' => '%0%');
        $href_edit = $MIOLO->getActionURL( $module, $home, null, $opts );
        $opts = array('function'   => 'delete',
                      'location'   => 'diverseConsultation',
                      'employeeId' => '%0%',
                      'event'=>'tbBtnDelete_click');
        $href_delete = $MIOLO->getActionURL( $module, $home, null, $opts );
        
        $url = $MIOLO->getActionURL($module, $action, null, $opts);
        parent::__construct(null, $columns, $url, 0, 0, 'gridDiverseConsultationPerson');
        $this->setRowMethod('GrdDiverseConsultationPerson', 'myRowMethod');

        $this->addActionUpdate( $href_edit );

        if ( INCREASE_SECURITY_LEVEL == 'NO' )
        {
            $this->addActionDelete( $href_delete );
        }

        $this->setIsScrollable();
        $this->eventHandler();
    }
   
    /*
     * Event to execute for each row of grid
     */
    public function myRowMethod($i, $row, $actions, $columns )
    {
        $MIOLO = MIOLO::getInstance();
    }
}
?>
