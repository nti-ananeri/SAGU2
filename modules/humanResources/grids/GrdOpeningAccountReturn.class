/**
 * Grid used by form to display search results
 **/
class GrdOpeningAccountReturn extends MGrid
{
    /**
     * Class constructor
     **/
    function __construct()
    {
        $MIOLO = MIOLO::getInstance();
        
        $home   = 'main:process:openingAccountReturn';
        $module = MIOLO::_request('module');

        /*
         * MGridColumn constructor parameters:
         *    $title = ''
         *    $align = 'left'
         *    $nowrap = false
         *    $width = 0
         *    $visible = true
         *    $options = null
         *    $order = false
         *    $filter = false
         */
        $columns = array( 
                          new MGridColumn( _M('Sequence', $module),  'center', true, null, true, null, true ),
                          new MGridColumn( _M('Person id', $module), 'center', true, null, true, null, true ),
                          new MGridColumn( _M('Name', $module ),     'left',   true, null, true, null, true ),
                          new MGridColumn( _M('Status', $module ),   'center', true, null, true, null, true ),
                          new MGridColumn( _M('Error in registering client, occurrence', $module ),    'center', true, null, true, null, true ),
                          new MGridColumn( _M('Error in registering bank account, occurrence', $module ),    'center', true, null, true, null, true ),
                          new MGridColumn( _M('Error in registering credit limit, occurrence', $module ),    'center', true, null, true, null, true ),
                        );

   
        parent::__construct( null, $columns, $url, 0, 0, 'gridOpeningAccountReturn' );

        $this->setTitle( _M('Bank return', $module));
        
        $this->setClose(null);
        
        $this->eventHandler();

    }

}

?>
