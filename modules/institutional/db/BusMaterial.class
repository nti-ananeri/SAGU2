/**
 * Class to manipulate the insMaterial table
 **/
class BusinessInstitutionalBusMaterial extends Business
{

    /**
     * Make a connection to the database
     * 
     * @param $module (string): The module whose database we should connect. If null, the actual module database is connected.
     *
     * @return (object): A MIOLO Database connection
     **/
    public function getDatabase($module = null)
    {
        $MIOLO = MIOLO::getInstance();
        $MIOLO->getClass('basic','sagu');
        $module = is_null($module) ? 'institutional' : $module;

        return $MIOLO->getDatabase($module);
    }

    /**
     * List all records from the table handled by the class
     *
     * @param: None
     *
     * @returns (array): Return an array with the entire table
     *
     **/
    public function listMaterial()
    {
        return 'Not implemented';
    }
    
    /**
     * Return a specific record from the database
     *
     * @param $materialId (integer): Primary key of the record to be retrieved
     *
     * @return (object): Return an object of the type handled by the class
     *
     **/
    public function getMaterial($materialId)
    {
        $sql = 'SELECT A.materialId,
                       A.description,
                       A.isPermanent,
                       A.features,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM insMaterial A
                 WHERE A.materialId = ?';

        $db     = $this->getDatabase();
        $result = $db->query(SAGU::prepare($sql, $materialId));
        //$db->close();

        $material = new InsMaterial();

        list ( $material->materialId,
               $material->description,
               $material->isPermanent,
               $material->features,
               $material->userName,
               $material->dateTime,
               $material->ipAddress ) = $result[0];

        return $material; 
    }
    
    /**
     * Do a search on the database table handled by the class
     *
     * @param $filters (object): Search filters
     *
     * @return (array): An array containing the search results
     **/
    public function searchMaterial($filters)
    {
        $sql = 'SELECT A.materialId,
                       A.description,
                       A.isPermanent,
                       A.features,
                       A.userName,
                       TO_CHAR(A.dateTime,\'' . MASK_TIMESTAMP . '\'),
                       A.ipAddress
                  FROM insMaterial A';

        if ( strlen((string)$filters->materialId) > 0 )
        {
            $where .= ' AND A.materialId = ?';
            $args[] = $filters->materialId;
        }
        if ( strlen((string)$filters->description) > 0 )
        {
            $where .= ' AND TO_ASCII(A.description) ILIKE TO_ASCII(?)';
            $args[] = $filters->description . '%';
        }
        if ( strlen((string)$filters->isPermanent) > 0 )
        {
            $where .= ' AND A.isPermanent = ?';
            $args[] = $filters->isPermanent;
        }
        if ( strlen((string)$filters->features) > 0 )
        {
            $where .= ' AND A.features ILIKE ?';
            $args[] = $filters->features . '%';
        }

        unset($result);
        if ( strlen((string)$where) > 0 )
        {
            $sql .= ' WHERE ' . substr($where, 4) . '
                   ORDER BY A.description';

            $db = $this->getDatabase();
            $result = $db->query(SAGU::prepare($sql, $args));
            //$db->close();
        }

        return $result;
    }

    /**
     * Insert a new record
     *
     * @param $data (object): An object of the type handled by the class
     *
     * @return True if succed, otherwise False
     *
     **/
    public function insertMaterial($data)
    {
        $sql = 'INSERT INTO insMaterial
                            (description,
                             isPermanent,
                             features)
                     VALUES (?,?,?)';

        $args = array( 
                       $data->description,
                       $data->isPermanent,
                       $data->features
                     );

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $args));
        //$db->close();

        return $result;
    }

    /**
     * Update data from a specific record
     *
     * @param $data (object): Data which will replace the old record data
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function updateMaterial($data)
    {
        $sql = 'UPDATE insMaterial
                   SET description = ?,
                       isPermanent = ?,
                       features    = ?
                 WHERE materialId  = ?';

        $args = array( 
                       $data->description,
                       $data->isPermanent,
                       $data->features,
                       $data->materialId
                     );
                       
        $db   = $this->getDatabase();
        $sqls = SAGU::prepare($sql, $args);

        for ( $i=0; $i<count($sqls); $i++ )
        {
            $result = $db->execute($sqls[$i]);
        }

        //$db->close();

        return $result;
    }

    /**
     * Delete a record
     *
     * @param $materialId (string): Primary key for deletion
     *
     * @return (boolean): True if succeed, otherwise False
     *
     **/
    public function deleteMaterial($materialId)
    {
        $sql = 'DELETE FROM insMaterial
                      WHERE materialId = ?';

        $db     = $this->getDatabase();
        $result = $db->execute(SAGU::prepare($sql, $materialId));
        //$db->close();

        return $result;
    }

}

